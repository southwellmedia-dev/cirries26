---
/**
 * [PRODUCT_NAME] Features Section Template
 *
 * Light-themed 3-column feature grid section.
 * Typically used as the final content section before CTA.
 *
 * USAGE:
 * 1. Copy to: src/components/sections/[page-name]/[Name]FeaturesSection.astro
 * 2. Replace all [MARKERS] with your values
 * 3. Customize feature content
 *
 * MARKERS TO REPLACE:
 * - [COMPONENT_NAME]: CSS class prefix (e.g., "features")
 * - [PRODUCT_NAME]: Product name for context
 */

import Container from "../../ui/Container.astro";

// ============================================
// PROPS INTERFACE
// ============================================
interface Feature {
  icon: string;        // SVG path data (d attribute)
  title: string;       // Feature title
  description: string; // Feature description
}

interface Props {
  eyebrow?: string;
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  features?: Feature[];
}

// ============================================
// CUSTOMIZE: Default content values
// ============================================
const {
  eyebrow = "[EYEBROW_TEXT]",  // e.g., "Built for Your Environment"
  title = "Engineered for",
  titleHighlight = "Your Success",
  subtitle = "A brief description of how these features benefit your users and fit into the overall product value proposition.",
  features = [
    // CUSTOMIZE: Add your features (typically 3)
    // Icons: Use SVG path data from Lucide, Heroicons, etc.
    {
      icon: "M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z",
      title: "First Feature Title",
      description: "Describe this feature and its benefits. Focus on the value it provides to users and how it differentiates your product."
    },
    {
      icon: "M12 2a10 10 0 1 0 10 10A10 10 0 0 0 12 2zM12 6v6l4 2",
      title: "Second Feature Title",
      description: "Another key feature with its benefits explained. Be specific about what users can achieve with this capability."
    },
    {
      icon: "M13 2L3 14h9l-1 8 10-12h-9l1-8z",
      title: "Third Feature Title",
      description: "Final feature completing your value proposition. Tie it together with the overall product benefits."
    }
  ]
} = Astro.props;
---

<section class="[COMPONENT_NAME]-section" data-theme="light">
  {/* ============================================
      BACKGROUND SYSTEM
      - Subtle gradient
      - Optional watermark/logo
      ============================================ */}
  <div class="section-bg">
    <div class="section-gradient"></div>
    <div class="section-grid"></div>
    {/* Optional: Add watermark logo
    <div class="section-watermark">
      <img src="/path/to/logo.svg" alt="" aria-hidden="true" />
    </div>
    */}
  </div>

  <Container size="xl">
    {/* ============================================
        SECTION HEADER
        ============================================ */}
    <header class="section-header">
      <span class="section-eyebrow">{eyebrow}</span>
      <h2 class="section-title">
        {title} <span class="title-highlight">{titleHighlight}</span>
      </h2>
      {subtitle && (
        <p class="section-subtitle">{subtitle}</p>
      )}
    </header>

    {/* ============================================
        FEATURES GRID
        - 3-column responsive layout
        - Icon + title + description cards
        ============================================ */}
    <div class="features-grid">
      {features.map((feature, index) => (
        <article class="feature-card" style={`--card-index: ${index}`}>
          <div class="feature-icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
            >
              <path d={feature.icon}></path>
            </svg>
          </div>
          <h3 class="feature-title">{feature.title}</h3>
          <p class="feature-description">{feature.description}</p>
        </article>
      ))}
    </div>
  </Container>
</section>

<style>
  /* ========================================
     FEATURES SECTION - Light Theme
     ======================================== */
  .[COMPONENT_NAME]-section {
    position: relative;
    padding: var(--space-24) 0;
    background: #ffffff;
    overflow: hidden;
  }

  /* Background System */
  .section-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .section-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(
        ellipse 80% 60% at 50% 0%,
        rgba(220, 38, 38, 0.03) 0%,
        transparent 50%
      ),
      linear-gradient(180deg, #ffffff 0%, #f8f9fa 100%);
  }

  .section-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 0, 0, 0.02) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 50%, black 0%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 80% 60% at 50% 50%, black 0%, transparent 70%);
  }

  /* Optional watermark styling */
  .section-watermark {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    opacity: 0.03;
    width: 600px;
    height: auto;
  }

  .section-watermark img {
    width: 100%;
    height: auto;
  }

  /* ========================================
     HEADER
     ======================================== */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
    position: relative;
    z-index: 1;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-eyebrow {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-primary);
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: var(--font-bold);
    line-height: 1.2;
    letter-spacing: var(--tracking-tight);
    color: #111111;
    margin-bottom: var(--space-4);
  }

  .title-highlight {
    color: var(--color-primary);
  }

  .section-subtitle {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: #555555;
    margin: 0;
  }

  /* ========================================
     FEATURES GRID
     ======================================== */
  .features-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
    position: relative;
    z-index: 1;
  }

  /* Feature Card */
  .feature-card {
    position: relative;
    padding: var(--space-8);
    background: #ffffff;
    border: 1px solid #e5e7eb;
    border-radius: var(--radius-xl);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);

    /* Staggered animation */
    animation: featureReveal 0.6s ease forwards;
    animation-delay: calc(var(--card-index) * 0.1s);
    opacity: 0;
  }

  @keyframes featureReveal {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .feature-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-primary-subtle);
    box-shadow:
      0 12px 32px rgba(0, 0, 0, 0.08),
      0 0 0 1px var(--color-primary-subtle);
  }

  /* Feature Icon */
  .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    margin-bottom: var(--space-5);
    background: var(--color-primary-muted);
    border-radius: var(--radius-lg);
    color: var(--color-primary);
    transition: all 0.3s ease;
  }

  .feature-card:hover .feature-icon {
    background: var(--color-primary);
    color: #ffffff;
    transform: scale(1.05);
  }

  /* Feature Content */
  .feature-title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: #111111;
    margin-bottom: var(--space-3);
    line-height: 1.3;
  }

  .feature-description {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    line-height: 1.7;
    color: #555555;
    margin: 0;
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    /* Center the third card if odd number */
    .feature-card:last-child:nth-child(odd) {
      grid-column: 1 / -1;
      max-width: 400px;
      margin: 0 auto;
    }
  }

  @media (max-width: 768px) {
    .[COMPONENT_NAME]-section {
      padding: var(--space-16) 0;
    }

    .section-header {
      margin-bottom: var(--space-12);
    }

    .section-title {
      font-size: var(--text-2xl);
    }

    .section-subtitle {
      font-size: var(--text-base);
    }

    .features-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .feature-card:last-child:nth-child(odd) {
      max-width: none;
    }

    .feature-card {
      padding: var(--space-6);
    }

    .feature-icon {
      width: 48px;
      height: 48px;
    }
  }
</style>
