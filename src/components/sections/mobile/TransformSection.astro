---
/**
 * Mobile TransformSection - "Transform Your Network Operations"
 *
 * Bento grid layout with 3 benefit pillars:
 * 1. Complete Visibility (L2-L7, East-West)
 * 2. Forensic Root Cause (Seconds to resolution)
 * 3. Proactive Security (Threat detection)
 */
import Container from "../../ui/Container.astro";
import PillarCard from "../../ui/PillarCard.astro";

interface Feature {
  title: string;
  description: string;
}

interface Pillar {
  number: string;
  title: string;
  lead: string;
  faIcon: string;
  features: Feature[];
  accent: string;
}

interface Props {
  sectionTitle?: string;
  pillars?: Pillar[];
}

const {
  sectionTitle = "Transform Your Network Operations",
  pillars = [
    {
      number: "01",
      title: "See Everything: L2 to L7",
      lead: "Gain full-stack visibility from the physical network transport all the way up to application API calls. See the critical East-West traffic that other tools completely miss.",
      faIcon: "fa-solid fa-eye",
      accent: "#EA242B",
      features: [
        {
          title: "Full Protocol Coverage",
          description: "L2 through L7 visibility across your entire mobile infrastructure—no blind spots.",
        },
        {
          title: "East-West Traffic Analysis",
          description: "See internal traffic patterns that are invisible to perimeter-focused tools.",
        },
        {
          title: "Real-Time Correlation",
          description: "Automatically correlate events across network, compute, and application layers.",
        },
      ],
    },
    {
      number: "02",
      title: "Root Cause in Seconds",
      lead: "Stop guessing and stop the blame game. With forensic packet-level evidence, pinpoint the exact source of any issue—whether it's TCP retransmissions, a slow database query, or a misconfigured gateway.",
      faIcon: "fa-solid fa-crosshairs",
      accent: "#8B5CF6",
      features: [
        {
          title: "Forensic Clarity",
          description: "TCP retransmissions, slow queries, misconfigurations—identified instantly with proof.",
        },
        {
          title: "End the War Room",
          description: "Replace hours of guesswork with minutes of precision. Evidence everyone can trust.",
        },
        {
          title: "Unified Evidence Layer",
          description: "One dataset, one truth. No more conflicting dashboards and finger-pointing.",
        },
      ],
    },
    {
      number: "03",
      title: "Detect Hidden Threats",
      lead: "Sophisticated security threats hide in subtle anomalies. DART-AI analyzes network behavior at the most granular level to detect lateral movement, data exfiltration, and zero-day attacks.",
      faIcon: "fa-solid fa-shield-halved",
      accent: "#3B82F6",
      features: [
        {
          title: "Anomaly Detection",
          description: "AI identifies behavioral patterns that signal sophisticated threats before damage occurs.",
        },
        {
          title: "Lateral Movement Tracking",
          description: "See attackers moving through your network—activity that evades perimeter defenses.",
        },
        {
          title: "Data Exfiltration Prevention",
          description: "Detect unusual data flows and potential exfiltration in real-time.",
        },
      ],
    },
  ],
} = Astro.props;
---

<section class="transform-section" data-theme="light">
  <div class="transform-bg">
    <div class="transform-gradient"></div>
    <div class="transform-grid"></div>
    <div class="transform-pattern"></div>
  </div>

  <Container size="xl">
    <div class="transform-content">
      <!-- Section Header -->
      <header class="transform-header">
        <span class="transform-eyebrow">The Transformation</span>
        <h2 class="transform-title">{sectionTitle}</h2>
      </header>

      <!-- Bento Grid -->
      <div class="bento-grid">
        {pillars.map((pillar) => (
          <PillarCard
            number={pillar.number}
            title={pillar.title}
            lead={pillar.lead}
            faIcon={pillar.faIcon}
            features={pillar.features}
            accent={pillar.accent}
            theme="light"
          />
        ))}
      </div>
    </div>
  </Container>
</section>

<style>
  .transform-section {
    position: relative;
    padding: var(--space-20) 0 var(--space-24);
    background: var(--color-bg-secondary);
    overflow: hidden;
  }

  .transform-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .transform-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 20% 20%, var(--color-primary-3) 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 80% 80%, var(--color-primary-2) 0%, transparent 50%),
      linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-tertiary) 50%, var(--color-bg-secondary) 100%);
  }

  .transform-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--color-black-4) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-black-4) 1px, transparent 1px);
    background-size: 48px 48px;
    mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 0%, transparent 65%);
    -webkit-mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 0%, transparent 65%);
  }

  .transform-pattern {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 1px 1px, var(--color-black-3) 1px, transparent 0);
    background-size: 32px 32px;
    mask-image: linear-gradient(180deg, transparent 0%, black 20%, black 80%, transparent 100%);
  }

  .transform-content {
    position: relative;
    z-index: 1;
  }

  /* Header */
  .transform-header {
    text-align: center;
    margin-bottom: var(--space-14);
  }

  .transform-eyebrow {
    display: inline-block;
    padding: var(--space-1-5) var(--space-4);
    margin-bottom: var(--space-4);
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-primary, #EA242B);
    background: var(--color-primary-8);
    border: 1px solid var(--color-primary-15);
    border-radius: var(--radius-full);
  }

  .transform-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: var(--font-bold);
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Bento Grid */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    align-items: stretch;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .bento-grid {
      grid-template-columns: 1fr;
      gap: var(--space-5);
    }
  }

  @media (max-width: 640px) {
    .transform-section {
      padding: var(--space-14) 0 var(--space-16);
    }

    .transform-header {
      margin-bottom: var(--space-10);
    }
  }
</style>
