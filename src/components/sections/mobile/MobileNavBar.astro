---
/**
 * MobileNavBar - Navigation for mobile sub-pages
 *
 * Uses CapabilityCard component for consistent card styling.
 * Three-card design for Open RAN, End-to-End, and Mobile Performance
 */
import Container from "../../ui/Container.astro";
import CapabilityCard from "../../ui/CapabilityCard.astro";

interface NavItem {
  title: string;
  description: string;
  badges: string[];
  href: string;
  accent: string;
  faIcon: string;
}

interface Props {
  label?: string;
  currentPage?: string;
  items?: NavItem[];
}

const {
  label = "Explore Mobile Solutions",
  currentPage = "",
  items = [
    {
      title: "Mobile Overview",
      description: "Complete mobile network observability across all technologies",
      badges: ["All Solutions"],
      href: "/solutions/connectivity-performance/mobile",
      accent: "#EA242B",
      faIcon: "fa-solid fa-mobile-screen-button",
    },
    {
      title: "Open RAN",
      description: "Multi-vendor RAN visibility and performance optimization",
      badges: ["Private 5G", "Multi-Vendor"],
      href: "/solutions/connectivity-performance/mobile/open-ran",
      accent: "#8B5CF6",
      faIcon: "fa-solid fa-tower-cell",
    },
    {
      title: "End-to-End Optimization",
      description: "Full-stack network optimization from L2 to L7",
      badges: ["Full Stack", "L2-L7"],
      href: "/solutions/connectivity-performance/mobile/end-to-end",
      accent: "#3B82F6",
      faIcon: "fa-solid fa-route",
    },
    {
      title: "Mobile Performance",
      description: "AI-driven performance monitoring and anomaly detection",
      badges: ["Anomaly Detection", "Security"],
      href: "/solutions/connectivity-performance/mobile/performance",
      accent: "#10B981",
      faIcon: "fa-solid fa-chart-line",
    },
  ],
} = Astro.props;

// Filter out current page from navigation
const navItems = items.filter(item => item.href !== currentPage);
---

<section class="mobile-nav-bar">
  <Container size="xl">
    <div class="nav-wrapper">
      <!-- Center label -->
      <div class="nav-label">
        <span class="label-line"></span>
        <span class="label-text">{label}</span>
        <span class="label-line"></span>
      </div>

      <!-- Navigation cards -->
      <div class="nav-cards">
        {navItems.map((item) => (
          <CapabilityCard
            icon={item.faIcon}
            iconType="fa"
            title={item.title}
            description={item.description}
            badges={item.badges}
            accent={item.accent}
            theme="light"
            size="sm"
            href={item.href}
            accentPosition="bottom"
          />
        ))}
      </div>
    </div>
  </Container>
</section>

<style>
  .mobile-nav-bar {
    position: relative;
    padding: var(--space-10) 0 var(--space-12);
    background: linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-card) 100%);
    border-top: 1px solid var(--color-black-5);
    border-bottom: 1px solid var(--color-black-5);
  }

  .nav-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* Label */
  .nav-label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
  }

  .label-line {
    flex: 1;
    max-width: 120px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-black-10), transparent);
  }

  .label-text {
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--color-text-muted);
  }

  /* Navigation Cards Grid */
  .nav-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-4);
  }

  /* Responsive */
  @media (max-width: 1100px) {
    .nav-cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .mobile-nav-bar {
      padding: var(--space-8) 0 var(--space-10);
    }

    .nav-cards {
      grid-template-columns: 1fr;
      gap: var(--space-3);
    }

    .label-line {
      max-width: 60px;
    }
  }
</style>
