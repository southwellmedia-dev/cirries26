---
/**
 * ProactiveSection - "Proactive Intelligence" section with flow workflow
 *
 * Displays the three-step workflow with animated SVG paths showing
 * data flow from trigger through processing to result.
 */
import Container from "../../ui/Container.astro";
import WorkflowCard from "../../ui/WorkflowCard.astro";
import InterfaceWindow from "../../ui/InterfaceWindow.astro";

interface WorkflowStep {
  number: string;
  title: string;
  description: string;
}

interface Props {
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  triggerLabel?: string;
  triggerHeadline?: string;
  resultLabel?: string;
  resultHeadline?: string;
  steps?: WorkflowStep[];
}

const {
  title = "Proactive Intelligence,",
  titleHighlight = "Not Reactive Alerts",
  subtitle = "At its heart, DART AI is an advanced intelligence engine. Using sophisticated, self-learning algorithms, it first establishes a unique performance baseline for your network. It understands what \"normal\" looks like, allowing it to identify even the most subtle anomalies that signal future trouble.",
  triggerLabel = "Anomaly Detected",
  triggerHeadline = "Network anomaly identified in real-time",
  resultLabel = "Issue Resolved",
  resultHeadline = "Automated response initiated and completed",
  steps = [
    {
      number: "01",
      title: "Instant Identification",
      description: "The moment a deviation occurs, the system flags it and triggers automated diagnostics."
    },
    {
      number: "02",
      title: "Automated Forensic Analysis",
      description: "It instantly analyzes the relevant forensic data to pinpoint the precise root cause, eliminating guesswork and hours of manual investigation."
    },
    {
      number: "03",
      title: "Actionable Solutions",
      description: "Within seconds, it delivers clear, actionable insights and recommended solutions, dramatically reducing Mean Time to Repair (MTTR)."
    }
  ]
} = Astro.props;
---

<section class="proactive-section" data-theme="dark">
  <div class="proactive-section__bg"></div>
  <Container size="xl">
    <header class="proactive-section__header">
      <h2 class="proactive-section__title">
        {title} <em>{titleHighlight}</em>
      </h2>
      <p class="proactive-section__subtitle">{subtitle}</p>
    </header>

    <!-- Flow Workflow System -->
    <div class="flow-system">
      <!-- SVG Connection Path -->
      <svg class="flow-path-svg" preserveAspectRatio="none">
        <defs>
          <linearGradient
            id="flowGradientVertical"
            x1="0%"
            y1="0%"
            x2="0%"
            y2="100%"
          >
            <stop offset="0%" stop-color="#dc2626"></stop>
            <stop offset="45%" stop-color="#dc2626"></stop>
            <stop offset="55%" stop-color="#22c55e"></stop>
            <stop offset="100%" stop-color="#22c55e"></stop>
          </linearGradient>
          <filter id="pingGlow" x="-50%" y="-50%" width="200%" height="200%">
            <feGaussianBlur stdDeviation="2" result="blur"></feGaussianBlur>
            <feMerge>
              <feMergeNode in="blur"></feMergeNode>
              <feMergeNode in="SourceGraphic"></feMergeNode>
            </feMerge>
          </filter>
          <filter id="flowGlow" x="-20%" y="-20%" width="140%" height="140%">
            <feGaussianBlur stdDeviation="3" result="blur"></feGaussianBlur>
            <feMerge>
              <feMergeNode in="blur"></feMergeNode>
              <feMergeNode in="SourceGraphic"></feMergeNode>
            </feMerge>
          </filter>
        </defs>
        <path class="flow-path-glow" d="M 0 0"></path>
        <path class="flow-path-structure" d="M 0 0"></path>
        <path class="flow-path-structure flow-path-fast" d="M 0 0"></path>
        <circle class="flow-ping flow-ping-trigger" r="3" cx="0" cy="0"></circle>
        <circle class="flow-ping flow-ping-branch1" r="2.5" cx="0" cy="0"></circle>
        <circle class="flow-ping flow-ping-branch2" r="2.5" cx="0" cy="0"></circle>
        <circle class="flow-ping flow-ping-branch3" r="2.5" cx="0" cy="0"></circle>
        <circle class="flow-ping flow-ping-converge1" r="2.5" cx="0" cy="0"></circle>
        <circle class="flow-ping flow-ping-converge2" r="2.5" cx="0" cy="0"></circle>
        <circle class="flow-ping flow-ping-converge3" r="2.5" cx="0" cy="0"></circle>
        <circle class="flow-ping flow-ping-result" r="3" cx="0" cy="0"></circle>
      </svg>

      <!-- Trigger Banner - Interface Window -->
      <InterfaceWindow
        title="Network Monitor"
        badge="ALERT"
        badgeVariant="critical"
        theme="dark"
        class="trigger-window"
      >
        <div class="alert-row">
          <div class="alert-indicator alert-indicator--critical">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z"></path>
            </svg>
          </div>
          <div class="alert-info">
            <span class="alert-label">{triggerLabel}</span>
            <span class="alert-time">00:00:03</span>
          </div>
        </div>
        <p class="alert-message">{triggerHeadline}</p>
        <div class="alert-meta">
          <span class="meta-item"><span class="meta-dot meta-dot--critical"></span>Severity: High</span>
          <span class="meta-item">Node: RTR-CORE-01</span>
        </div>
      </InterfaceWindow>

      <!-- Workflow Steps Grid -->
      <div class="workflow-grid">
        {steps.map((step) => (
          <WorkflowCard
            number={step.number}
            title={step.title}
            description={step.description}
            theme="dark"
            size="md"
          />
        ))}
      </div>

      <!-- Result Banner - Interface Window -->
      <InterfaceWindow
        title="Network Monitor"
        badge="RESOLVED"
        badgeVariant="success"
        theme="dark"
        class="result-window"
      >
        <div class="alert-row">
          <div class="alert-indicator alert-indicator--success">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
          </div>
          <div class="alert-info">
            <span class="alert-label alert-label--success">{resultLabel}</span>
            <span class="alert-time">00:00:47</span>
          </div>
        </div>
        <p class="alert-message">{resultHeadline}</p>
        <div class="alert-meta">
          <span class="meta-item"><span class="meta-dot meta-dot--success"></span>Status: Complete</span>
          <span class="meta-item">MTTR: 44s</span>
        </div>
      </InterfaceWindow>
    </div>
  </Container>
</section>

<style>
  /* ========================================
     PROACTIVE INTELLIGENCE SECTION
     ======================================== */
  .proactive-section {
    position: relative;
    padding: var(--space-20) 0;
    overflow: hidden;
    background: var(--color-bg-primary);
  }

  .proactive-section__bg {
    position: absolute;
    inset: 0;
    background: var(--color-bg-primary);
  }

  .proactive-section__header {
    position: relative;
    text-align: center;
    max-width: 900px;
    margin: 0 auto var(--space-12);
    z-index: 1;
  }

  .proactive-section__title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 3.5vw, 2.75rem);
    font-weight: var(--font-bold);
    line-height: 1.2;
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-4);
    white-space: nowrap;
  }

  .proactive-section__title em {
    color: var(--color-primary);
    font-style: normal;
  }

  .proactive-section__subtitle {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }

  /* ========================================
     FLOW WORKFLOW SYSTEM
     ======================================== */
  .flow-system {
    position: relative;
  }

  .flow-path-svg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 0;
    overflow: visible;
  }

  .flow-path-glow {
    fill: none;
    stroke: url(#flowGradientVertical);
    stroke-width: 3;
    stroke-linecap: round;
    opacity: 0.08;
    filter: url(#flowGlow);
  }

  .flow-path-structure {
    fill: none;
    stroke: url(#flowGradientVertical);
    stroke-width: 1;
    stroke-linecap: round;
    stroke-dasharray: 8 12;
    opacity: 0.35;
    animation: flowPathMove 1s linear infinite;
  }

  .flow-path-structure.flow-path-fast {
    stroke-width: 0.75;
    stroke-dasharray: 4 16;
    opacity: 0.25;
    animation: flowPathMoveFast 0.6s linear infinite;
  }

  @keyframes flowPathMove {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -20; }
  }

  @keyframes flowPathMoveFast {
    0% { stroke-dashoffset: 0; }
    100% { stroke-dashoffset: -20; }
  }

  .flow-ping {
    opacity: 0;
  }

  .flow-ping-trigger,
  .flow-ping-branch1,
  .flow-ping-branch2,
  .flow-ping-branch3 {
    fill: var(--color-primary);
  }

  .flow-ping-converge1,
  .flow-ping-converge2,
  .flow-ping-converge3,
  .flow-ping-result {
    fill: var(--color-success);
  }

  /* Interface Window Positioning */
  .trigger-window {
    position: relative;
    z-index: 2;
    margin-bottom: 3.5rem;
  }

  .result-window {
    position: relative;
    z-index: 2;
  }

  /* Alert Content Styles (inside InterfaceWindow slots) */
  .alert-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.625rem;
  }

  .alert-indicator {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: var(--radius-md);
  }

  .alert-indicator--critical {
    background: var(--color-error-15);
    color: var(--color-error);
  }

  .alert-indicator--success {
    background: var(--color-success-15);
    color: var(--color-success);
  }

  .alert-info {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex: 1;
  }

  .alert-label {
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-error);
  }

  .alert-label--success {
    color: var(--color-success);
  }

  .alert-time {
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    color: var(--color-white-40);
  }

  .alert-message {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    font-weight: 500;
    color: var(--color-white-90);
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .alert-meta {
    display: flex;
    gap: 1.25rem;
    padding-top: 0.625rem;
    border-top: 1px solid var(--color-white-6);
  }

  .meta-item {
    display: flex;
    align-items: center;
    gap: 0.375rem;
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    color: var(--color-white-45);
  }

  .meta-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
  }

  .meta-dot--critical {
    background: var(--color-error);
  }

  .meta-dot--success {
    background: var(--color-success);
  }

  /* Workflow Grid */
  .workflow-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-bottom: 3.5rem;
    position: relative;
    z-index: 2;
  }

  @media (min-width: 768px) {
    .workflow-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 1.5rem;
    }

    .trigger-headline,
    .result-headline {
      font-size: 1.125rem;
    }
  }

  /* Flow Banner Mobile */
  @media (max-width: 767px) {
    .trigger-banner,
    .result-banner {
      flex-direction: column;
      text-align: center;
      gap: 1rem;
    }

    .flow-path-svg {
      display: none;
    }
  }

  /* Flow Animation Classes */
  .flow-animated-trigger {
    animation: flowTriggerGlow 5s ease-in-out infinite;
  }

  @keyframes flowTriggerGlow {
    0%, 100% { border-color: var(--color-primary-20); }
    50% { border-color: var(--color-primary-35); }
  }

  .flow-animated-result {
    animation: flowResultGlow 5s ease-in-out infinite;
  }

  @keyframes flowResultGlow {
    0%, 100% { border-color: var(--color-success-20); }
    50% { border-color: var(--color-success-35); }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .proactive-section {
      padding: var(--space-12) 0;
    }

    .proactive-section__title {
      font-size: var(--text-2xl);
    }
  }
</style>

<script>
  import { initFlowPath } from "../../../scripts/flowpath";

  function init(): void {
    setTimeout(initFlowPath, 200);
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", init);
  } else {
    init();
  }

  // Resize handler
  let flowResizeTimeout: ReturnType<typeof setTimeout>;
  window.addEventListener("resize", () => {
    clearTimeout(flowResizeTimeout);
    flowResizeTimeout = setTimeout(initFlowPath, 250);
  });
</script>
