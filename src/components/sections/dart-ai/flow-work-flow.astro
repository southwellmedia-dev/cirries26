---
/**
 * FlowWorkflow - Animated Flow Path Visualization
 *
 * Displays a trigger banner, workflow steps, and result banner
 * with animated ping dots traveling along connected paths.
 */

interface WorkflowStep {
  step: string;
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  triggerLabel?: string;
  triggerHeadline: string;
  steps: WorkflowStep[];
  resultLabel?: string;
  resultHeadline: string;
}

const {
  triggerLabel = "Anomaly Detected",
  triggerHeadline,
  steps,
  resultLabel = "Result",
  resultHeadline,
} = Astro.props;
---

<div class="flow-system">
  <!-- SVG Connection Path - Faded structure with flowing pings -->
  <svg class="flow-path-svg" preserveAspectRatio="none">
    <defs>
      <!-- Gradient for the static structure -->
      <linearGradient
        id="flowGradientVertical"
        x1="0%"
        y1="0%"
        x2="0%"
        y2="100%"
      >
        <stop offset="0%" stop-color="#dc2626"></stop>
        <stop offset="45%" stop-color="#dc2626"></stop>
        <stop offset="55%" stop-color="#22c55e"></stop>
        <stop offset="100%" stop-color="#22c55e"></stop>
      </linearGradient>
      <!-- Glow filter for pings -->
      <filter id="pingGlow" x="-50%" y="-50%" width="200%" height="200%">
        <feGaussianBlur stdDeviation="2" result="blur"></feGaussianBlur>
        <feMerge>
          <feMergeNode in="blur"></feMergeNode>
          <feMergeNode in="SourceGraphic"></feMergeNode>
        </feMerge>
      </filter>
      <!-- Glow filter for flowing lines -->
      <filter id="flowGlow" x="-20%" y="-20%" width="140%" height="140%">
        <feGaussianBlur stdDeviation="3" result="blur"></feGaussianBlur>
        <feMerge>
          <feMergeNode in="blur"></feMergeNode>
          <feMergeNode in="SourceGraphic"></feMergeNode>
        </feMerge>
      </filter>
    </defs>
    <!-- Background glow layer -->
    <path class="flow-path-glow" d="M 0 0"></path>
    <!-- Primary flowing path structure -->
    <path class="flow-path-structure" d="M 0 0"></path>
    <!-- Secondary faster flow layer -->
    <path class="flow-path-structure flow-path-fast" d="M 0 0"></path>
    <!-- Animated ping dots that travel along paths -->
    <circle class="flow-ping flow-ping-trigger" r="3" cx="0" cy="0"></circle>
    <circle class="flow-ping flow-ping-branch1" r="2.5" cx="0" cy="0"></circle>
    <circle class="flow-ping flow-ping-branch2" r="2.5" cx="0" cy="0"></circle>
    <circle class="flow-ping flow-ping-branch3" r="2.5" cx="0" cy="0"></circle>
    <circle class="flow-ping flow-ping-converge1" r="2.5" cx="0" cy="0"
    ></circle>
    <circle class="flow-ping flow-ping-converge2" r="2.5" cx="0" cy="0"
    ></circle>
    <circle class="flow-ping flow-ping-converge3" r="2.5" cx="0" cy="0"
    ></circle>
    <circle class="flow-ping flow-ping-result" r="3" cx="0" cy="0"></circle>
  </svg>

  <!-- Trigger Banner -->
  <div class="flow-node-banner trigger-banner" data-flow-node="trigger">
    <div class="banner-connector-point"></div>
    <div class="trigger-icon">
      <i class="fas fa-bolt"></i>
    </div>
    <div class="trigger-text">
      <span class="trigger-label">{triggerLabel}</span>
      <p class="trigger-headline">{triggerHeadline}</p>
    </div>
  </div>

  <!-- Workflow Steps - Full Width Grid -->
  <div class="workflow-grid">
    {
      steps.map((step, index) => (
        <div class="workflow-card" data-flow-node={`step-${index}`}>
          <div class="card-connector-point" />
          <div class="card-header">
            <div class="card-number">{step.step}</div>
          </div>
          <h3 class="card-title">{step.title}</h3>
          <p class="card-description">{step.description}</p>
        </div>
      ))
    }
  </div>

  <!-- Result Banner -->
  <div class="flow-node-banner result-banner" data-flow-node="result">
    <div class="banner-connector-point"></div>
    <div class="result-icon">
      <i class="fas fa-check"></i>
    </div>
    <div class="result-text">
      <span class="result-label">{resultLabel}</span>
      <p class="result-headline">{resultHeadline}</p>
    </div>
  </div>
</div>

<script>
  import { initFlowPath } from "../../scripts/flow-path";

  // Initialize when DOM is ready
  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", () => {
      setTimeout(initFlowPath, 100);
    });
  } else {
    setTimeout(initFlowPath, 100);
  }

  // Reinitialize on resize
  let resizeTimeout: ReturnType<typeof setTimeout>;
  window.addEventListener("resize", () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(initFlowPath, 200);
  });
</script>
