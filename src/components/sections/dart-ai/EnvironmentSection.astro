---
/**
 * EnvironmentSection - "Engineered for Your Environment" feature cards
 *
 * Displays three feature cards in a horizontal row layout.
 */
import { Image } from "astro:assets";
import Container from "../../ui/Container.astro";

import dartLogo from "../../../assets/logos/dart-lightmode.svg";

interface FeatureCard {
  icon: string; // SVG path data
  title: string;
  text: string;
}

interface Props {
  badge?: string;
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  cards?: FeatureCard[];
}

const {
  badge = "Built for Reality",
  title = "Engineered for Your Environment",
  titleHighlight = "Built for Your Future",
  subtitle = "A powerful solution is only effective if it works within your reality. DART AI was designed for seamless integration and infinite scalability.",
  cards = [
    {
      icon: "M12 2L2 7l10 5 10-5-10-5z M2 17l10 5 10-5 M2 12l10 5 10-5",
      title: "Adaptability",
      text: "With plug-and-play compatibility and a flexible, API-driven architecture, DART AI integrates smoothly into your existing ecosystem. Add third-party tools without demanding a costly or disruptive overhaul.",
    },
    {
      icon: "M2 3h20v14H2z M8 21h8 M12 17v4",
      title: "Scalability",
      text: "As a software-based solution, DART AI evolves with your business. It scales effortlessly to meet growing demands without requiring hardware overhauls or facing depreciation.",
    },
    {
      icon: "M22 12h-4l-3 9L9 3l-3 9H2",
      title: "Business Efficiency",
      text: "By automating routine tasks and optimizing resource utilization, DART AI directly impacts your bottom line. It reduces manual oversight and prevents costly downtime.",
    },
  ],
} = Astro.props;
---

<section class="environment-section" data-theme="light">
  <Container size="xl">
    <!-- Header with Logo -->
    <div class="environment-header">
      <div class="environment-header__content">
        <span class="environment-badge">{badge}</span>
        <h2 class="environment-title">
          {title}<br />
          <em>{titleHighlight}</em>
        </h2>
        <p class="environment-subtitle">{subtitle}</p>
      </div>
      <div class="environment-header__logo">
        <Image src={dartLogo} alt="DART AI" width={550} height={105} />
      </div>
    </div>

    <!-- Feature Cards Grid -->
    <div class="feature-grid">
      {
        cards.map((card) => (
          <div class="feature-card">
            <div class="feature-card__icon">
              <svg
                width="24"
                height="24"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
              >
                <path d={card.icon} />
              </svg>
            </div>
            <h3 class="feature-card__title">{card.title}</h3>
            <p class="feature-card__text">{card.text}</p>
          </div>
        ))
      }
    </div>
  </Container>
</section>

<style>
  /* ========================================
     ENGINEERED FOR YOUR ENVIRONMENT
     ======================================== */
  .environment-section {
    padding: var(--space-20) 0;
    background-color: #f8f8f8;
  }

  .environment-header {
    position: relative;
    margin-bottom: var(--space-12);
  }

  .environment-header__content {
    position: relative;
    z-index: 2;
    max-width: 600px;
  }

  .environment-header__logo {
    position: absolute;
    right: -18%;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1;
    pointer-events: none;
  }

  .environment-header__logo img {
    width: 1400px;
    max-width: none;
    height: auto;
    filter: grayscale(100%);
    opacity: 0.025;
  }

  .environment-badge {
    display: inline-block;
    padding: 0.375rem 0.875rem;
    font-family: var(--font-display);
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    background: rgba(220, 38, 38, 0.08);
    border: 1px solid rgba(220, 38, 38, 0.15);
    border-radius: 100px;
    margin-bottom: var(--space-4);
  }

  .environment-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 2.75rem);
    font-weight: var(--font-bold);
    line-height: 1.15;
    letter-spacing: var(--tracking-tight);
    color: #111111;
    margin-bottom: var(--space-4);
  }

  .environment-title em {
    color: var(--color-primary);
    font-style: italic;
  }

  .environment-subtitle {
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: #555555;
    max-width: 600px;
  }

  /* Feature Cards Grid - 3 columns */
  .feature-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }

  .feature-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-8);
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: var(--radius-xl);
    transition: all 0.3s ease;
  }

  .feature-card:hover {
    border-color: rgba(0, 0, 0, 0.12);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.08);
    transform: translateY(-4px);
  }

  .feature-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: rgba(220, 38, 38, 0.1);
    border-radius: var(--radius-lg);
    color: var(--color-primary);
    margin-bottom: var(--space-5);
  }

  .feature-card__icon svg {
    width: 28px;
    height: 28px;
  }

  .feature-card__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: #111111;
    margin-bottom: var(--space-3);
    line-height: 1.3;
  }

  .feature-card__text {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: #555555;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .environment-header__logo img {
      width: 700px;
    }

    .feature-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .feature-card:last-child {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .environment-section {
      padding: var(--space-12) 0;
    }

    .environment-header {
      margin-bottom: var(--space-8);
    }

    .environment-header__logo {
      display: none;
    }

    .environment-title {
      font-size: var(--text-2xl);
    }

    .feature-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .feature-card:last-child {
      grid-column: span 1;
    }

    .feature-card {
      padding: var(--space-6);
    }

    .feature-card__icon {
      width: 48px;
      height: 48px;
    }

    .feature-card__icon svg {
      width: 24px;
      height: 24px;
    }
  }
</style>
