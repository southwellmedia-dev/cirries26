---
/**
 * IndustrySection - Full-Bleed Image Industry Showcase
 *
 * Alternating left/right layout with:
 * - Full-bleed Unsplash image on one side
 * - Editorial content on the opposite side
 * - Industry badge and benefits
 */
import Container from "../../ui/Container.astro";

interface Props {
  id: string;
  industry: string;
  tagline: string;
  intro: string;
  content: string[];
  benefits?: string[];
  layout?: "left" | "right";
  imageId: string;
  imageAlt?: string;
  isLast?: boolean;
}

const {
  id,
  industry,
  tagline,
  intro,
  content,
  benefits = [],
  layout = "left",
  imageId,
  imageAlt = "",
  isLast = false
} = Astro.props;

// Unsplash image URL with quality parameters
const imageUrl = `https://images.unsplash.com/photo-${imageId}?auto=format&fit=crop&w=1200&q=80`;

// Industry index for numbering
const industryOrder = ["healthcare", "energy", "manufacturing", "smart-cities", "transportation"];
const sectionNumber = String(industryOrder.indexOf(id) + 1).padStart(2, '0');
---

<section
  class:list={["industry-section", `industry-section--${layout}`]}
  id={id}
  data-industry={id}
>
  <div class="industry-wrapper">
    <!-- Full-bleed Image -->
    <div class="industry-image">
      <div class="image-container">
        <img
          src={imageUrl}
          alt={imageAlt || `${industry} industry - network solutions`}
          loading="lazy"
          decoding="async"
        />
        <div class="image-overlay"></div>

        <!-- Industry badge floating on image -->
        <div class="image-badge">
          <span class="badge-number">{sectionNumber}</span>
          <span class="badge-text">{industry}</span>
        </div>
      </div>
    </div>

    <!-- Content Column -->
    <div class="industry-content">
      <div class="content-inner">
        <header class="content-header">
          <span class="section-eyebrow">Industry Solutions</span>
          <h2 class="industry-title">{tagline}</h2>
        </header>

        <p class="industry-intro">{intro}</p>

        <div class="industry-body">
          {content.map((paragraph) => (
            <p class="industry-paragraph">{paragraph}</p>
          ))}
        </div>

        {benefits.length > 0 && (
          <div class="industry-benefits">
            <h3 class="benefits-title">DART Enables</h3>
            <ul class="benefits-list">
              {benefits.map((benefit) => (
                <li class="benefit-item">
                  <span class="benefit-icon">
                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
                    </svg>
                  </span>
                  <span class="benefit-text">{benefit}</span>
                </li>
              ))}
            </ul>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<style>
  .industry-section {
    position: relative;
    min-height: 100vh;
    min-height: 100dvh;
    background: #ffffff;
  }

  /* Alternating subtle background */
  .industry-section:nth-child(even) {
    background: #fafafa;
  }

  /* Main wrapper - split layout */
  .industry-wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 100vh;
    min-height: 100dvh;
  }

  /* Reverse for right layout */
  .industry-section--right .industry-wrapper {
    direction: rtl;
  }

  .industry-section--right .industry-wrapper > * {
    direction: ltr;
  }

  /* Full-bleed Image Column */
  .industry-image {
    position: relative;
    overflow: hidden;
  }

  .image-container {
    position: absolute;
    inset: 0;
  }

  .image-container img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    filter: saturate(0.9);
    transition: transform 0.8s cubic-bezier(0.4, 0, 0.2, 1), filter 0.5s ease;
  }

  .industry-section:hover .image-container img {
    transform: scale(1.03);
    filter: saturate(1);
  }

  /* Dark overlay on image */
  .image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      rgba(10, 10, 10, 0.4) 0%,
      rgba(10, 10, 10, 0.2) 50%,
      rgba(234, 36, 43, 0.15) 100%
    );
    pointer-events: none;
  }

  /* Floating badge on image */
  .image-badge {
    position: absolute;
    bottom: var(--space-8);
    left: var(--space-8);
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: 12px 20px;
    background: rgba(10, 10, 10, 0.85);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    z-index: 2;
  }

  .industry-section--right .image-badge {
    left: auto;
    right: var(--space-8);
  }

  .badge-number {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: var(--font-bold);
    color: var(--color-primary, #EA242B);
    opacity: 0.8;
  }

  .badge-text {
    font-family: var(--font-display);
    font-size: 0.9rem;
    font-weight: var(--font-semibold);
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  /* Content Column */
  .industry-content {
    display: flex;
    align-items: center;
    padding: var(--space-12) var(--space-10);
  }

  .content-inner {
    max-width: 560px;
    margin: 0 auto;
  }

  .content-header {
    margin-bottom: var(--space-6);
  }

  .section-eyebrow {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: var(--color-primary, #EA242B);
    padding: 6px 14px;
    background: rgba(234, 36, 43, 0.08);
    border: 1px solid rgba(234, 36, 43, 0.15);
    border-radius: 4px;
    margin-bottom: var(--space-4);
  }

  .industry-title {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 3vw, 2.25rem);
    font-weight: var(--font-bold);
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: #0a0a0a;
  }

  .industry-intro {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
    line-height: 1.6;
    color: #333333;
    margin-bottom: var(--space-5);
    padding-bottom: var(--space-5);
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
    max-width: none;
  }

  .industry-body {
    margin-bottom: var(--space-6);
  }

  .industry-paragraph {
    font-family: var(--font-body);
    font-size: 0.9rem;
    line-height: 1.8;
    color: #555555;
    margin-bottom: var(--space-4);
    max-width: none;
  }

  .industry-paragraph:last-child {
    margin-bottom: 0;
  }

  /* Benefits */
  .industry-benefits {
    padding: var(--space-5);
    background: rgba(234, 36, 43, 0.03);
    border: 1px solid rgba(234, 36, 43, 0.1);
    border-radius: 10px;
  }

  .benefits-title {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary, #EA242B);
    margin-bottom: var(--space-4);
  }

  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .benefit-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-3);
  }

  .benefit-icon {
    flex-shrink: 0;
    width: 18px;
    height: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary, #EA242B);
    border-radius: 50%;
    color: white;
    margin-top: 2px;
  }

  .benefit-icon svg {
    width: 10px;
    height: 10px;
  }

  .benefit-text {
    font-family: var(--font-body);
    font-size: 0.85rem;
    line-height: 1.5;
    color: #444444;
  }

  /* Responsive */
  @media (max-width: 1200px) {
    .industry-content {
      padding: var(--space-10) var(--space-8);
    }
  }

  @media (max-width: 1024px) {
    .industry-section {
      min-height: auto;
    }

    .industry-wrapper {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .industry-section--right .industry-wrapper {
      direction: ltr;
    }

    .industry-image {
      position: relative;
      height: 50vh;
      min-height: 350px;
    }

    .image-container {
      position: absolute;
    }

    .image-badge {
      bottom: var(--space-6);
      left: var(--space-6);
    }

    .industry-section--right .image-badge {
      left: var(--space-6);
      right: auto;
    }

    .industry-content {
      padding: var(--space-10) var(--space-6);
    }

    .content-inner {
      max-width: 100%;
    }
  }

  @media (max-width: 768px) {
    .industry-image {
      height: 45vh;
      min-height: 300px;
    }

    .image-badge {
      bottom: var(--space-4);
      left: var(--space-4);
      padding: 10px 16px;
    }

    .badge-text {
      font-size: 0.8rem;
    }

    .industry-content {
      padding: var(--space-8) var(--space-4);
    }

    .industry-title {
      font-size: 1.5rem;
    }

    .industry-intro {
      font-size: var(--text-base);
    }
  }

  @media (max-width: 480px) {
    .industry-image {
      height: 40vh;
      min-height: 260px;
    }
  }
</style>
