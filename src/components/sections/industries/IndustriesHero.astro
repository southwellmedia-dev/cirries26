---
/**
 * IndustriesHero - Replicates Homepage Hero Structure
 *
 * Uses the exact same 3D mesh network pattern as the homepage hero
 * with industry-specific content overlay.
 */
import Container from "../../ui/Container.astro";
import LogoMeshNetwork from "../../three/LogoMeshNetwork";

interface Props {
  title?: string;
  subtitle?: string;
}

const {
  title = "Industries We Serve",
  subtitle = "Enabling 5G transformation across critical sectors with real-time network intelligence"
} = Astro.props;

const industries = [
  { id: "healthcare", label: "Healthcare", icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" },
  { id: "energy", label: "Energy", icon: "M13 10V3L4 14h7v7l9-11h-7z" },
  { id: "manufacturing", label: "Manufacturing", icon: "M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" },
  { id: "smart-cities", label: "Smart Cities", icon: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" },
  { id: "transportation", label: "Transportation", icon: "M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" }
];
---

<section class="hero" id="industries-hero-section">
  <!-- Three.js Logo Mesh Network Background - Exact same structure as homepage -->
  <div class="hero__background hero__background--three">
    <div class="hero__three-canvas">
      <LogoMeshNetwork client:load />
    </div>
    <!-- Animated grid lines -->
    <div class="hero__three-grid"></div>
    <!-- Grid glow segments -->
    <div class="hero__grid-glows" aria-hidden="true">
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 3; --glow-col: 5; --glow-delay: 0s; --glow-duration: 4s;"></div>
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 5; --glow-col: 12; --glow-delay: 1.2s; --glow-duration: 3.5s;"></div>
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 7; --glow-col: 2; --glow-delay: 2.8s; --glow-duration: 4.2s;"></div>
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 4; --glow-col: 18; --glow-delay: 0.6s; --glow-duration: 3.8s;"></div>
      <div class="hero__grid-glow hero__grid-glow--v" style="--glow-row: 4; --glow-col: 7; --glow-delay: 0.4s; --glow-duration: 3.8s;"></div>
      <div class="hero__grid-glow hero__grid-glow--v" style="--glow-row: 6; --glow-col: 14; --glow-delay: 2.2s; --glow-duration: 4.1s;"></div>
      <div class="hero__grid-glow hero__grid-glow--v" style="--glow-row: 3; --glow-col: 20; --glow-delay: 1.5s; --glow-duration: 3.4s;"></div>
    </div>
    <!-- Network pulse lines -->
    <div class="hero__pulse-lines" aria-hidden="true">
      <div class="hero__pulse-line" style="--line-col: 5; --line-delay: 0.2s; --line-duration: 3.5s;"></div>
      <div class="hero__pulse-line" style="--line-col: 10; --line-delay: 1.8s; --line-duration: 4.2s;"></div>
      <div class="hero__pulse-line" style="--line-col: 15; --line-delay: 0.9s; --line-duration: 3.8s;"></div>
      <div class="hero__pulse-line" style="--line-col: 20; --line-delay: 2.5s; --line-duration: 4.0s;"></div>
      <div class="hero__pulse-line" style="--line-col: 25; --line-delay: 0.4s; --line-duration: 3.6s;"></div>
    </div>
  </div>

  <!-- Content - Same structure as homepage -->
  <Container size="xl" class="hero__container">
    <div class="hero__content">
      <span class="hero__eyebrow">Network Solutions</span>
      <h1 class="hero__headline">
        <span class="hero__headline-top">{title.split(' ').slice(0, 1).join(' ')}</span>
        <span class="hero__headline-bottom">{title.split(' ').slice(1).join(' ')}</span>
      </h1>
      <p class="hero__subtitle">{subtitle}</p>

      <!-- Industry quick-nav pills -->
      <nav class="hero__actions industry-nav" aria-label="Jump to industry">
        {industries.map((industry, i) => (
          <a
            href={`#${industry.id}`}
            class="industry-pill"
            style={`--pill-delay: ${i * 0.1}s`}
          >
            <span class="pill-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={industry.icon} />
              </svg>
            </span>
            <span class="pill-label">{industry.label}</span>
          </a>
        ))}
      </nav>
    </div>
  </Container>

  <!-- Scroll indicator -->
  <div class="scroll-cue" aria-hidden="true">
    <span class="scroll-text">Explore Industries</span>
    <div class="scroll-line">
      <div class="scroll-dot"></div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    min-height: 100dvh;
    overflow: hidden;
  }

  /* Background Container */
  .hero__background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  /* Three.js Background */
  .hero__background--three {
    background: #0a0a0a;
  }

  .hero__three-canvas {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    opacity: 0.85;
    pointer-events: auto;
  }

  /* Grid background */
  .hero__three-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.06) 1px, transparent 1px);
    background-size: 60px 60px;
    z-index: 0;
    mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      transparent 75%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      transparent 75%
    );
  }

  /* Grid glow segments container */
  .hero__grid-glows {
    position: absolute;
    inset: 0;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
    mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      transparent 75%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      transparent 75%
    );
  }

  .hero__grid-glow {
    position: absolute;
    top: calc(var(--glow-row, 5) * 60px);
    left: calc(var(--glow-col, 10) * 60px);
    opacity: 0;
  }

  .hero__grid-glow--h {
    width: 120px;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.15) 20%,
      rgba(255, 255, 255, 0.4) 50%,
      rgba(255, 255, 255, 0.15) 80%,
      transparent 100%
    );
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
    animation: glowPulseH var(--glow-duration, 4s) var(--glow-delay, 0s) infinite ease-in-out;
  }

  .hero__grid-glow--v {
    width: 1px;
    height: 120px;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(255, 255, 255, 0.15) 20%,
      rgba(255, 255, 255, 0.4) 50%,
      rgba(255, 255, 255, 0.15) 80%,
      transparent 100%
    );
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
    animation: glowPulseV var(--glow-duration, 4s) var(--glow-delay, 0s) infinite ease-in-out;
  }

  @keyframes glowPulseH {
    0%, 100% { opacity: 0; transform: scaleX(0.5); }
    15% { opacity: 0; }
    30% { opacity: 1; transform: scaleX(1); }
    70% { opacity: 1; transform: scaleX(1); }
    85% { opacity: 0; }
  }

  @keyframes glowPulseV {
    0%, 100% { opacity: 0; transform: scaleY(0.5); }
    15% { opacity: 0; }
    30% { opacity: 1; transform: scaleY(1); }
    70% { opacity: 1; transform: scaleY(1); }
    85% { opacity: 0; }
  }

  /* Network pulse lines */
  .hero__pulse-lines {
    position: absolute;
    inset: 0;
    z-index: 2;
    pointer-events: none;
    overflow: hidden;
    mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      transparent 75%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      transparent 75%
    );
  }

  .hero__pulse-line {
    position: absolute;
    left: calc(var(--line-col, 10) * 60px);
    bottom: 0;
    width: 1px;
    height: 200px;
    background: linear-gradient(
      to top,
      transparent 0%,
      rgba(255, 255, 255, 0.05) 10%,
      rgba(255, 255, 255, 0.1) 30%,
      rgba(255, 255, 255, 0.2) 60%,
      rgba(255, 255, 255, 0.35) 85%,
      rgba(255, 255, 255, 0.5) 100%
    );
    box-shadow: 0 0 6px rgba(255, 255, 255, 0.2);
    opacity: 0;
    transform: translateY(0);
    animation: pulseUp var(--line-duration, 4s) var(--line-delay, 0s) infinite ease-out;
  }

  @keyframes pulseUp {
    0% { opacity: 0; transform: translateY(0); }
    3% { opacity: 0.8; }
    8% { opacity: 0.4; }
    15% { opacity: 0.15; }
    25% { opacity: 0; }
    100% { opacity: 0; transform: translateY(-100vh); }
  }

  /* Container - using :global to target Container component */
  .hero :global(.hero__container) {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 100vh;
    min-height: 100dvh;
    padding-top: 100px;
    padding-bottom: var(--space-12);
    pointer-events: none;
  }

  /* Content */
  .hero__content {
    text-align: center;
    max-width: 1000px;
    pointer-events: none;
  }

  /* Re-enable pointer events on interactive elements */
  .hero__actions {
    pointer-events: auto;
  }

  .hero__eyebrow {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.25em;
    color: var(--color-primary, #EA242B);
    padding: 8px 20px;
    background: rgba(234, 36, 43, 0.1);
    border: 1px solid rgba(234, 36, 43, 0.2);
    border-radius: 100px;
    margin-bottom: var(--space-6);
  }

  .hero__headline {
    font-family: var(--font-display);
    font-size: clamp(2.5rem, 8vw, 5rem);
    font-weight: var(--font-bold);
    line-height: 1;
    letter-spacing: -0.03em;
    margin-bottom: var(--space-6);
  }

  .hero__headline-top {
    display: block;
    color: #ffffff;
  }

  .hero__headline-bottom {
    display: block;
    color: var(--color-primary, #EA242B);
    font-style: italic;
  }

  .hero__subtitle {
    font-size: var(--text-xl);
    line-height: 1.6;
    color: #888888;
    max-width: 600px;
    margin: 0 auto var(--space-10);
  }

  /* Industry Navigation Pills */
  .industry-nav {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-3);
  }

  .industry-pill {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: 12px 20px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: 100px;
    color: #aaaaaa;
    font-family: var(--font-body);
    font-size: 0.85rem;
    font-weight: var(--font-medium);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    animation: pillFadeIn 0.6s ease-out backwards;
    animation-delay: calc(var(--pill-delay) + 0.5s);
  }

  .industry-pill:hover {
    background: rgba(234, 36, 43, 0.1);
    border-color: rgba(234, 36, 43, 0.3);
    color: #ffffff;
    transform: translateY(-2px);
  }

  .pill-icon {
    width: 18px;
    height: 18px;
    color: var(--color-primary, #EA242B);
    opacity: 0.8;
    transition: opacity 0.3s;
  }

  .industry-pill:hover .pill-icon {
    opacity: 1;
  }

  .pill-icon svg {
    width: 100%;
    height: 100%;
  }

  @keyframes pillFadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Scroll Indicator */
  .scroll-cue {
    position: absolute;
    bottom: var(--space-8);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
    z-index: 3;
  }

  .scroll-text {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    color: #555555;
  }

  .scroll-line {
    width: 1px;
    height: 60px;
    background: linear-gradient(to bottom, rgba(255,255,255,0.2), transparent);
    position: relative;
    overflow: hidden;
  }

  .scroll-dot {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 3px;
    height: 12px;
    background: var(--color-primary, #EA242B);
    border-radius: 2px;
    animation: scrollDot 2s ease-in-out infinite;
  }

  @keyframes scrollDot {
    0% { top: 0; opacity: 1; }
    80% { top: 100%; opacity: 0; }
    100% { top: 0; opacity: 0; }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero :global(.hero__container) {
      padding-top: 80px;
      padding-bottom: var(--space-20);
    }

    .hero__subtitle {
      font-size: var(--text-lg);
    }

    .industry-nav {
      gap: var(--space-2);
    }

    .industry-pill {
      padding: 10px 14px;
      font-size: 0.75rem;
    }

    .pill-label {
      display: none;
    }

    .pill-icon {
      width: 22px;
      height: 22px;
    }

    .hero__three-canvas {
      opacity: 0.7;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero__grid-glow,
    .hero__pulse-line,
    .scroll-dot {
      animation: none;
    }

    .industry-pill {
      animation: none;
    }
  }
</style>
