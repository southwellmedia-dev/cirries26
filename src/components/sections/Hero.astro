---
import Container from "../ui/Container.astro";
import Button from "../ui/Button.astro";
import LogoObsidian from "../three/LogoObsidian";
import LogoMeshNetwork from "../three/LogoMeshNetwork";

interface Props {
  headlineTop?: string;
  headlineBottom?: string;
  subtitle?: string;
  primaryCta?: {
    label: string;
    href: string;
  };
  secondaryCta?: {
    label: string;
    href: string;
  };
}

const {
  headlineTop = "Experience Unparalleled",
  headlineBottom = "Network Visibility and Control",
  subtitle = "Transform your network infrastructure with AI-powered analytics, real-time monitoring, and intelligent automation. Gain complete visibility across your entire network ecosystem.",
  primaryCta = { label: "Get Started", href: "/contact" },
  secondaryCta = { label: "Learn More", href: "/solutions" },
} = Astro.props;
---

<section class="hero" id="hero-section">
  <!-- Three.js Logo Mesh Network Background -->
  <div class="hero__background hero__background--three">
    <div class="hero__three-gradient"></div>
    <div class="hero__three-canvas">
      <!-- <LogoObsidian client:load /> -->
      <LogoMeshNetwork client:load />
    </div>
    <div class="hero__three-overlay"></div>
    <div class="hero__three-noise"></div>
    <!-- Animated grid lines -->
    <div class="hero__three-grid"></div>
    <!-- Grid glow segments - horizontal -->
    <div class="hero__grid-glows" aria-hidden="true">
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 3; --glow-col: 5; --glow-delay: 0s; --glow-duration: 4s;"></div>
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 5; --glow-col: 12; --glow-delay: 1.2s; --glow-duration: 3.5s;"></div>
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 7; --glow-col: 2; --glow-delay: 2.8s; --glow-duration: 4.2s;"></div>
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 4; --glow-col: 18; --glow-delay: 0.6s; --glow-duration: 3.8s;"></div>
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 8; --glow-col: 8; --glow-delay: 3.5s; --glow-duration: 4.5s;"></div>
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 6; --glow-col: 22; --glow-delay: 1.8s; --glow-duration: 3.2s;"></div>
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 9; --glow-col: 15; --glow-delay: 4.2s; --glow-duration: 4s;"></div>
      <div class="hero__grid-glow hero__grid-glow--h" style="--glow-row: 2; --glow-col: 25; --glow-delay: 2.1s; --glow-duration: 3.6s;"></div>
      <!-- Vertical glow segments -->
      <div class="hero__grid-glow hero__grid-glow--v" style="--glow-row: 4; --glow-col: 7; --glow-delay: 0.4s; --glow-duration: 3.8s;"></div>
      <div class="hero__grid-glow hero__grid-glow--v" style="--glow-row: 6; --glow-col: 14; --glow-delay: 2.2s; --glow-duration: 4.1s;"></div>
      <div class="hero__grid-glow hero__grid-glow--v" style="--glow-row: 3; --glow-col: 20; --glow-delay: 1.5s; --glow-duration: 3.4s;"></div>
      <div class="hero__grid-glow hero__grid-glow--v" style="--glow-row: 7; --glow-col: 4; --glow-delay: 3.8s; --glow-duration: 4.3s;"></div>
      <div class="hero__grid-glow hero__grid-glow--v" style="--glow-row: 5; --glow-col: 26; --glow-delay: 0.9s; --glow-duration: 3.9s;"></div>
      <div class="hero__grid-glow hero__grid-glow--v" style="--glow-row: 8; --glow-col: 11; --glow-delay: 2.7s; --glow-duration: 4.4s;"></div>
    </div>
    <!-- Network pulse lines - aligned to 60px grid -->
    <div class="hero__pulse-lines" aria-hidden="true">
      <!-- Lines positioned at grid intervals: calc(60px * n) from edges -->
      <div class="hero__pulse-line" style="--line-col: 3; --line-delay: 0.2s; --line-duration: 3.5s;"></div>
      <div class="hero__pulse-line" style="--line-col: 6; --line-delay: 1.8s; --line-duration: 4.2s;"></div>
      <div class="hero__pulse-line" style="--line-col: 9; --line-delay: 0.9s; --line-duration: 3.8s;"></div>
      <div class="hero__pulse-line" style="--line-col: 12; --line-delay: 2.5s; --line-duration: 4.0s;"></div>
      <div class="hero__pulse-line" style="--line-col: 15; --line-delay: 0.4s; --line-duration: 3.6s;"></div>
      <div class="hero__pulse-line" style="--line-col: 18; --line-delay: 3.1s; --line-duration: 4.5s;"></div>
      <div class="hero__pulse-line" style="--line-col: 21; --line-delay: 1.3s; --line-duration: 3.9s;"></div>
      <div class="hero__pulse-line" style="--line-col: 24; --line-delay: 2.2s; --line-duration: 4.1s;"></div>
      <div class="hero__pulse-line" style="--line-col: 27; --line-delay: 0.7s; --line-duration: 3.7s;"></div>
      <div class="hero__pulse-line" style="--line-col: 30; --line-delay: 2.9s; --line-duration: 4.3s;"></div>
    </div>
  </div>

  <!-- Content -->
  <Container size="xl" class="hero__container">
    <div class="hero__content">
      <h1 class="hero__headline">
        <span class="hero__headline-top" data-hero-anim>{headlineTop}</span>
        <span class="hero__headline-bottom" data-hero-anim>{headlineBottom}</span>
      </h1>

      <p class="hero__subtitle" data-hero-anim>{subtitle}</p>

      <div class="hero__actions" data-hero-anim>
        <Button href={primaryCta.href} variant="primary" size="lg">
          {primaryCta.label}
        </Button>
        <Button href={secondaryCta.href} variant="outline" size="lg">
          {secondaryCta.label}
        </Button>
      </div>
    </div>

  </Container>
</section>

<style>
  .hero {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 85vh;
    min-height: 85dvh;
    overflow: hidden;
  }

  /* Background Container */
  .hero__background {
    position: absolute;
    inset: 0;
    z-index: 1;
  }

  /* Three.js Background - Clean solid dark */
  .hero__background--three {
    background: #0a0a0a;
  }

  .hero__three-gradient {
    display: none;
  }

  .hero__three-canvas {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    opacity: 0.85;
    /* Ensure pointer events work for interactivity */
    pointer-events: auto;
  }

  .hero__three-overlay {
    display: none;
  }

  .hero__three-noise {
    display: none;
  }

  /* Faded grid lines - more visible */
  .hero__three-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.06) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.06) 1px, transparent 1px);
    background-size: 60px 60px;
    z-index: 0;
    /* Radial fade - visible at bottom/center, fades to edges and top */
    mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      transparent 75%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 0.8) 0%,
      rgba(0, 0, 0, 0.4) 50%,
      transparent 75%
    );
  }

  /* Grid glow segments container */
  .hero__grid-glows {
    position: absolute;
    inset: 0;
    z-index: 1;
    pointer-events: none;
    overflow: hidden;
    mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      transparent 75%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      transparent 75%
    );
  }

  /* Individual glow segment */
  .hero__grid-glow {
    position: absolute;
    top: calc(var(--glow-row, 5) * 60px);
    left: calc(var(--glow-col, 10) * 60px);
    opacity: 0;
  }

  /* Horizontal glow segment */
  .hero__grid-glow--h {
    width: 120px;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent 0%,
      rgba(255, 255, 255, 0.15) 20%,
      rgba(255, 255, 255, 0.4) 50%,
      rgba(255, 255, 255, 0.15) 80%,
      transparent 100%
    );
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
    animation: glowPulseH var(--glow-duration, 4s) var(--glow-delay, 0s) infinite ease-in-out;
  }

  /* Vertical glow segment */
  .hero__grid-glow--v {
    width: 1px;
    height: 120px;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(255, 255, 255, 0.15) 20%,
      rgba(255, 255, 255, 0.4) 50%,
      rgba(255, 255, 255, 0.15) 80%,
      transparent 100%
    );
    box-shadow: 0 0 8px rgba(255, 255, 255, 0.3);
    animation: glowPulseV var(--glow-duration, 4s) var(--glow-delay, 0s) infinite ease-in-out;
  }

  @keyframes glowPulseH {
    0%, 100% {
      opacity: 0;
      transform: scaleX(0.5);
    }
    15% {
      opacity: 0;
    }
    30% {
      opacity: 1;
      transform: scaleX(1);
    }
    70% {
      opacity: 1;
      transform: scaleX(1);
    }
    85% {
      opacity: 0;
    }
  }

  @keyframes glowPulseV {
    0%, 100% {
      opacity: 0;
      transform: scaleY(0.5);
    }
    15% {
      opacity: 0;
    }
    30% {
      opacity: 1;
      transform: scaleY(1);
    }
    70% {
      opacity: 1;
      transform: scaleY(1);
    }
    85% {
      opacity: 0;
    }
  }

  /* Network pulse lines - shooting upward along grid lines */
  .hero__pulse-lines {
    position: absolute;
    inset: 0;
    z-index: 2;
    pointer-events: none;
    overflow: hidden;
    /* Match grid mask for seamless blend */
    mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      transparent 75%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 90% 80% at 50% 85%,
      rgba(0, 0, 0, 1) 0%,
      rgba(0, 0, 0, 0.5) 50%,
      transparent 75%
    );
  }

  .hero__pulse-line {
    position: absolute;
    /* Snap to 60px grid columns */
    left: calc(var(--line-col, 10) * 60px);
    bottom: 0;
    width: 1px;
    /* Long trailing tail */
    height: 200px;
    /* Gradient: brighter with glow effect */
    background: linear-gradient(
      to top,
      transparent 0%,
      rgba(255, 255, 255, 0.05) 10%,
      rgba(255, 255, 255, 0.1) 30%,
      rgba(255, 255, 255, 0.2) 60%,
      rgba(255, 255, 255, 0.35) 85%,
      rgba(255, 255, 255, 0.5) 100%
    );
    box-shadow: 0 0 6px rgba(255, 255, 255, 0.2);
    opacity: 0;
    transform: translateY(0);
    animation: pulseUp var(--line-duration, 4s) var(--line-delay, 0s) infinite ease-out;
  }

  @keyframes pulseUp {
    0% {
      opacity: 0;
      transform: translateY(0);
    }
    3% {
      opacity: 1;
    }
    60% {
      opacity: 0.8;
    }
    100% {
      opacity: 0;
      transform: translateY(-100vh);
    }
  }

  /* Respect reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .hero__pulse-line,
    .hero__grid-glow {
      animation: none;
      opacity: 0;
    }
  }

  /* Video - kept for fallback */
  .hero__video {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Fallback Image */
  .hero__fallback {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }

  /* Overlay Layers */
  .hero__overlay {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .hero__overlay--gradient {
    background: linear-gradient(
      180deg,
      rgba(10, 10, 10, 0.3) 0%,
      rgba(10, 10, 10, 0.5) 40%,
      rgba(10, 10, 10, 0.85) 100%
    );
  }

  .hero__overlay--radial {
    background: radial-gradient(
      ellipse 100% 60% at 50% 120%,
      rgba(229, 57, 53, 0.25) 0%,
      transparent 60%
    );
  }

  .hero__overlay--vignette {
    background: radial-gradient(
      ellipse 80% 80% at 50% 50%,
      transparent 0%,
      rgba(10, 10, 10, 0.4) 100%
    );
  }

  /* Container */
  .hero :global(.hero__container) {
    position: relative;
    z-index: 3;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 85vh;
    min-height: 85dvh;
    padding-top: 100px;
    padding-bottom: var(--space-12);
    pointer-events: none;
  }

  /* Content */
  .hero__content {
    text-align: center;
    max-width: 1000px;
    pointer-events: none;
  }

  /* Re-enable pointer events only on interactive elements */
  .hero__actions {
    pointer-events: auto;
  }

  /* Headline */
  .hero__headline {
    font-family: var(--font-display);
    font-size: var(--text-6xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-6);
  }

  .hero__headline-top,
  .hero__headline-bottom {
    display: block;
  }

  .hero__headline-bottom {
    color: var(--color-primary);
  }

  /* Subtitle */
  .hero__subtitle {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    max-width: 800px;
    margin: 0 auto var(--space-10);
  }

  /* Actions */
  .hero__actions {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--space-4);
  }


  /* Responsive */
  @media (max-width: 1200px) {
    .hero__three-canvas {
      /* Let Three.js handle scaling internally */
      opacity: 0.95;
    }
  }

  @media (max-width: 992px) {
    .hero__three-canvas {
      opacity: 0.9;
    }
  }

  @media (max-width: 768px) {
    .hero__headline {
      font-size: var(--text-4xl);
    }

    .hero__subtitle {
      font-size: var(--text-base);
    }

    .hero__actions {
      flex-direction: column;
      width: 100%;
      max-width: 300px;
    }

    .hero__three-canvas {
      opacity: 0.85;
    }

    .hero__three-grid {
      background-size: 50px 50px;
    }
  }

  @media (max-width: 480px) {
    .hero__headline {
      font-size: var(--text-3xl);
    }

    .hero__three-canvas {
      opacity: 0.8;
    }
  }
  /* Initial state for GSAP animations */
  [data-hero-anim] {
    opacity: 0;
    transform: translateY(30px);
  }
</style>

<script>
  import gsap from 'gsap';

  // Wait for DOM to be ready
  document.addEventListener('DOMContentLoaded', () => {
    const heroElements = document.querySelectorAll('[data-hero-anim]');

    // Set initial state
    gsap.set(heroElements, {
      opacity: 0,
      y: 30,
    });

    // Create timeline for hero content - faster animations
    const contentTl = gsap.timeline({ paused: true });

    contentTl.to(heroElements, {
      opacity: 1,
      y: 0,
      duration: 0.5,
      stagger: 0.1,
      ease: 'power2.out',
    });

    // Listen for logo animation complete event
    window.addEventListener('logoAnimationComplete', () => {
      // Start content immediately when logo is done
      contentTl.play();
    });

    // Fallback: if logo animation doesn't fire event within 2.5 seconds, show content anyway
    setTimeout(() => {
      if (contentTl.progress() === 0) {
        contentTl.play();
      }
    }, 2500);
  });
</script>
