---
import Container from '../ui/Container.astro';
import LogoMarquee from '../ui/LogoMarquee';

// Import partner logos
import techMahindraLogo from '../../assets/logos/tech-mahindra.svg';
import ixiaLogo from '../../assets/logos/ixia.png';
import awsLogo from '../../assets/logos/aws.svg';
import ikusiLogo from '../../assets/logos/ikusi.svg';
import aLogo from '../../assets/logos/a.svg';
import ciscoLogo from '../../assets/logos/cisco.png';

interface Props {
  title?: string;
}

const { title = 'Trusted by industry leaders' } = Astro.props;

const logos = [
  { name: 'Tech Mahindra', src: techMahindraLogo.src },
  { name: 'Ixia', src: ixiaLogo.src },
  { name: 'AWS', src: awsLogo.src },
  { name: 'Ikusi', src: ikusiLogo.src },
  { name: 'A', src: aLogo.src },
  { name: 'Cisco', src: ciscoLogo.src },
];
---

<section class="partners bg-grid-dark">
  <!-- Offset Badge Title -->
  {title && (
    <div class="partners__badge-wrapper">
      <span class="partners__badge">{title}</span>
    </div>
  )}

  <div class="partners__marquee-wrapper">
    <LogoMarquee
      client:visible
      logos={logos}
      speed={40}
    />
  </div>
</section>

<style>
  .partners {
    position: relative;
    background-color: var(--color-bg-secondary);
    padding: var(--space-12) 0;
    border-top: 1px solid var(--color-border-subtle);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .partners__badge-wrapper {
    position: absolute;
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
  }

  .partners__badge {
    display: inline-block;
    padding: var(--space-2-5) var(--space-5);
    font-family: var(--font-display);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-text-secondary);
    background-color: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    box-shadow: var(--shadow-md);
  }

  .partners__marquee-wrapper {
    width: 100%;
    padding: var(--space-4) 0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .partners__badge {
      font-size: var(--text-2xs);
      padding: var(--space-1-5) var(--space-4);
    }
  }
</style>
