---
/**
 * IoT TransformSection - "Transform Your IoT Operations"
 *
 * Bento grid layout with 3 benefit pillars:
 * 1. Peak Performance at Scale (traffic control, edge processing)
 * 2. Proactive Security (anomaly detection, threat response)
 * 3. Radical Efficiency (predictive maintenance, scalability)
 */
import Container from "../../ui/Container.astro";
import PillarCard from "../../ui/PillarCard.astro";

interface Feature {
  title: string;
  description: string;
}

interface Pillar {
  number: string;
  title: string;
  lead: string;
  icon: string;
  features: Feature[];
  accent: string;
}

interface Props {
  sectionTitle?: string;
  pillars?: Pillar[];
}

const {
  sectionTitle = "Transform Your IoT Operations",
  pillars = [
    {
      number: "01",
      title: "Chaos to Control: Peak Performance at Scale",
      lead: "Don't let data overload cripple your network. DART-AI acts as your automated traffic controller.",
      icon: "M13 10V3L4 14h7v7l9-11h-7z",
      accent: "#EA242B",
      features: [
        {
          title: "Real-Time Traffic Prioritization",
          description: "Automatically prioritize critical updates (like security alerts) over routine check-ins, ensuring optimal bandwidth use.",
        },
        {
          title: "Instant Congestion Detection",
          description: "Pinpoint network congestion or device failures the moment they happen, allowing immediate correction before system-wide outage.",
        },
        {
          title: "Edge Processing",
          description: "Process data closer to the source, dramatically reducing latency for autonomous systems and real-time industrial controls.",
        },
      ],
    },
    {
      number: "02",
      title: "Vulnerable to Fortified: Proactive Security",
      lead: "Every connected device is a potential entry point for threats. DART-AI is your vigilant guard.",
      icon: "M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z",
      accent: "#22c55e",
      features: [
        {
          title: "AI-Powered Anomaly Detection",
          description: "Learns the unique digital signature of your network and instantly flags unusual patterns that traditional firewalls miss.",
        },
        {
          title: "Automated Threat Response",
          description: "Automatically quarantine compromised devices or block malicious traffic, neutralizing risks before they escalate.",
        },
        {
          title: "Security Policy Enforcement",
          description: "Ensure every device adheres to your security protocols. Non-negotiable for healthcare, finance, and industrial IoT.",
        },
      ],
    },
    {
      number: "03",
      title: "Reactive to Predictive: Radical Efficiency",
      lead: "Stop waiting for things to break. DART-AI turns operational data into your most valuable asset.",
      icon: "M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z",
      accent: "#3b82f6",
      features: [
        {
          title: "Predictive Maintenance",
          description: "Predict potential hardware failures before they occur. Schedule maintenance on your terms and extend equipment life cycle.",
        },
        {
          title: "Resource Optimization",
          description: "Gain deep insights into usage patterns to optimize energy consumption and computational load, driving down costs.",
        },
        {
          title: "Seamless Scalability",
          description: "Scale from hundreds to millions of devices effortlessly, without proportional increase in management overhead.",
        },
      ],
    },
  ],
} = Astro.props;
---

<section class="transform-section" data-theme="light">
  <div class="transform-bg">
    <div class="transform-gradient"></div>
    <div class="transform-grid"></div>
    <div class="transform-pattern"></div>
  </div>

  <Container size="xl">
    <div class="transform-content">
      <!-- Section Header -->
      <header class="transform-header">
        <span class="transform-eyebrow">The Transformation</span>
        <h2 class="transform-title">{sectionTitle}</h2>
      </header>

      <!-- Bento Grid -->
      <div class="bento-grid">
        {pillars.map((pillar) => (
          <PillarCard
            number={pillar.number}
            title={pillar.title}
            lead={pillar.lead}
            icon={pillar.icon}
            features={pillar.features}
            accent={pillar.accent}
            theme="light"
          />
        ))}
      </div>
    </div>
  </Container>
</section>

<style>
  .transform-section {
    position: relative;
    padding: var(--space-20) 0 var(--space-24);
    background: var(--color-bg-secondary);
    overflow: hidden;
  }

  .transform-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .transform-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 20% 20%, var(--color-primary-3) 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 80% 80%, var(--color-blue-3) 0%, transparent 50%),
      linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-tertiary) 50%, var(--color-bg-secondary) 100%);
  }

  .transform-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--color-black-4) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-black-4) 1px, transparent 1px);
    background-size: 48px 48px;
    mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 0%, transparent 65%);
    -webkit-mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 0%, transparent 65%);
  }

  .transform-pattern {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 1px 1px, var(--color-black-3) 1px, transparent 0);
    background-size: 32px 32px;
    mask-image: linear-gradient(180deg, transparent 0%, black 20%, black 80%, transparent 100%);
  }

  .transform-content {
    position: relative;
    z-index: 1;
  }

  /* Header */
  .transform-header {
    text-align: center;
    margin-bottom: var(--space-14);
  }

  .transform-eyebrow {
    display: inline-block;
    padding: var(--space-1-5) var(--space-3-5);
    margin-bottom: var(--space-4);
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-primary);
    background: var(--color-primary-8);
    border: 1px solid var(--color-primary-15);
    border-radius: var(--radius-full);
  }

  .transform-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: var(--font-bold);
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Bento Grid */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    align-items: stretch;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .bento-grid {
      grid-template-columns: 1fr;
      gap: var(--space-5);
    }
  }

  @media (max-width: 640px) {
    .transform-section {
      padding: var(--space-14) 0 var(--space-16);
    }

    .transform-header {
      margin-bottom: var(--space-10);
    }
  }
</style>
