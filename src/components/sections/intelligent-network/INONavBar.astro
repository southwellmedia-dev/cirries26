---
/**
 * INONavBar - Navigation for Intelligent Network Observability child pages
 *
 * Premium card-based navigation featuring:
 * - Four AI solution cards with unique accent colors
 * - Interactive hover states with color-coded accents
 * - Clear visual hierarchy and feature badges
 */
import Container from "../../ui/Container.astro";
import CapabilityCard from "../../ui/CapabilityCard.astro";

interface NavItem {
  title: string;
  description: string;
  badges: string[];
  href: string;
  accent: string;
  faIcon: string;
}

interface Props {
  label?: string;
  currentPage?: string;
  items?: NavItem[];
}

const {
  label = "Explore Intelligent Network Observability Solutions",
  currentPage = "",
  items = [
    {
      title: "DART AI",
      description:
        "Real-time anomaly detection and automated diagnostics engine",
      badges: ["Detection", "Diagnostics"],
      href: "/solutions/intelligent-network-observability/dart-ai",
      accent: "#EA242B",
      faIcon: "fa-solid fa-bullseye",
    },
    {
      title: "Gen AI",
      description:
        "Natural language insights and conversational network analysis",
      badges: ["NLP", "Insights"],
      href: "/solutions/intelligent-network-observability/gen-ai",
      accent: "#EA242B",
      faIcon: "fa-solid fa-wand-magic-sparkles",
    },
    {
      title: "Machine Learning",
      description: "Adaptive pattern recognition and predictive intelligence",
      badges: ["Patterns", "Prediction"],
      href: "/solutions/intelligent-network-observability/machine-learning-engine",
      accent: "#EA242B",
      faIcon: "fa-solid fa-brain",
    },
    {
      title: "Agentic AI",
      description: "Autonomous operations and intelligent remediation agents",
      badges: ["Autonomous", "Remediation"],
      href: "/solutions/intelligent-network-observability/agentic-ai",
      accent: "#EA242B",
      faIcon: "fa-solid fa-robot",
    },
  ],
} = Astro.props;

// Filter out current page from navigation
const navItems = items.filter((item) => item.href !== currentPage);
---

<section class="ino-nav-bar" data-theme="light">
  <Container size="xl">
    <div class="nav-wrapper">
      <!-- Section Label -->
      <div class="nav-label">
        <span class="label-line"></span>
        <span class="label-text">{label}</span>
        <span class="label-line"></span>
      </div>

      <!-- Navigation Cards Grid -->
      <div class="nav-cards">
        {
          navItems.map((item) => (
            <CapabilityCard
              icon={item.faIcon}
              iconType="fa"
              title={item.title}
              description={item.description}
              badges={item.badges}
              accent={item.accent}
              theme="light"
              size="sm"
              href={item.href}
              accentPosition="bottom"
            />
          ))
        }
      </div>
    </div>
  </Container>
</section>

<style>
  .ino-nav-bar {
    position: relative;
    padding: var(--space-12) 0 var(--space-16);
    background: linear-gradient(
      180deg,
      var(--color-bg-secondary) 0%,
      var(--color-bg-card) 100%
    );
    border-top: 1px solid var(--color-black-5);
    border-bottom: 1px solid var(--color-black-5);
  }

  .nav-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-8);
  }

  /* Label */
  .nav-label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
  }

  .label-line {
    flex: 1;
    max-width: 150px;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-black-10),
      transparent
    );
  }

  .label-text {
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-text-muted);
  }

  /* Navigation Cards Grid */
  .nav-cards {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-5);
  }

  /* Responsive */
  @media (max-width: 1100px) {
    .nav-cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .ino-nav-bar {
      padding: var(--space-10) 0 var(--space-12);
    }

    .nav-cards {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .label-line {
      max-width: 80px;
    }
  }
</style>
