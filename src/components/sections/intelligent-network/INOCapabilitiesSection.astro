---
/**
 * INOCapabilitiesSection - Capabilities Overview for Intelligent Network Observability
 *
 * Bento-style grid showcasing unified AI capabilities:
 * - Core value propositions
 * - How the AI components work together
 * - Key differentiators and outcomes
 */
import Container from "../../ui/Container.astro";
import CapabilityCard from "../../ui/CapabilityCard.astro";

interface Capability {
  icon: string;
  title: string;
  description: string;
  accent: string;
}

interface Props {
  eyebrow?: string;
  title?: string;
  highlightText?: string;
  description?: string;
  capabilities?: Capability[];
}

const {
  eyebrow = "Unified AI Platform",
  title = "One Platform.",
  highlightText = "Complete Intelligence.",
  description = "Our AI components don't work in silos—they form an integrated intelligence ecosystem. Each capability enhances the others, creating a network observability platform that's greater than the sum of its parts.",
  capabilities = [
    {
      icon: "fa-solid fa-eye",
      title: "360° Visibility",
      description: "See every packet, every flow, every anomaly. Our AI processes 100% of network data in real-time, eliminating blind spots and guesswork.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-bolt",
      title: "Instant Detection",
      description: "DART AI identifies anomalies in milliseconds, not minutes. Automated diagnostics begin before you even know there's an issue.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-message",
      title: "Natural Language",
      description: "Ask questions in plain English. Gen AI translates complex network telemetry into actionable insights anyone can understand.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-chart-line",
      title: "Predictive Intelligence",
      description: "Machine Learning models learn your network's patterns, predicting issues before they impact users and optimizing proactively.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-gears",
      title: "Autonomous Remediation",
      description: "Agentic AI doesn't just detect problems—it fixes them. Intelligent agents execute remediation playbooks automatically.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-shield-halved",
      title: "Security Built-In",
      description: "Every AI component contributes to security. From threat detection to anomaly correlation, protection is embedded in the platform.",
      accent: "#EA242B",
    },
  ],
} = Astro.props;
---

<section class="ino-capabilities" id="capabilities" data-theme="dark">
  <Container size="xl">
    <!-- Section Header -->
    <div class="capabilities-header">
      <span class="capabilities-eyebrow">{eyebrow}</span>
      <h2 class="capabilities-title">
        {title}
        <span>{highlightText}</span>
      </h2>
      <p class="capabilities-description">{description}</p>
    </div>

    <!-- Capabilities Grid -->
    <div class="capabilities-grid">
      {capabilities.map((cap) => (
        <CapabilityCard
          icon={cap.icon}
          iconType="fa"
          title={cap.title}
          description={cap.description}
          accent={cap.accent}
          theme="dark"
          size="md"
        />
      ))}
    </div>

    <!-- Bottom Stats/Proof Points -->
    <div class="capabilities-stats">
      <div class="stat-item">
        <div class="stat-value">100%</div>
        <div class="stat-label">Packet Visibility</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">&lt;50ms</div>
        <div class="stat-label">Detection Time</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">85%</div>
        <div class="stat-label">Faster MTTR</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">24/7</div>
        <div class="stat-label">Autonomous Ops</div>
      </div>
    </div>
  </Container>
</section>

<style>
  .ino-capabilities {
    position: relative;
    padding: var(--space-20) 0;
    background: var(--color-bg-primary);
    overflow: hidden;
  }

  /* Subtle grid background */
  .ino-capabilities::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--color-white-3) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-white-3) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 30%, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 80% 60% at 50% 30%, black 20%, transparent 70%);
  }

  /* Header */
  .capabilities-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-12);
    position: relative;
    z-index: 1;
  }

  .capabilities-eyebrow {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary, #EA242B);
    padding: var(--space-1-5) var(--space-3-5);
    background: var(--color-primary-10);
    border: 1px solid var(--color-primary-20);
    border-radius: var(--radius-md);
  }

  .capabilities-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: var(--font-bold);
    line-height: 1.15;
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-5);
  }

  .capabilities-title span {
    display: block;
    color: var(--color-primary, #EA242B);
  }

  .capabilities-description {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
  }

  /* Capabilities Grid */
  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-5);
    position: relative;
    z-index: 1;
  }

  /* Stats Section */
  .capabilities-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-8);
    margin-top: var(--space-16);
    padding: var(--space-8) var(--space-10);
    background: var(--color-white-3);
    border: 1px solid var(--color-white-5);
    border-radius: 16px;
    position: relative;
    z-index: 1;
  }

  .stat-item {
    text-align: center;
    padding: 0 var(--space-4);
  }

  .stat-value {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: var(--font-bold);
    color: var(--color-success, #22c55e);
    line-height: 1;
    margin-bottom: var(--space-2);
  }

  .stat-label {
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-dim);
  }

  .stat-divider {
    width: 1px;
    height: 50px;
    background: linear-gradient(180deg, transparent, var(--color-white-10), transparent);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .capabilities-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .ino-capabilities {
      padding: var(--space-12) 0;
    }

    .capabilities-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .capabilities-title {
      font-size: var(--text-2xl);
    }

    .capabilities-stats {
      flex-direction: column;
      gap: var(--space-6);
      padding: var(--space-6);
    }

    .stat-divider {
      width: 60px;
      height: 1px;
    }

    .stat-value {
      font-size: 1.75rem;
    }
  }
</style>
