---
import { Image } from 'astro:assets';

interface UseCase {
  image: string;
  badge: string;
  title: string;
  description: string;
  href: string;
}

interface Props {
  useCases?: UseCase[];
}

const {
  useCases = [
    {
      image: "https://images.unsplash.com/photo-1551190822-a9333d879b1f?w=2400&q=90&fit=crop",
      badge: "Healthcare",
      title: "Medical Device Network Reliability",
      description:
        "Discover how DART AI transformed network operations for remotely controlled surgical robots, reducing jitter by 50% and packet loss by 30% in a private 5G environment.",
      href: "/use-cases/medical-device-network-reliability",
    },
    {
      image: "https://images.unsplash.com/photo-1519494026892-80bbd2d6fd0d?w=2400&q=90&fit=crop",
      badge: "Healthcare",
      title: "Hospital Network Enhancement",
      description:
        "Learn how DART AI enhanced network performance for EHR, telemedicine, and IoT medical devices, achieving over 50% decrease in service interruptions.",
      href: "/use-cases/hospital-network-enhancement",
    },
    {
      image: "https://images.unsplash.com/photo-1558494949-ef010cbdcc31?w=2400&q=90&fit=crop",
      badge: "Telecommunications",
      title: "Network Operator Experience",
      description:
        "See how DART AI transformed network operations for a national operator, reducing latency complaints by 50% across hybrid and 5G infrastructure.",
      href: "/use-cases/network-operator-experience",
    },
  ],
} = Astro.props;
---

<section class="use-cases">
  {
    useCases.map((useCase, index) => (
      <a href={useCase.href} class="use-case-card">
        <Image
          src={useCase.image}
          alt=""
          class="use-case-card__image"
          loading="lazy"
          width={800}
          height={600}
          quality={80}
          widths={[400, 600, 800]}
          sizes="(max-width: 1024px) 100vw, 33vw"
        />

        <div class="use-case-card__overlay" />

        <div class="use-case-card__content">
          <span class="use-case-card__badge">{useCase.badge}</span>
          <h3 class="use-case-card__title">{useCase.title}</h3>
          <p class="use-case-card__description">{useCase.description}</p>

          <span class="use-case-card__cta">
            Read Case Study
            <svg
              width="16"
              height="16"
              viewBox="0 0 16 16"
              fill="none"
              aria-hidden="true"
            >
              <path
                d="M3 8H13M13 8L9 4M13 8L9 12"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
              />
            </svg>
          </span>
        </div>
      </a>
    ))
  }
</section>

<style>
  .use-cases {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    width: 100vw;
    height: 70vh;
    margin-left: calc(-50vw + 50%);
  }

  .use-case-card {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    text-decoration: none;
    overflow: hidden;
  }

  .use-case-card__image {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: var(--z-base);
    filter: grayscale(100%);
    transition:
      transform var(--duration-slow) var(--ease-out),
      filter var(--duration-normal) var(--ease-out);
  }

  .use-case-card:hover .use-case-card__image {
    transform: scale(1.05);
    filter: grayscale(0%);
  }

  .use-case-card__overlay {
    position: absolute;
    inset: 0;
    z-index: var(--z-elevated);
    background: linear-gradient(
      180deg,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, 0.3) 50%,
      rgba(0, 0, 0, 0.85) 100%
    );
  }

  .use-case-card__content {
    position: relative;
    z-index: var(--z-dropdown);
    padding: var(--space-8);
  }

  .use-case-card__badge {
    display: inline-block;
    font-family: var(--font-display);
    font-size: var(--text-xs);
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: var(--tracking-wider);
    color: var(--color-text-primary);
    background: var(--color-primary);
    padding: var(--space-1-5) var(--space-3);
    border-radius: var(--radius-full);
    margin-bottom: var(--space-4);
  }

  .use-case-card__title {
    font-family: var(--font-display);
    font-size: var(--text-2xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-3);
    max-width: 400px;
  }

  .use-case-card__description {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-5);
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .use-case-card__cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    background: transparent;
    border: 1px solid var(--color-border-hover);
    padding: var(--space-2-5) var(--space-5);
    border-radius: var(--radius-full);
    opacity: 0;
    transform: translateY(var(--space-2));
    transition:
      opacity var(--duration-normal) var(--ease-out),
      transform var(--duration-normal) var(--ease-out),
      background-color var(--duration-fast) var(--ease-out),
      border-color var(--duration-fast) var(--ease-out);
  }

  .use-case-card:hover .use-case-card__cta {
    opacity: 1;
    transform: translateY(0);
  }

  .use-case-card__cta:hover {
    background: var(--color-primary);
    border-color: var(--color-primary);
  }

  .use-case-card__cta svg {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .use-case-card:hover .use-case-card__cta:hover svg {
    transform: translateX(var(--space-1));
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .use-cases {
      grid-template-columns: 1fr;
      height: auto;
    }

    .use-case-card {
      height: 70vh;
    }

    .use-case-card__cta {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .use-case-card {
      height: 60vh;
    }

    .use-case-card__title {
      font-size: var(--text-xl);
    }

    .use-case-card__content {
      padding: var(--space-6);
    }
  }
</style>
