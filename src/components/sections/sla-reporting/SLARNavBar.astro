---
/**
 * SLARNavBar - Navigation for SLA Assurance & Reporting child pages
 *
 * Uses CapabilityCard component for consistent card styling.
 * Two solution cards for SLA Assurance and Intelligent Reporting
 */
import Container from "../../ui/Container.astro";
import CapabilityCard from "../../ui/CapabilityCard.astro";

interface NavItem {
  title: string;
  description: string;
  badges: string[];
  href: string;
  accent: string;
  faIcon: string;
}

interface Props {
  label?: string;
  currentPage?: string;
  items?: NavItem[];
}

const {
  label = "Explore SLA Assurance & Reporting Solutions",
  currentPage = "",
  items = [
    {
      title: "SLA Assurance",
      description: "Transform SLA management from reactive fire-fighting to proactive service assurance with packet-level verification",
      badges: ["Proactive", "Packet-Level"],
      href: "/solutions/sla-assurance-reporting/sla-assurance",
      accent: "#EA242B",
      faIcon: "fa-solid fa-file-contract",
    },
    {
      title: "Intelligent Reporting",
      description: "AI-powered reports that translate complex network events into role-specific narratives that drive action",
      badges: ["AI-Generated", "Role-Specific"],
      href: "/solutions/sla-assurance-reporting/reporting",
      accent: "#EA242B",
      faIcon: "fa-solid fa-chart-pie",
    },
  ],
} = Astro.props;

// Filter out current page from navigation
const navItems = items.filter(item => item.href !== currentPage);
---

<section class="slar-nav-bar" id="solutions">
  <Container size="xl">
    <div class="nav-wrapper">
      <!-- Section Label -->
      <div class="nav-label">
        <span class="label-line"></span>
        <span class="label-text">{label}</span>
        <span class="label-line"></span>
      </div>

      <!-- Navigation Cards Grid -->
      <div class="nav-cards">
        {navItems.map((item) => (
          <CapabilityCard
            icon={item.faIcon}
            iconType="fa"
            title={item.title}
            description={item.description}
            badges={item.badges}
            accent={item.accent}
            theme="light"
            size="sm"
            href={item.href}
            accentPosition="bottom"
          />
        ))}
      </div>
    </div>
  </Container>
</section>

<style>
  .slar-nav-bar {
    position: relative;
    padding: var(--space-10) 0 var(--space-12);
    background: linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-card) 100%);
    border-top: 1px solid var(--color-black-5);
    border-bottom: 1px solid var(--color-black-5);
  }

  .nav-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* Label */
  .nav-label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
  }

  .label-line {
    flex: 1;
    max-width: 120px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-black-10), transparent);
  }

  .label-text {
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--color-text-muted);
  }

  /* Navigation Cards Grid */
  .nav-cards {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-4);
    max-width: 800px;
    margin: 0 auto;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .slar-nav-bar {
      padding: var(--space-8) 0 var(--space-10);
    }

    .nav-cards {
      grid-template-columns: 1fr;
      gap: var(--space-3);
    }

    .label-line {
      max-width: 60px;
    }
  }
</style>
