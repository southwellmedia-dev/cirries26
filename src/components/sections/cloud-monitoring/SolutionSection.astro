---
/**
 * Cloud SolutionSection - "From Fragments to Unified Truth"
 *
 * Before/After transformation showing:
 * - Before: Siloed cloud dashboards with gaps
 * - After: Unified DART-AI view with complete visibility
 */
import Container from "../../ui/Container.astro";

interface Capability {
  faIcon: string; // Font Awesome icon class
  title: string;
  description: string;
  metric: string;
  metricLabel: string;
}

interface Props {
  sectionTitle?: string;
  sectionSubtitle?: string;
  beforeTitle?: string;
  afterTitle?: string;
  capabilities?: Capability[];
}

const {
  sectionTitle = "The Solution",
  sectionSubtitle = "A Single Source of Truth for Your Entire Cloud Estate",
  beforeTitle = "Siloed Visibility",
  afterTitle = "Unified Intelligence",
  capabilities = [
    {
      faIcon: "fa-solid fa-eye",
      title: "DART IQ: Forensic Depth",
      description: "Analyze every packet to generate rich metadata—full-capture intelligence without the crippling cost.",
      metric: "100%",
      metricLabel: "Packet Analysis",
    },
    {
      faIcon: "fa-solid fa-wifi",
      title: "Reachability Assurance",
      description: "Continuously validate SD-WAN, VPN, and interconnect paths in real-time—know instantly when routes break.",
      metric: "24/7",
      metricLabel: "Path Validation",
    },
    {
      faIcon: "fa-solid fa-robot",
      title: "Autonomous Action",
      description: "AI detects anomalies, correlates events across providers, and generates natural-language incident summaries.",
      metric: "90%",
      metricLabel: "Faster MTTR",
    },
  ],
} = Astro.props;

// Before state - siloed clouds
const siloedClouds = [
  { name: "AWS", color: "#FF9900", status: "Partial", gap: "E-W blind", faIcon: "fa-brands fa-aws" },
  { name: "Azure", color: "#0078D4", status: "Limited", gap: "Cross-VNet", faIcon: "fa-brands fa-microsoft" },
  { name: "GCP", color: "#4285F4", status: "Partial", gap: "Flow logs only", faIcon: "fa-brands fa-google" },
  { name: "Private", color: "#6B7280", status: "Isolated", gap: "No correlation", faIcon: "fa-solid fa-server" },
];
---

<section class="solution-section" data-theme="light">
  <div class="solution-bg">
    <div class="solution-gradient"></div>
    <div class="solution-grid"></div>
  </div>

  <Container size="xl">
    <div class="solution-content">
      <!-- Header -->
      <header class="solution-header">
        <span class="solution-eyebrow">{sectionTitle}</span>
        <h2 class="solution-title">{sectionSubtitle}</h2>
      </header>

      <!-- Before/After Comparison -->
      <div class="comparison">
        <!-- BEFORE -->
        <div class="comparison-panel comparison-panel--before">
          <div class="panel-badge panel-badge--before">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="18" y1="6" x2="6" y2="18"></line>
              <line x1="6" y1="6" x2="18" y2="18"></line>
            </svg>
            {beforeTitle}
          </div>

          <div class="before-interface">
            <!-- Siloed cloud boxes -->
            <div class="silo-boxes">
              {siloedClouds.map((cloud, index) => (
                <div
                  class="silo-box"
                  style={`--silo-color: ${cloud.color}; --silo-delay: ${index * 0.08}s`}
                >
                  <div class="silo-box-header">
                    <span class="silo-box-name" style={`color: ${cloud.color}`}>
                      <i class={`${cloud.faIcon} silo-brand-icon`}></i>
                      {cloud.name}
                    </span>
                    <span class="silo-box-status">{cloud.status}</span>
                  </div>
                  <div class="silo-box-gap">
                    <svg width="10" height="10" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <line x1="4.93" y1="4.93" x2="19.07" y2="19.07"></line>
                    </svg>
                    {cloud.gap}
                  </div>
                </div>
              ))}
            </div>

            <!-- No unified view message -->
            <div class="before-footer">
              <div class="disconnect-lines">
                <span class="disconnect-line"></span>
                <span class="disconnect-line"></span>
                <span class="disconnect-line"></span>
              </div>
              <div class="before-message">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                  <path d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>No unified visibility</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Transformation Arrow -->
        <div class="transform-arrow">
          <div class="arrow-line"></div>
          <div class="arrow-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </div>
          <span class="arrow-label">DART-AI</span>
          <div class="arrow-line"></div>
        </div>

        <!-- AFTER -->
        <div class="comparison-panel comparison-panel--after">
          <div class="panel-badge panel-badge--after">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            {afterTitle}
          </div>

          <div class="after-interface">
            <!-- Unified cloud bar -->
            <div class="unified-cloud-bar">
              <div class="cloud-segment cloud-segment--aws">
                <i class="fa-brands fa-aws segment-icon"></i>
                <span class="segment-label">AWS</span>
              </div>
              <div class="cloud-connector"></div>
              <div class="cloud-segment cloud-segment--azure">
                <i class="fa-brands fa-microsoft segment-icon"></i>
                <span class="segment-label">Azure</span>
              </div>
              <div class="cloud-connector"></div>
              <div class="cloud-segment cloud-segment--gcp">
                <i class="fa-brands fa-google segment-icon"></i>
                <span class="segment-label">GCP</span>
              </div>
              <div class="cloud-connector"></div>
              <div class="cloud-segment cloud-segment--private">
                <i class="fa-solid fa-server segment-icon"></i>
                <span class="segment-label">Private</span>
              </div>
            </div>

            <!-- Visibility badge -->
            <div class="visibility-badge">
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                <path d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
              </svg>
              <span>100% N-S & E-W Visibility</span>
            </div>

            <!-- Capability Cards -->
            <div class="capability-cards">
              {capabilities.map((cap, index) => (
                <div class="capability-card" style={`--cap-delay: ${index * 0.1}s`}>
                  <div class="cap-icon">
                    <i class={cap.faIcon}></i>
                  </div>
                  <div class="cap-content">
                    <h4 class="cap-title">{cap.title}</h4>
                    <p class="cap-desc">{cap.description}</p>
                  </div>
                  <div class="cap-metric">
                    <span class="metric-value">{cap.metric}</span>
                    <span class="metric-label">{cap.metricLabel}</span>
                  </div>
                </div>
              ))}
            </div>
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>

<style>
  .solution-section {
    position: relative;
    padding: var(--space-20) 0;
    background: #ffffff;
    overflow: hidden;
  }

  .solution-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .solution-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 70% 50% at 30% 30%, rgba(234, 36, 43, 0.03) 0%, transparent 50%),
      radial-gradient(ellipse 50% 40% at 70% 70%, rgba(34, 197, 94, 0.03) 0%, transparent 50%),
      linear-gradient(180deg, #ffffff 0%, #f9fafb 50%, #ffffff 100%);
  }

  .solution-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 0, 0, 0.02) 1px, transparent 1px);
    background-size: 50px 50px;
    mask-image: radial-gradient(ellipse 60% 50% at 50% 50%, black 0%, transparent 65%);
  }

  .solution-content {
    position: relative;
    z-index: 1;
  }

  /* Header */
  .solution-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }

  .solution-eyebrow {
    display: inline-block;
    padding: 0.35rem 0.9rem;
    margin-bottom: var(--space-4);
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #22c55e;
    background: rgba(34, 197, 94, 0.08);
    border: 1px solid rgba(34, 197, 94, 0.15);
    border-radius: var(--radius-full);
  }

  .solution-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: var(--font-bold);
    line-height: 1.2;
    letter-spacing: -0.02em;
    color: #111111;
    max-width: 700px;
    margin: 0 auto;
  }

  /* Comparison Layout */
  .comparison {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: var(--space-6);
    align-items: stretch;
  }

  .comparison-panel {
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 16px;
    padding: var(--space-6);
    position: relative;
    overflow: hidden;
  }

  .comparison-panel--before {
    box-shadow:
      0 4px 16px rgba(0, 0, 0, 0.04),
      0 1px 3px rgba(0, 0, 0, 0.02);
  }

  .comparison-panel--after {
    background: linear-gradient(135deg, #ffffff 0%, #f0fdf4 100%);
    border-color: rgba(34, 197, 94, 0.15);
    box-shadow:
      0 8px 32px rgba(34, 197, 94, 0.08),
      0 4px 16px rgba(0, 0, 0, 0.04);
  }

  .panel-badge {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 6px 12px;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    border-radius: 6px;
    margin-bottom: var(--space-5);
  }

  .panel-badge--before {
    color: #6b7280;
    background: rgba(107, 114, 128, 0.08);
    border: 1px solid rgba(107, 114, 128, 0.12);
  }

  .panel-badge--after {
    color: #22c55e;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.2);
  }

  /* Before Interface */
  .before-interface {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .silo-boxes {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 8px;
  }

  .silo-box {
    padding: 12px;
    background: #f9fafb;
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 8px;
    opacity: 0;
    transform: translateY(6px);
    animation: siloAppear 0.3s ease forwards;
    animation-delay: var(--silo-delay);
  }

  @keyframes siloAppear {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .silo-box-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 8px;
  }

  .silo-box-name {
    display: flex;
    align-items: center;
    gap: 6px;
    font-family: var(--font-display);
    font-size: 0.85rem;
    font-weight: var(--font-semibold);
  }

  .silo-brand-icon {
    font-size: 0.9rem;
  }

  .silo-box-status {
    font-family: var(--font-mono);
    font-size: 0.5rem;
    text-transform: uppercase;
    color: #f59e0b;
    background: rgba(245, 158, 11, 0.1);
    padding: 2px 6px;
    border-radius: 3px;
  }

  .silo-box-gap {
    display: flex;
    align-items: center;
    gap: 5px;
    font-family: var(--font-mono);
    font-size: 0.6rem;
    color: #ef4444;
  }

  .before-footer {
    padding-top: var(--space-3);
    border-top: 1px dashed rgba(0, 0, 0, 0.08);
  }

  .disconnect-lines {
    display: flex;
    justify-content: center;
    gap: 20px;
    margin-bottom: 10px;
  }

  .disconnect-line {
    width: 40px;
    height: 2px;
    background: rgba(239, 68, 68, 0.2);
    border-radius: 1px;
  }

  .before-message {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: #6b7280;
  }

  .before-message svg {
    color: #9ca3af;
  }

  /* Transform Arrow */
  .transform-arrow {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 0 var(--space-2);
  }

  .arrow-line {
    width: 2px;
    height: 60px;
    background: linear-gradient(180deg, rgba(234, 36, 43, 0.1) 0%, rgba(234, 36, 43, 0.3) 50%, rgba(234, 36, 43, 0.1) 100%);
    border-radius: 1px;
  }

  .arrow-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-primary) 0%, #c41e24 100%);
    border-radius: 50%;
    color: #ffffff;
    box-shadow:
      0 4px 16px rgba(234, 36, 43, 0.3),
      0 0 0 4px rgba(234, 36, 43, 0.1);
  }

  .arrow-label {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
  }

  /* After Interface */
  .after-interface {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .unified-cloud-bar {
    display: flex;
    align-items: center;
    padding: 10px;
    background: #ffffff;
    border: 1px solid rgba(34, 197, 94, 0.2);
    border-radius: 10px;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.03);
  }

  .cloud-segment {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
    padding: 8px 10px;
    border-radius: 6px;
    text-align: center;
  }

  .segment-icon {
    font-size: 1rem;
    opacity: 0.8;
  }

  .cloud-segment--aws .segment-icon { color: #FF9900; }
  .cloud-segment--azure .segment-icon { color: #0078D4; }
  .cloud-segment--gcp .segment-icon { color: #4285F4; }
  .cloud-segment--private .segment-icon { color: #6B7280; }

  .cloud-segment--aws { background: rgba(255, 153, 0, 0.08); }
  .cloud-segment--azure { background: rgba(0, 120, 212, 0.08); }
  .cloud-segment--gcp { background: rgba(66, 133, 244, 0.08); }
  .cloud-segment--private { background: rgba(107, 114, 128, 0.08); }

  .segment-label {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    font-weight: var(--font-medium);
    text-transform: uppercase;
    color: #374151;
  }

  .cloud-connector {
    width: 16px;
    height: 2px;
    background: linear-gradient(90deg, rgba(34, 197, 94, 0.3), rgba(34, 197, 94, 0.6), rgba(34, 197, 94, 0.3));
    border-radius: 1px;
  }

  .visibility-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 6px;
    padding: 8px 14px;
    background: rgba(34, 197, 94, 0.08);
    border: 1px solid rgba(34, 197, 94, 0.15);
    border-radius: 6px;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #22c55e;
  }

  /* Capability Cards */
  .capability-cards {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .capability-card {
    display: flex;
    align-items: center;
    gap: 12px;
    padding: 14px;
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.05);
    border-radius: 10px;
    opacity: 0;
    transform: translateX(-8px);
    animation: capSlide 0.4s ease forwards;
    animation-delay: var(--cap-delay);
    transition: box-shadow 0.2s ease, border-color 0.2s ease;
  }

  .capability-card:hover {
    border-color: rgba(34, 197, 94, 0.2);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.05);
  }

  @keyframes capSlide {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .cap-icon {
    width: 38px;
    height: 38px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: rgba(34, 197, 94, 0.08);
    border-radius: 8px;
    color: #22c55e;
    font-size: 1rem;
  }

  .cap-content {
    flex: 1;
    min-width: 0;
  }

  .cap-title {
    font-family: var(--font-display);
    font-size: 0.85rem;
    font-weight: var(--font-semibold);
    color: #111111;
    margin: 0 0 3px 0;
  }

  .cap-desc {
    font-family: var(--font-body);
    font-size: 0.75rem;
    line-height: 1.45;
    color: #6b7280;
    margin: 0;
  }

  .cap-metric {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    flex-shrink: 0;
  }

  .metric-value {
    font-family: var(--font-display);
    font-size: 1.1rem;
    font-weight: var(--font-bold);
    color: #22c55e;
  }

  .metric-label {
    font-family: var(--font-mono);
    font-size: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: #9ca3af;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .comparison {
      grid-template-columns: 1fr;
      gap: var(--space-8);
    }

    .transform-arrow {
      flex-direction: row;
      padding: var(--space-2) 0;
    }

    .arrow-line {
      width: 60px;
      height: 2px;
    }

    .arrow-icon {
      width: 40px;
      height: 40px;
    }
  }

  @media (max-width: 640px) {
    .solution-section {
      padding: var(--space-14) 0;
    }

    .silo-boxes {
      grid-template-columns: 1fr;
    }

    .capability-card {
      flex-wrap: wrap;
      gap: 10px;
    }

    .cap-metric {
      width: 100%;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding-top: 8px;
      border-top: 1px solid rgba(0, 0, 0, 0.04);
    }
  }
</style>
