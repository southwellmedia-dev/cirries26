---
/**
 * CloudNavBar - Navigation for cloud sub-pages
 *
 * Uses CapabilityCard component for consistent card styling.
 * Split design showcasing Public Cloud and Private Cloud paths
 */
import Container from "../../ui/Container.astro";
import CapabilityCard from "../../ui/CapabilityCard.astro";

interface NavItem {
  title: string;
  description: string;
  badges: string[];
  href: string;
  accent: string;
  faIcon: string;
}

interface Props {
  label?: string;
  currentPage?: string;
  items?: NavItem[];
}

const {
  label = "Explore Cloud Solutions",
  currentPage = "",
  items = [
    {
      title: "Cloud Overview",
      description: "Unified cloud monitoring across all environments",
      badges: ["All Environments"],
      href: "/solutions/connectivity-performance/cloud-monitoring",
      accent: "#EA242B",
      faIcon: "fa-solid fa-cloud-arrow-up",
    },
    {
      title: "Public Cloud",
      description: "Multi-cloud visibility across AWS, Azure, and GCP",
      badges: ["AWS", "Azure", "GCP"],
      href: "/solutions/connectivity-performance/cloud-monitoring/public-cloud",
      accent: "#FF9900",
      faIcon: "fa-solid fa-cloud",
    },
    {
      title: "Private Cloud",
      description: "On-premises and VMware infrastructure monitoring",
      badges: ["VMware", "On-Prem"],
      href: "/solutions/connectivity-performance/cloud-monitoring/private-cloud",
      accent: "#607078",
      faIcon: "fa-solid fa-server",
    },
  ],
} = Astro.props;

// Filter out current page from navigation
const navItems = items.filter(item => item.href !== currentPage);
---

<section class="cloud-nav-bar">
  <Container size="xl">
    <div class="nav-wrapper">
      <!-- Center label -->
      <div class="nav-label">
        <span class="label-line"></span>
        <span class="label-text">{label}</span>
        <span class="label-line"></span>
      </div>

      <!-- Navigation cards -->
      <div class="nav-cards">
        {navItems.map((item) => (
          <CapabilityCard
            icon={item.faIcon}
            iconType="fa"
            title={item.title}
            description={item.description}
            badges={item.badges}
            accent={item.accent}
            theme="light"
            size="sm"
            href={item.href}
            accentPosition="bottom"
          />
        ))}
      </div>
    </div>
  </Container>
</section>

<style>
  .cloud-nav-bar {
    position: relative;
    padding: var(--space-10) 0 var(--space-12);
    background: linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-card) 100%);
    border-top: 1px solid var(--color-black-5);
    border-bottom: 1px solid var(--color-black-5);
  }

  .nav-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* Label */
  .nav-label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
  }

  .label-line {
    flex: 1;
    max-width: 120px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-black-10), transparent);
  }

  .label-text {
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--color-text-muted);
  }

  /* Navigation Cards Grid */
  .nav-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    max-width: 1000px;
    margin: 0 auto;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .nav-cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .cloud-nav-bar {
      padding: var(--space-8) 0 var(--space-10);
    }

    .nav-cards {
      grid-template-columns: 1fr;
      gap: var(--space-3);
    }

    .label-line {
      max-width: 60px;
    }
  }
</style>
