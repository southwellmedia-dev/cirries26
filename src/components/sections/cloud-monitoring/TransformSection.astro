---
/**
 * Cloud TransformSection - "Transform Your Cloud Operations"
 *
 * Bento grid layout with 3 benefit pillars:
 * 1. Complete Visibility (East-West, cross-cloud correlation)
 * 2. Cost Optimization (egress, routing, right-sizing)
 * 3. Predictive Intelligence (proactive, AI-driven)
 */
import Container from "../../ui/Container.astro";
import PillarCard from "../../ui/PillarCard.astro";

interface Feature {
  title: string;
  description: string;
}

interface Pillar {
  number: string;
  title: string;
  lead: string;
  faIcon: string; // Font Awesome icon class
  features: Feature[];
  accent: string;
}

interface Props {
  sectionTitle?: string;
  pillars?: Pillar[];
}

const {
  sectionTitle = "Transform Your Cloud Operations",
  pillars = [
    {
      number: "01",
      title: "Master the Seams: Unified Visibility",
      lead: "The most fragile part of your hybrid architecture is the connective tissue. DART-AI illuminates every SD-WAN link, VPN, and interconnect—the critical paths where problems hide.",
      faIcon: "fa-solid fa-eye",
      accent: "#EA242B",
      features: [
        {
          title: "100% East-West Visibility",
          description: "See traffic between VMs, containers, and microservices—the critical blind spot that cloud-native tools completely miss.",
        },
        {
          title: "Cloud-to-Cloud Reachability",
          description: "Continuously validate paths between clouds, regions, and edge. Know instantly when a route changes or firewall misconfigures.",
        },
        {
          title: "Break Down the Silos",
          description: "One unified view across AWS, Azure, GCP, VMware, and on-prem. End the blame game between CloudOps, DevOps, and NetOps.",
        },
      ],
    },
    {
      number: "02",
      title: "Migrate with Certainty",
      lead: "Moving workloads to the cloud is high-stakes. DART-AI de-risks your transformation with data-driven benchmarking—validate improvements with facts, not hope.",
      faIcon: "fa-solid fa-cloud-arrow-up",
      accent: "#8B5CF6",
      features: [
        {
          title: "Pre-Migration Baselines",
          description: "Establish granular performance benchmarks for your application in its current environment before any migration begins.",
        },
        {
          title: "Post-Migration Validation",
          description: "Continuously compare post-move performance to baseline. Verify you're actually improving, not just shifting the bottleneck.",
        },
        {
          title: "Troubleshoot Regressions",
          description: "When performance degrades after migration, pinpoint exactly why—whether it's network, cloud provider, or code.",
        },
      ],
    },
    {
      number: "03",
      title: "From Diagnosis to Autonomous Action",
      lead: "At multi-cloud scale, human-led troubleshooting is too slow. DART's AI engine moves beyond diagnosis to drive action—paving the way for autonomous operations.",
      faIcon: "fa-solid fa-robot",
      accent: "#3b82f6",
      features: [
        {
          title: "Cross-Provider Correlation",
          description: "Detect anomalies that span multiple clouds and correlate events that siloed tools can't connect.",
        },
        {
          title: "Natural-Language Summaries",
          description: "Generate clear, human-readable explanations of complex incidents. No more deciphering cryptic alerts.",
        },
        {
          title: "Closed-Loop Remediation",
          description: "Trigger automated workflows to resolve problems—accelerating MTTR while your team focuses on strategic work.",
        },
      ],
    },
  ],
} = Astro.props;
---

<section class="transform-section" data-theme="light">
  <div class="transform-bg">
    <div class="transform-gradient"></div>
    <div class="transform-grid"></div>
    <div class="transform-pattern"></div>
  </div>

  <Container size="xl">
    <div class="transform-content">
      <!-- Section Header -->
      <header class="transform-header">
        <span class="transform-eyebrow">The Transformation</span>
        <h2 class="transform-title">{sectionTitle}</h2>
      </header>

      <!-- Bento Grid -->
      <div class="bento-grid">
        {pillars.map((pillar) => (
          <PillarCard
            number={pillar.number}
            title={pillar.title}
            lead={pillar.lead}
            faIcon={pillar.faIcon}
            features={pillar.features}
            accent={pillar.accent}
            theme="light"
          />
        ))}
      </div>
    </div>
  </Container>
</section>

<style>
  .transform-section {
    position: relative;
    padding: var(--space-20) 0 var(--space-24);
    background: var(--color-bg-secondary);
    overflow: hidden;
  }

  .transform-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .transform-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 20% 20%, var(--color-primary-3) 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 80% 80%, var(--color-black-3) 0%, transparent 50%),
      linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-tertiary) 50%, var(--color-bg-secondary) 100%);
  }

  .transform-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--color-black-4) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-black-4) 1px, transparent 1px);
    background-size: 48px 48px;
    mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 0%, transparent 65%);
    -webkit-mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 0%, transparent 65%);
  }

  .transform-pattern {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 1px 1px, var(--color-black-3) 1px, transparent 0);
    background-size: 32px 32px;
    mask-image: linear-gradient(180deg, transparent 0%, black 20%, black 80%, transparent 100%);
  }

  .transform-content {
    position: relative;
    z-index: 1;
  }

  /* Header */
  .transform-header {
    text-align: center;
    margin-bottom: var(--space-14);
  }

  .transform-eyebrow {
    display: inline-block;
    padding: var(--space-1-5) var(--space-2-5);
    margin-bottom: var(--space-4);
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-primary);
    background: var(--color-primary-8);
    border: 1px solid var(--color-primary-15);
    border-radius: var(--radius-full);
  }

  .transform-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: var(--font-bold);
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Bento Grid */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    align-items: stretch;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .bento-grid {
      grid-template-columns: 1fr;
      gap: var(--space-5);
    }
  }

  @media (max-width: 640px) {
    .transform-section {
      padding: var(--space-14) 0 var(--space-16);
    }

    .transform-header {
      margin-bottom: var(--space-10);
    }
  }
</style>
