---
/**
 * DataDelugeSection - "Taming the 5G Data Deluge"
 *
 * Dark editorial section highlighting sensor processing capabilities
 * with prominent spec callouts for throughput and scale.
 */
import Container from "../../ui/Container.astro";

interface Props {
  badge?: string;
  title?: string;
  titleHighlight?: string;
  introParagraph?: string;
  specs?: {
    value: string;
    label: string;
    description: string;
  }[];
  closingStatement?: string;
}

const {
  badge = "Intelligent Data Processing",
  title = "Taming the",
  titleHighlight = "5G Data Deluge",
  introParagraph = "Capturing this data is only half the battle. The sheer volume of packets and metadata in a 5G network can create more noise than signal, overwhelming legacy systems and human operators alike. This is where the intelligence of the DART platform begins.",
  specs = [
    {
      value: "100 Gbps",
      label: "Unprecedented Throughput",
      description: "DART sensors are capable of handling line rates up to 100 Gbps on specialized hardware and 10 Gbps per virtual instance, ensuring no packet is ever missed."
    },
    {
      value: "Millions/sec",
      label: "Massive Scale Processing",
      description: "Each metadata sensor can process and summarize millions of flow records per second, alongside Syslog, SNMP, and other data, distilling the torrent of information into a clean, high-fidelity stream for our AI engine."
    }
  ],
  closingStatement = "For 5G operators, comprehensive network observability is no longer a luxury; it is the <em>foundation of excellence</em>. DART Sensors provide the crucial, high-fidelity input our AI engine needs to turn the chaos of 5G data into the clarity you need to deliver on its promise."
} = Astro.props;
---

<section class="data-deluge-section" data-theme="dark">
  <!-- Atmospheric Background -->
  <div class="section-bg">
    <div class="grid-pattern"></div>
    <div class="glow-orb glow-orb--primary"></div>
    <div class="glow-orb glow-orb--secondary"></div>
  </div>

  <Container size="xl">
    <!-- Section Header -->
    <header class="section-header">
      <span class="section-badge">{badge}</span>
      <h2 class="section-title">
        {title} <span class="title-highlight">{titleHighlight}</span>
      </h2>
      <p class="section-intro" set:html={introParagraph} />
    </header>

    <!-- Spec Cards -->
    <div class="specs-grid">
      {specs.map((spec, index) => (
        <article class="spec-card" style={`--card-index: ${index}`}>
          <div class="spec-value-container">
            <span class="spec-value">{spec.value}</span>
          </div>
          <div class="spec-content">
            <h3 class="spec-label">{spec.label}</h3>
            <p class="spec-description">{spec.description}</p>
          </div>
        </article>
      ))}
    </div>

    <!-- Closing Statement -->
    <footer class="section-footer">
      <p class="closing-text" set:html={closingStatement} />
    </footer>
  </Container>
</section>

<style>
  /* ========================================
     DATA DELUGE SECTION
     ======================================== */
  .data-deluge-section {
    position: relative;
    padding: var(--space-24) 0;
    background: var(--color-bg-primary);
    overflow: hidden;
  }

  /* Atmospheric Background */
  .section-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .grid-pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--color-white-1) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-white-1) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 40%, black 0%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 80% 60% at 50% 40%, black 0%, transparent 70%);
  }

  .glow-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(120px);
  }

  .glow-orb--primary {
    top: -100px;
    right: 10%;
    width: 500px;
    height: 500px;
    background: var(--color-primary);
    opacity: 0.08;
  }

  .glow-orb--secondary {
    bottom: -150px;
    left: 5%;
    width: 400px;
    height: 400px;
    background: var(--color-primary);
    opacity: 0.05;
  }

  /* ========================================
     HEADER
     ======================================== */
  .section-header {
    text-align: center;
    max-width: 800px;
    margin: 0 auto var(--space-16);
    position: relative;
    z-index: 1;
  }

  .section-badge {
    display: inline-block;
    padding: var(--space-2) var(--space-5);
    font-family: var(--font-display);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    background: var(--color-primary-muted);
    border: 1px solid var(--color-primary-subtle);
    border-radius: 100px;
    margin-bottom: var(--space-5);
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    font-weight: var(--font-bold);
    line-height: 1.1;
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-6);
  }

  .title-highlight {
    color: var(--color-primary);
  }

  .section-intro {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* ========================================
     SPEC CARDS
     ======================================== */
  .specs-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-8);
    margin-bottom: var(--space-16);
    position: relative;
    z-index: 1;
  }

  .spec-card {
    position: relative;
    padding: var(--space-10);
    background: linear-gradient(
      135deg,
      var(--color-black-90) 0%,
      var(--color-black-95) 100%
    );
    border: 1px solid var(--color-border);
    border-radius: var(--radius-2xl);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);

    /* Staggered animation */
    animation: specReveal 0.8s ease forwards;
    animation-delay: calc(var(--card-index) * 0.2s);
    opacity: 0;
  }

  @keyframes specReveal {
    from {
      opacity: 0;
      transform: translateY(40px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .spec-card:hover {
    border-color: var(--color-primary-subtle);
    transform: translateY(-4px);
    box-shadow:
      0 20px 40px var(--color-black-30),
      0 0 60px var(--color-primary-10);
  }

  .spec-value-container {
    position: relative;
    margin-bottom: var(--space-6);
  }

  .spec-value {
    font-family: var(--font-display);
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.03em;
    color: var(--color-text-primary);
    background: linear-gradient(
      135deg,
      var(--color-white-100) 0%,
      var(--color-white-80) 50%,
      var(--color-primary) 100%
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .spec-content {
    position: relative;
  }

  .spec-label {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-3);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .spec-description {
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* ========================================
     FOOTER
     ======================================== */
  .section-footer {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    padding-top: var(--space-8);
    border-top: 1px solid var(--color-border);
    position: relative;
    z-index: 1;
  }

  .closing-text {
    font-family: var(--font-display);
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    font-weight: var(--font-medium);
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin: 0;
  }

  .closing-text :global(em) {
    color: var(--color-text-primary);
    font-style: normal;
    font-weight: var(--font-semibold);
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 1024px) {
    .specs-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .spec-card {
      padding: var(--space-8);
    }

    .spec-value {
      font-size: clamp(2.5rem, 12vw, 4rem);
    }
  }

  @media (max-width: 768px) {
    .data-deluge-section {
      padding: var(--space-16) 0;
    }

    .section-title {
      font-size: var(--text-3xl);
    }

    .section-intro {
      font-size: var(--text-base);
    }

    .spec-card {
      padding: var(--space-6);
    }

    .spec-label {
      font-size: var(--text-lg);
    }

    .closing-text {
      font-size: var(--text-base);
    }

    .data-stream {
      display: none;
    }
  }
</style>
