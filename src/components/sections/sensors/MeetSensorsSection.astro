---
/**
 * MeetSensorsSection - "Clarity at the Speed of 5G"
 *
 * Features an "Aware Eye" Visualization representing:
 * - "Hyper-aware eyes and ears" of your 5G network
 * - Data particles drifting inward (being observed/captured)
 * - Concentric listening rings (sonar-like awareness field)
 * - Floating, light aesthetic with no hard boxes
 */
import Container from "../../ui/Container.astro";
import Button from "../../ui/Button.astro";
import DartLogomark from "../../../assets/logos/ai-logomark.svg";

interface Props {
  eyebrow?: string;
  title?: string;
  highlightText?: string;
  paragraphs?: string[];
  primaryCta?: { label: string; href: string };
  secondaryCta?: { label: string; href: string };
}

const {
  eyebrow = "Purpose-Built for the Demands of 5G",
  title = "Clarity at the",
  highlightText = "Speed of 5G",
  paragraphs = [
    "The promise of 5G is one of transformation—a fully virtualized environment delivering ultra-low latency and unprecedented speed. But for network operators, this power is also the greatest operational challenge. At 5G speeds, <strong>problems occur in microseconds</strong>, and by the time you've manually detected an issue, the impact is already widespread.",
    "In this high-velocity environment, the only source of ground truth is the data itself—the raw packets and rich metadata flowing through the network core. <strong>You cannot manage what you cannot see</strong>, and traditional probes simply cannot keep up.",
    "<strong>DART Sensors</strong> are engineered to be the hyper-aware eyes and ears of your 5G network. They are more than just data collectors; they are high-performance instruments designed to capture every detail with perfect fidelity, providing the raw intelligence needed for true observability."
  ],
  primaryCta = { label: "Get Started", href: "/contact" },
  secondaryCta = { label: "View All Solutions", href: "/solutions" }
} = Astro.props;
---

<section class="meet-sensors-section" data-theme="light">
  <!-- Background -->
  <div class="section-bg">
    <div class="bg-gradient"></div>
    <div class="bg-grain"></div>
  </div>

  <Container size="xl">
    <div class="meet-sensors">
      <!-- Content Column -->
      <div class="meet-sensors__content">
        <span class="meet-sensors__eyebrow">{eyebrow}</span>
        <h2 class="meet-sensors__title">{title} <span>{highlightText}</span></h2>
        {paragraphs.map((text) => (
          <p class="meet-sensors__text" set:html={text} />
        ))}
        <div class="meet-sensors__actions">
          <Button href={primaryCta.href} variant="primary">
            {primaryCta.label}
          </Button>
          <Button href={secondaryCta.href} variant="outline-dark">
            {secondaryCta.label}
          </Button>
        </div>
      </div>

      <!-- Aware Eye Visualization -->
      <div class="sensor-viz" id="sensor-viz">
        <!-- Floating data particles container -->
        <div class="particle-field" id="particle-field"></div>

        <!-- Listening rings (sonar/awareness) -->
        <div class="listening-field">
          <div class="listen-ring listen-ring--1"></div>
          <div class="listen-ring listen-ring--2"></div>
          <div class="listen-ring listen-ring--3"></div>
          <div class="listen-ring listen-ring--4"></div>
        </div>

        <!-- Full-size Radar Sweep (behind everything) -->
        <div class="radar-sweep"></div>

        <!-- Central Logo in White Circle -->
        <div class="logo-center">
          <div class="logo-glow"></div>
          <div class="logo-circle">
            <img src={DartLogomark.src} alt="DART" class="dart-logo" />
          </div>
        </div>

        <!-- Floating metadata tags -->
        <div class="metadata-tags">
          <span class="meta-tag meta-tag--1">packets</span>
          <span class="meta-tag meta-tag--2">metadata</span>
          <span class="meta-tag meta-tag--3">5G</span>
          <span class="meta-tag meta-tag--4">flow</span>
          <span class="meta-tag meta-tag--5">SNMP</span>
          <span class="meta-tag meta-tag--6">syslog</span>
        </div>

        <!-- Throughput indicator (floating) -->
        <div class="throughput-float">
          <span class="throughput-value" id="throughput-counter">0</span>
          <span class="throughput-unit">Gbps</span>
          <span class="throughput-label">capturing</span>
        </div>
      </div>
    </div>
  </Container>
</section>

<style>
  /* ========================================
     SECTION BASE - LIGHT THEME
     ======================================== */
  .meet-sensors-section {
    position: relative;
    padding: var(--space-24) 0;
    background: linear-gradient(180deg, var(--color-white-100) 0%, var(--color-bg-secondary) 100%);
    overflow: hidden;
  }

  .section-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .bg-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 100% 80% at 70% 30%, var(--color-primary-3) 0%, transparent 50%),
      radial-gradient(ellipse 60% 60% at 80% 70%, var(--color-primary-2) 0%, transparent 40%);
  }

  .bg-grain {
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 400 400' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E");
    opacity: 0.015;
  }

  /* ========================================
     LAYOUT
     ======================================== */
  .meet-sensors {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-16);
    align-items: center;
  }

  /* ========================================
     CONTENT
     ======================================== */
  .meet-sensors__eyebrow {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-family: var(--font-display);
    font-size: var(--text-2xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
  }

  .meet-sensors__title {
    font-family: var(--font-display);
    font-size: clamp(2.25rem, 4.5vw, 3.25rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
    margin-bottom: var(--space-6);
  }

  .meet-sensors__title span {
    color: var(--color-primary);
  }

  .meet-sensors__text {
    font-family: var(--font-body);
    font-size: 1rem;
    line-height: 1.75;
    color: var(--color-text-muted);
    margin-bottom: var(--space-4);
  }

  .meet-sensors__text:last-of-type {
    margin-bottom: 0;
  }

  .meet-sensors__text :global(strong) {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  .meet-sensors__actions {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-8);
  }

  /* ========================================
     SENSOR VISUALIZATION - FLOATING LIGHT
     ======================================== */
  .sensor-viz {
    position: relative;
    width: 100%;
    aspect-ratio: 1;
    max-width: 480px;
    margin: 0 auto;
  }

  /* Particle Field */
  .particle-field {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  :global(.data-particle) {
    position: absolute;
    width: 4px;
    height: 4px;
    border-radius: 50%;
    background: var(--color-primary);
    opacity: 0;
    pointer-events: none;
  }

  :global(.data-particle--alt) {
    background: var(--color-text-dim);
  }

  /* Listening Rings - Sonar Effect */
  .listening-field {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .listen-ring {
    position: absolute;
    border-radius: 50%;
    border: 1px solid var(--color-primary-8);
    animation: ripple 4s ease-out infinite;
  }

  .listen-ring--1 {
    width: 100%;
    height: 100%;
    animation-delay: 0s;
  }

  .listen-ring--2 {
    width: 75%;
    height: 75%;
    animation-delay: 1s;
  }

  .listen-ring--3 {
    width: 50%;
    height: 50%;
    animation-delay: 2s;
  }

  .listen-ring--4 {
    width: 25%;
    height: 25%;
    animation-delay: 3s;
  }

  @keyframes ripple {
    0% {
      transform: scale(0.8);
      opacity: 0;
    }
    20% {
      opacity: 1;
    }
    100% {
      transform: scale(1.3);
      opacity: 0;
    }
  }

  /* Full-size Radar Sweep */
  .radar-sweep {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 95%;
    height: 95%;
    transform: translate(-50%, -50%);
    border-radius: 50%;
    background: conic-gradient(
      from 0deg,
      transparent 0deg,
      var(--color-primary-12) 15deg,
      var(--color-primary-6) 45deg,
      transparent 90deg
    );
    animation: radarSweep 4s linear infinite;
  }

  @keyframes radarSweep {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }

  /* Central Logo */
  .logo-center {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    z-index: 10;
  }

  .logo-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 140px;
    height: 140px;
    border-radius: 50%;
    background: radial-gradient(circle, var(--color-primary-10) 0%, transparent 70%);
    animation: logoGlow 3s ease-in-out infinite;
  }

  @keyframes logoGlow {
    0%, 100% { opacity: 0.5; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 1; transform: translate(-50%, -50%) scale(1.1); }
  }

  .logo-circle {
    position: relative;
    width: 90px;
    height: 90px;
    border-radius: 50%;
    background: linear-gradient(145deg, var(--color-white-100) 0%, var(--color-bg-tertiary) 100%);
    box-shadow:
      0 8px 32px var(--color-black-8),
      0 2px 8px var(--color-black-4),
      inset 0 2px 4px var(--color-white-100);
    display: flex;
    align-items: center;
    justify-content: center;
    border: 1px solid var(--color-primary-10);
  }

  .dart-logo {
    width: 50px;
    height: auto;
    object-fit: contain;
  }

  /* Floating Metadata Tags */
  .metadata-tags {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .meta-tag {
    position: absolute;
    font-family: var(--font-mono, 'JetBrains Mono', monospace);
    font-size: var(--text-2xs);
    font-weight: 500;
    letter-spacing: 0.02em;
    color: var(--color-text-muted);
    background: var(--color-white-80);
    padding: 0.2em 0.5em;
    border-radius: var(--radius-sm);
    box-shadow: 0 2px 8px var(--color-black-4);
    opacity: 0;
    animation: floatTag 8s ease-in-out infinite;
  }

  .meta-tag--1 { top: 8%; left: 15%; animation-delay: 0s; }
  .meta-tag--2 { top: 20%; right: 10%; animation-delay: 1.3s; }
  .meta-tag--3 { top: 65%; left: 5%; animation-delay: 2.6s; }
  .meta-tag--4 { bottom: 15%; right: 15%; animation-delay: 3.9s; }
  .meta-tag--5 { top: 45%; left: 2%; animation-delay: 5.2s; }
  .meta-tag--6 { bottom: 30%; left: 20%; animation-delay: 6.5s; }

  @keyframes floatTag {
    0%, 100% {
      opacity: 0;
      transform: translateY(10px);
    }
    15%, 85% {
      opacity: 0.7;
      transform: translateY(0);
    }
  }

  /* Throughput Indicator - Floating */
  .throughput-float {
    position: absolute;
    bottom: 5%;
    right: 10%;
    display: flex;
    flex-direction: column;
    align-items: center;
    background: var(--color-white-90);
    backdrop-filter: blur(8px);
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-lg);
    box-shadow:
      0 4px 20px var(--color-black-6),
      0 1px 3px var(--color-black-3);
  }

  .throughput-value {
    font-family: var(--font-mono, 'JetBrains Mono', monospace);
    font-size: 1.75rem;
    font-weight: 700;
    color: var(--color-text-primary);
    line-height: 1;
    font-variant-numeric: tabular-nums;
  }

  .throughput-unit {
    font-family: var(--font-display);
    font-size: var(--text-2xs);
    font-weight: 700;
    color: var(--color-primary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .throughput-label {
    font-family: var(--font-display);
    font-size: var(--text-2xs);
    font-weight: 600;
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-top: 2px;
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 1024px) {
    .meet-sensors {
      grid-template-columns: 1fr;
      gap: var(--space-12);
    }

    .sensor-viz {
      max-width: 380px;
    }
  }

  @media (max-width: 768px) {
    .meet-sensors-section {
      padding: var(--space-16) 0;
    }

    .meet-sensors__title {
      font-size: clamp(1.75rem, 6vw, 2.25rem);
    }

    .meet-sensors__actions {
      flex-direction: column;
    }

    .sensor-viz {
      max-width: 320px;
    }

    .logo-circle {
      width: 75px;
      height: 75px;
    }

    .dart-logo {
      width: 42px;
    }

    .logo-glow {
      width: 120px;
      height: 120px;
    }

    .throughput-float {
      padding: var(--space-2) var(--space-3);
    }

    .throughput-value {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 480px) {
    .sensor-viz {
      max-width: 280px;
    }

    .logo-circle {
      width: 65px;
      height: 65px;
    }

    .dart-logo {
      width: 36px;
    }

    .logo-glow {
      width: 100px;
      height: 100px;
    }

    .meta-tag {
      font-size: var(--text-2xs);
    }

    .throughput-float {
      bottom: 0;
      right: 5%;
    }
  }
</style>

<script>
  /**
   * Aware Eye Visualization
   * - Particles drift inward toward the sensor (being "seen")
   * - Represents data capture and observation
   */
  function initSensorViz() {
    const particleField = document.getElementById('particle-field');
    const throughputCounter = document.getElementById('throughput-counter');
    const sensorViz = document.getElementById('sensor-viz');

    if (!particleField || !sensorViz) return;

    const rect = sensorViz.getBoundingClientRect();
    const centerX = rect.width / 2;
    const centerY = rect.height / 2;

    let throughput = 0;
    const targetThroughput = 100;
    let isAnimating = false;

    // Animate throughput counter
    function animateThroughput() {
      if (throughput < targetThroughput) {
        throughput += Math.random() * 2.5;
        if (throughput > targetThroughput) throughput = targetThroughput;
        if (throughputCounter) {
          throughputCounter.textContent = Math.floor(throughput).toString();
        }
        requestAnimationFrame(animateThroughput);
      }
    }

    // Create a data particle that drifts inward
    function createParticle() {
      const particle = document.createElement('div');
      particle.classList.add('data-particle');

      // Alternate colors
      if (Math.random() > 0.6) {
        particle.classList.add('data-particle--alt');
      }

      // Random size
      const size = 3 + Math.random() * 4;
      particle.style.width = `${size}px`;
      particle.style.height = `${size}px`;

      // Start from edges - random angle
      const angle = Math.random() * Math.PI * 2;
      const startRadius = Math.max(centerX, centerY) * 1.1;
      const startX = centerX + Math.cos(angle) * startRadius;
      const startY = centerY + Math.sin(angle) * startRadius;

      // End near center (captured by sensor)
      const endRadius = 60 + Math.random() * 20;
      const endX = centerX + Math.cos(angle) * endRadius;
      const endY = centerY + Math.sin(angle) * endRadius;

      particle.style.left = `${startX}px`;
      particle.style.top = `${startY}px`;

      particleField.appendChild(particle);

      // Animate inward
      const duration = 2000 + Math.random() * 2000;

      particle.animate([
        {
          left: `${startX}px`,
          top: `${startY}px`,
          opacity: 0,
          transform: 'scale(1)'
        },
        {
          left: `${(startX + endX) / 2}px`,
          top: `${(startY + endY) / 2}px`,
          opacity: 0.8,
          transform: 'scale(1)'
        },
        {
          left: `${endX}px`,
          top: `${endY}px`,
          opacity: 0,
          transform: 'scale(0.5)'
        }
      ], {
        duration,
        easing: 'ease-in'
      }).onfinish = () => particle.remove();
    }

    // Start particle spawning
    function startAnimation() {
      if (isAnimating) return;
      isAnimating = true;

      // Spawn particles at intervals
      setInterval(createParticle, 150);

      // Start throughput animation
      setTimeout(animateThroughput, 300);
    }

    // Intersection Observer for performance
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          startAnimation();
          observer.disconnect();
        }
      });
    }, { threshold: 0.2 });

    observer.observe(sensorViz);
  }

  // Initialize
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initSensorViz);
  } else {
    initSensorViz();
  }
</script>
