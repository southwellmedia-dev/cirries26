---
/**
 * WifiNetworkViz - Wi-Fi Hub Visualization Component
 *
 * Displays an animated Wi-Fi hub with connected device nodes,
 * signal strength indicators, and data packet animations.
 * Center hub matches DART-AI neural network visualization style.
 */
import DartLogoLight from "../../../assets/logos/dart-lightmode.svg";

// Device data with metrics for DART-AI style monitoring cards
const devices = [
  {
    label: "Smart TV",
    icon: "M2 6a2 2 0 0 1 2-2h16a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-6l2 2v1H8v-1l2-2H4a2 2 0 0 1-2-2V6zm2 0v10h16V6H4z",
    angle: -50,
    distance: 220,
    signalStrength: 3,
    signalPercent: 94,
    latency: "12ms",
    status: "healthy",
  },
  {
    label: "Desktop",
    icon: "M4 4h16a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2h-5l1 2v1H8v-1l1-2H4a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2zm0 2v10h16V6H4z M9 18h6",
    angle: 50,
    distance: 225,
    signalStrength: 2,
    signalPercent: 67,
    latency: "45ms",
    status: "warning",
  },
  {
    label: "Laptop",
    icon: "M4 5a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v10a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V5zm2 0v10h12V5H6zM2 18a1 1 0 0 1 1-1h18a1 1 0 0 1 1 1v1a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1v-1z",
    angle: 130,
    distance: 215,
    signalStrength: 1,
    signalPercent: 23,
    latency: "189ms",
    status: "critical",
  },
  {
    label: "Phone",
    icon: "M7 2a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H7zm5 18a1 1 0 1 1 0-2 1 1 0 0 1 0 2z",
    angle: -130,
    distance: 210,
    signalStrength: 3,
    signalPercent: 91,
    latency: "8ms",
    status: "healthy",
  },
];
---

<div class="wifi-viz-container">
  <div class="wifi-network" id="wifi-network">
    <!-- SVG Canvas for signal lines -->
    <svg
      class="wifi-connections"
      id="wifi-connections-svg"
      width="100%"
      height="100%"
      preserveAspectRatio="xMidYMid meet"
      viewBox="0 0 480 480"
    >
      <defs>
        <!-- Signal pulse gradient -->
        <linearGradient id="signalGradient" x1="0%" y1="0%" x2="100%" y2="0%">
          <stop offset="0%" stop-color="rgba(234, 36, 43, 0)"></stop>
          <stop offset="50%" stop-color="rgba(234, 36, 43, 0.7)"></stop>
          <stop offset="100%" stop-color="rgba(234, 36, 43, 0)"></stop>
        </linearGradient>

        <!-- Glow filter for nodes -->
        <filter id="deviceGlow" x="-50%" y="-50%" width="200%" height="200%">
          <feGaussianBlur stdDeviation="4" result="blur"></feGaussianBlur>
          <feMerge>
            <feMergeNode in="blur"></feMergeNode>
            <feMergeNode in="SourceGraphic"></feMergeNode>
          </feMerge>
        </filter>

        <!-- Data packet animation -->
        <circle id="dataPacket" r="3" fill="var(--color-primary)">
          <animate
            attributeName="opacity"
            values="1;0.3;1"
            dur="0.8s"
            repeatCount="indefinite"></animate>
        </circle>
      </defs>

      <!-- Connection lines to devices (will be positioned by JS) -->
      <g class="connection-lines" id="connection-lines"></g>
    </svg>

    <!-- Signal Wave Rings -->
    <div class="signal-rings">
      <div class="signal-ring signal-ring-1"></div>
      <div class="signal-ring signal-ring-2"></div>
      <div class="signal-ring signal-ring-3"></div>
    </div>

    <!-- Central Wi-Fi Hub - DART-AI Style -->
    <div class="wifi-hub" id="wifi-hub">
      <div class="core-pulse"></div>
      <div class="core-ring core-ring-1"></div>
      <div class="core-ring core-ring-2"></div>
      <div class="core-logo">
        <img src={DartLogoLight.src} alt="DART-AI" />
      </div>
    </div>

    <!-- Device Nodes - DART-AI Monitoring Style -->
    {
      devices.map((device, index) => (
        <div
          class={`device-node device-node--${device.status}`}
          data-device-index={index}
          data-angle={device.angle}
          data-distance={device.distance}
          data-signal={device.signalStrength}
          data-status={device.status}
        >
          <div class="device-content">
            <!-- Header with icon and label -->
            <div class="device-header">
              <div class="device-icon">
                <svg
                  width="16"
                  height="16"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="1.5"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d={device.icon} />
                </svg>
              </div>
              <span class="device-label">{device.label}</span>
              <div class="device-status-dot" />
            </div>
            <!-- Metrics Row -->
            <div class="device-metrics">
              <div class="metric">
                <span class="metric-value">{device.signalPercent}%</span>
                <span class="metric-label">Signal</span>
              </div>
              <div class="metric-divider"></div>
              <div class="metric">
                <span class="metric-value">{device.latency}</span>
                <span class="metric-label">Latency</span>
              </div>
            </div>
          </div>
        </div>
      ))
    }

    <!-- Floating data packets -->
    <div class="data-packets" id="data-packets"></div>
  </div>
</div>

<style>
  /* ========================================
     WI-FI NETWORK VISUALIZATION
     ======================================== */
  .wifi-viz-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 520px;
  }

  .wifi-network {
    position: relative;
    width: 100%;
    max-width: 480px;
    aspect-ratio: 1;
  }

  .wifi-connections {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 5;
  }

  /* Signal Wave Rings */
  .signal-rings {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 100%;
    height: 100%;
    pointer-events: none;
  }

  .signal-ring {
    position: absolute;
    top: 50%;
    left: 50%;
    border-radius: 50%;
    border: 1px solid rgba(234, 36, 43, 0.15);
    transform: translate(-50%, -50%);
    animation: signalExpand 3s ease-out infinite;
  }

  .signal-ring-1 {
    width: 180px;
    height: 180px;
    animation-delay: 0s;
  }

  .signal-ring-2 {
    width: 260px;
    height: 260px;
    animation-delay: 1s;
  }

  .signal-ring-3 {
    width: 340px;
    height: 340px;
    animation-delay: 2s;
  }

  @keyframes signalExpand {
    0% {
      transform: translate(-50%, -50%) scale(0.8);
      opacity: 0.6;
      border-color: rgba(234, 36, 43, 0.3);
    }
    100% {
      transform: translate(-50%, -50%) scale(1.2);
      opacity: 0;
      border-color: rgba(234, 36, 43, 0);
    }
  }

  /* Central Wi-Fi Hub - DART-AI Style */
  .wifi-hub {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    z-index: 10;
  }

  .core-pulse {
    position: absolute;
    inset: -20px;
    border-radius: 50%;
    background: radial-gradient(
      circle,
      rgba(220, 38, 38, 0.15) 0%,
      transparent 70%
    );
    animation: corePulse 3s ease-in-out infinite;
  }

  @keyframes corePulse {
    0%,
    100% {
      transform: scale(1);
      opacity: 0.5;
    }
    50% {
      transform: scale(1.2);
      opacity: 0.8;
    }
  }

  .core-ring {
    position: absolute;
    inset: 0;
    border-radius: 50%;
    border: 1px solid rgba(220, 38, 38, 0.25);
  }

  .core-ring-1 {
    inset: -10px;
    animation: ringRotate 20s linear infinite;
    border-style: dashed;
    border-color: rgba(220, 38, 38, 0.2);
  }

  .core-ring-2 {
    inset: -25px;
    animation: ringRotate 30s linear infinite reverse;
    border-style: dotted;
    border-color: rgba(220, 38, 38, 0.12);
  }

  @keyframes ringRotate {
    from {
      transform: rotate(0deg);
    }
    to {
      transform: rotate(360deg);
    }
  }

  .core-logo {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.95);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border-radius: 50%;
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow:
      0 4px 30px rgba(0, 0, 0, 0.1),
      0 0 40px rgba(220, 38, 38, 0.1),
      inset 0 0 30px rgba(255, 255, 255, 0.5);
    overflow: hidden;
  }

  .core-logo img {
    width: 65%;
    height: auto;
  }

  /* Device Nodes - DART-AI Monitoring Cards */
  .device-node {
    position: absolute;
    transform: translate(-50%, -50%);
    z-index: 8;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .device-node:hover {
    z-index: 20;
    transform: translate(-50%, -50%) scale(1.05);
  }

  .device-content {
    position: relative;
    display: flex;
    flex-direction: column;
    gap: 8px;
    padding: 12px 16px;
    background: rgba(15, 15, 15, 0.92);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    transition: all 0.3s ease;
    box-shadow:
      0 4px 20px rgba(0, 0, 0, 0.25),
      0 1px 3px rgba(0, 0, 0, 0.15);
    min-width: 140px;
    white-space: nowrap;
  }

  .device-node:hover .device-content {
    background: rgba(20, 20, 20, 0.95);
    border-color: rgba(255, 255, 255, 0.15);
    box-shadow:
      0 8px 32px rgba(0, 0, 0, 0.35),
      0 0 20px rgba(0, 0, 0, 0.2);
  }

  /* Device Header */
  .device-header {
    display: flex;
    align-items: center;
    gap: 8px;
    white-space: nowrap;
  }

  .device-icon {
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(255, 255, 255, 0.08);
    border-radius: 6px;
    color: rgba(255, 255, 255, 0.9);
    transition: all 0.3s ease;
  }

  .device-label {
    font-family: var(--font-display);
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: rgba(255, 255, 255, 0.9);
    flex: 1;
    white-space: nowrap;
  }

  .device-status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #22c55e;
    animation: statusPulse 2s ease-in-out infinite;
  }

  /* Device Metrics */
  .device-metrics {
    display: flex;
    align-items: center;
    gap: 8px;
    padding-top: 6px;
    border-top: 1px solid rgba(255, 255, 255, 0.08);
  }

  .metric {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
  }

  .metric-value {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    font-weight: 700;
    color: #ffffff;
    line-height: 1;
  }

  .metric-label {
    font-family: var(--font-mono);
    font-size: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: rgba(255, 255, 255, 0.5);
    margin-top: 2px;
  }

  .metric-divider {
    width: 1px;
    height: 24px;
    background: rgba(255, 255, 255, 0.1);
  }

  /* Status Colors */
  .device-node--healthy .device-status-dot {
    background: #22c55e;
  }

  .device-node--warning .device-status-dot {
    background: #f59e0b;
  }

  .device-node--warning .metric-value {
    color: #f59e0b;
  }

  /* Critical Status - Inverted Red Card */
  .device-node--critical .device-content {
    background: linear-gradient(145deg, #ef4444 0%, #dc2626 100%);
    border-color: rgba(239, 68, 68, 0.6);
    box-shadow:
      0 4px 24px rgba(239, 68, 68, 0.3),
      0 1px 3px rgba(0, 0, 0, 0.15);
  }

  .device-node--critical:hover .device-content {
    background: linear-gradient(145deg, #f87171 0%, #ef4444 100%);
    border-color: rgba(239, 68, 68, 0.8);
    box-shadow:
      0 8px 32px rgba(239, 68, 68, 0.4),
      0 0 20px rgba(239, 68, 68, 0.25);
  }

  .device-node--critical .device-icon {
    background: rgba(255, 255, 255, 0.2);
  }

  .device-node--critical .device-status-dot {
    background: #ffffff;
  }

  .device-node--critical .device-metrics {
    border-top-color: rgba(255, 255, 255, 0.2);
  }

  .device-node--critical .metric-label {
    color: rgba(255, 255, 255, 0.7);
  }

  @keyframes statusPulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Device Node Floating Animations */
  .device-node[data-device-index="0"] {
    animation: deviceFloat0 7s ease-in-out infinite;
  }
  .device-node[data-device-index="1"] {
    animation: deviceFloat1 8s ease-in-out infinite;
  }
  .device-node[data-device-index="2"] {
    animation: deviceFloat2 6.5s ease-in-out infinite;
  }
  .device-node[data-device-index="3"] {
    animation: deviceFloat3 7.5s ease-in-out infinite;
  }

  @keyframes deviceFloat0 {
    0%,
    100% {
      transform: translate(-50%, -50%) translateY(0) translateX(0);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-6px) translateX(3px);
    }
  }

  @keyframes deviceFloat1 {
    0%,
    100% {
      transform: translate(-50%, -50%) translateY(0) translateX(0);
    }
    50% {
      transform: translate(-50%, -50%) translateY(5px) translateX(-4px);
    }
  }

  @keyframes deviceFloat2 {
    0%,
    100% {
      transform: translate(-50%, -50%) translateY(0) translateX(0);
    }
    50% {
      transform: translate(-50%, -50%) translateY(-7px) translateX(-3px);
    }
  }

  @keyframes deviceFloat3 {
    0%,
    100% {
      transform: translate(-50%, -50%) translateY(0) translateX(0);
    }
    50% {
      transform: translate(-50%, -50%) translateY(6px) translateX(4px);
    }
  }

  /* Data Packets Container - behind device nodes */
  .data-packets {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 2;
  }

  :global(.data-packet) {
    position: absolute;
    width: 6px;
    height: 6px;
    background: var(--color-primary);
    border-radius: 50%;
    box-shadow: 0 0 8px rgba(234, 36, 43, 0.7);
    pointer-events: none;
  }

  /* Connection lines - colored by signal strength */
  :global(.wifi-connection-line) {
    stroke-width: 1.5;
    fill: none;
    stroke-dasharray: 5 3;
    stroke-linecap: round;
    transition: stroke 0.3s ease;
  }

  /* Signal strength colors for connection lines */
  :global(.wifi-connection-line--weak) {
    stroke: rgba(239, 68, 68, 0.7);
    stroke-width: 2;
    animation: linePulse 1.5s ease-in-out infinite;
  }

  :global(.wifi-connection-line--medium),
  :global(.wifi-connection-line--strong) {
    stroke: rgba(180, 180, 180, 0.4);
  }

  @keyframes linePulse {
    0%,
    100% {
      stroke-opacity: 0.4;
      stroke-dashoffset: 0;
    }
    50% {
      stroke-opacity: 0.9;
      stroke-dashoffset: 8;
    }
  }

  /* Data packet colors by signal strength */
  :global(.data-packet--weak) {
    background: #ef4444;
    box-shadow: 0 0 10px rgba(239, 68, 68, 0.8);
  }

  :global(.data-packet--medium) {
    background: #f59e0b;
    box-shadow: 0 0 8px rgba(245, 158, 11, 0.7);
  }

  :global(.data-packet--strong) {
    background: #22c55e;
    box-shadow: 0 0 8px rgba(34, 197, 94, 0.7);
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 1024px) {
    .wifi-viz-container {
      min-height: 450px;
    }

    .wifi-network {
      max-width: 420px;
    }
  }

  @media (max-width: 768px) {
    .wifi-viz-container {
      min-height: 380px;
    }

    .wifi-network {
      max-width: 340px;
    }

    .wifi-hub {
      width: 90px;
      height: 90px;
    }

    .core-pulse {
      inset: -15px;
    }

    .core-ring-1 {
      inset: -8px;
    }

    .core-ring-2 {
      inset: -18px;
    }

    .core-logo img {
      width: 60%;
    }

    .signal-ring-1 {
      width: 140px;
      height: 140px;
    }

    .signal-ring-2 {
      width: 200px;
      height: 200px;
    }

    .signal-ring-3 {
      width: 260px;
      height: 260px;
    }

    .device-content {
      padding: 8px 10px;
      gap: 6px;
      min-width: 95px;
    }

    .device-icon {
      width: 24px;
      height: 24px;
    }

    .device-label {
      font-size: 0.6rem;
    }

    .metric-value {
      font-size: 0.7rem;
    }

    .metric-label {
      font-size: 0.45rem;
    }

    .metric-divider {
      height: 18px;
    }
  }
</style>

<script>
  import { initWifiNetwork } from "../../../scripts/wifi-network";

  function init(): void {
    setTimeout(initWifiNetwork, 150);
  }

  if (document.readyState === "loading") {
    document.addEventListener("DOMContentLoaded", init);
  } else {
    init();
  }

  // Resize handler
  let wifiResizeTimeout: ReturnType<typeof setTimeout>;
  window.addEventListener("resize", () => {
    clearTimeout(wifiResizeTimeout);
    wifiResizeTimeout = setTimeout(initWifiNetwork, 250);
  });
</script>
