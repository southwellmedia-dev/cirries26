---
/**
 * SolutionSection - "Visibility and Control Inside the Home"
 *
 * A clean, confident section that releases the tension from the Problem section.
 * Features:
 * - Before/After dialogue contrast (agent screen mockups)
 * - Chat transcript aesthetic showing transformation
 * - Supporting copy about DART-AI platform
 */
import Container from "../../ui/Container.astro";

interface Props {
  sectionTitle?: string;
  contextParagraph?: string;
  beforeDialogue?: {
    agent: string;
    response: string;
    mood: string;
  };
  afterDialogue?: {
    agent: string;
    response: string;
    mood: string;
  };
}

const {
  sectionTitle = "Visibility and Control Inside the Home",
  contextParagraph = "DART-AI is an intelligent platform that extends your visibility directly into the subscriber's home Wi-Fi environment. It analyzes real-time performance data from the home router and connected devices, turning guesswork into data-driven action.",
  beforeDialogue = {
    agent: "Support Agent",
    response: "Have you tried turning it off and on again?",
    mood: "Frustrated, no visibility"
  },
  afterDialogue = {
    agent: "DART-AI Agent",
    response: "I see you're on a congested Wi-Fi channel. Let me move you to a clearer one.",
    mood: "Confident, data-driven"
  }
} = Astro.props;
---

<section class="solution-section" data-theme="light">
  <!-- Clean, bright background -->
  <div class="solution-bg">
    <div class="solution-gradient"></div>
    <div class="solution-grid"></div>
    <div class="solution-glow"></div>
  </div>

  <Container size="xl">
    <div class="solution-content">
      <!-- Section Header -->
      <header class="solution-header">
        <span class="solution-eyebrow">The Solution</span>
        <h2 class="solution-title">{sectionTitle}</h2>
        <p class="solution-context">{contextParagraph}</p>
      </header>

      <!-- Before/After Comparison -->
      <div class="comparison-block">
        <!-- Before Panel -->
        <div class="comparison-panel comparison-panel--before">
          <div class="panel-label">
            <span class="label-dot label-dot--before"></span>
            Before DART-AI
          </div>

          <div class="agent-screen agent-screen--before">
            <!-- Screen header -->
            <div class="screen-header">
              <div class="screen-dots">
                <span class="dot dot--red"></span>
                <span class="dot dot--yellow"></span>
                <span class="dot dot--green"></span>
              </div>
              <span class="screen-title">Support Dashboard</span>
              <div class="screen-status screen-status--offline">
                <span class="status-dot"></span>
                No Visibility
              </div>
            </div>

            <!-- Screen content - empty/confused state -->
            <div class="screen-body screen-body--before">
              <div class="data-placeholder">
                <div class="placeholder-icon">
                  <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                    <circle cx="12" cy="17" r="0.5" fill="currentColor"></circle>
                  </svg>
                </div>
                <p class="placeholder-text">No home network data available</p>
              </div>
            </div>

            <!-- Chat bubble -->
            <div class="chat-bubble chat-bubble--before">
              <div class="bubble-header">
                <span class="agent-avatar agent-avatar--before">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M4 16v-8a8 8 0 1 1 16 0v8"></path>
                    <path d="M4 16a2 2 0 0 0 2 2h2a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H6a2 2 0 0 0-2 2v3z"></path>
                    <path d="M20 16a2 2 0 0 1-2 2h-2a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h2a2 2 0 0 1 2 2v3z"></path>
                  </svg>
                </span>
                <span class="agent-name">{beforeDialogue.agent}</span>
              </div>
              <p class="bubble-text">{beforeDialogue.response}</p>
              <span class="bubble-mood">{beforeDialogue.mood}</span>
            </div>
          </div>
        </div>

        <!-- Transformation Arrow -->
        <div class="transformation-arrow">
          <div class="arrow-line"></div>
          <div class="arrow-icon">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M5 12h14M12 5l7 7-7 7"></path>
            </svg>
          </div>
          <div class="arrow-line"></div>
        </div>

        <!-- After Panel -->
        <div class="comparison-panel comparison-panel--after">
          <div class="panel-label">
            <span class="label-dot label-dot--after"></span>
            With DART-AI
          </div>

          <div class="agent-screen agent-screen--after">
            <!-- Screen header -->
            <div class="screen-header screen-header--active">
              <div class="screen-dots">
                <span class="dot dot--red"></span>
                <span class="dot dot--yellow"></span>
                <span class="dot dot--green"></span>
              </div>
              <span class="screen-title">DART-AI Dashboard</span>
              <div class="screen-status screen-status--online">
                <span class="status-dot"></span>
                Live Data
              </div>
            </div>

            <!-- Screen content - rich data state -->
            <div class="screen-body screen-body--after">
              <!-- Mini dashboard visualization -->
              <div class="mini-dashboard">
                <div class="dash-row">
                  <div class="dash-metric">
                    <span class="metric-label">Signal</span>
                    <div class="metric-bar">
                      <div class="metric-fill" style="width: 35%"></div>
                    </div>
                    <span class="metric-value metric-value--warning">Weak</span>
                  </div>
                  <div class="dash-metric">
                    <span class="metric-label">Channel</span>
                    <div class="metric-bar">
                      <div class="metric-fill metric-fill--danger" style="width: 85%"></div>
                    </div>
                    <span class="metric-value metric-value--danger">Congested</span>
                  </div>
                </div>
                <div class="dash-row">
                  <div class="dash-metric dash-metric--wide">
                    <span class="metric-label">Recommended Action</span>
                    <span class="metric-action">Switch to Channel 149 (5GHz)</span>
                  </div>
                </div>
                <div class="dash-devices">
                  <span class="devices-label">Connected Devices: 8</span>
                  <div class="devices-icons">
                    <span class="device-dot"></span>
                    <span class="device-dot"></span>
                    <span class="device-dot"></span>
                    <span class="device-dot device-dot--warning"></span>
                    <span class="device-dot"></span>
                    <span class="device-dot"></span>
                    <span class="device-dot"></span>
                    <span class="device-dot"></span>
                  </div>
                </div>
              </div>
            </div>

            <!-- Chat bubble -->
            <div class="chat-bubble chat-bubble--after">
              <div class="bubble-header">
                <span class="agent-avatar agent-avatar--after">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
                    <line x1="9" y1="9" x2="9.01" y2="9"></line>
                    <line x1="15" y1="9" x2="15.01" y2="9"></line>
                  </svg>
                </span>
                <span class="agent-name">{afterDialogue.agent}</span>
                <span class="dart-badge">
                  <svg width="10" height="10" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41L9 16.17z"></path>
                  </svg>
                  Verified
                </span>
              </div>
              <p class="bubble-text">{afterDialogue.response}</p>
              <span class="bubble-mood">{afterDialogue.mood}</span>
            </div>
          </div>
        </div>
      </div>

    </div>
  </Container>
</section>

<style>
  /* ========================================
     SOLUTION SECTION - Clean, Bright, Confident
     ======================================== */
  .solution-section {
    position: relative;
    padding: var(--space-16) 0 var(--space-24);
    background: #ffffff;
    overflow: hidden;
  }

  /* Clean Background */
  .solution-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .solution-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(
        ellipse 100% 60% at 50% 0%,
        rgba(234, 36, 43, 0.03) 0%,
        transparent 50%
      ),
      linear-gradient(180deg, #f8f9fa 0%, #ffffff 30%, #ffffff 100%);
  }

  .solution-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.02) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 0, 0, 0.02) 1px, transparent 1px);
    background-size: 80px 80px;
    mask-image: radial-gradient(
      ellipse 80% 60% at 50% 80%,
      black 0%,
      transparent 70%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 80% 60% at 50% 80%,
      black 0%,
      transparent 70%
    );
  }

  .solution-glow {
    position: absolute;
    top: -200px;
    left: 50%;
    transform: translateX(-50%);
    width: 800px;
    height: 400px;
    background: radial-gradient(
      ellipse at center,
      rgba(34, 197, 94, 0.08) 0%,
      transparent 60%
    );
    pointer-events: none;
  }

  /* Content Layout */
  .solution-content {
    position: relative;
    z-index: 1;
  }

  /* Section Header */
  .solution-header {
    text-align: center;
    margin-bottom: var(--space-12);
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
  }

  .solution-eyebrow {
    display: inline-block;
    padding: 0.35rem 0.9rem;
    margin-bottom: var(--space-4);
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: #22c55e;
    background: rgba(34, 197, 94, 0.1);
    border: 1px solid rgba(34, 197, 94, 0.3);
    border-radius: var(--radius-full);
  }

  .solution-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: var(--font-bold);
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: #111111;
    margin-bottom: var(--space-5);
  }

  .solution-context {
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: 1.7;
    color: rgba(0, 0, 0, 0.55);
  }

  /* Comparison Block */
  .comparison-block {
    display: flex;
    align-items: stretch;
    gap: var(--space-4);
    margin-bottom: var(--space-12);
  }

  .comparison-panel {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .panel-label {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-3);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #666666;
  }

  .label-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
  }

  .label-dot--before {
    background: #9ca3af;
  }

  .label-dot--after {
    background: #22c55e;
    box-shadow: 0 0 8px rgba(34, 197, 94, 0.5);
  }

  /* Agent Screen Mockup */
  .agent-screen {
    flex: 1;
    display: flex;
    flex-direction: column;
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all 0.4s ease;
  }

  .agent-screen--before {
    background: #f3f4f6;
    border: 1px solid #e5e7eb;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
  }

  .agent-screen--after {
    background: #ffffff;
    border: 1px solid rgba(34, 197, 94, 0.2);
    box-shadow:
      0 4px 20px rgba(0, 0, 0, 0.08),
      0 0 40px rgba(34, 197, 94, 0.1);
  }

  .screen-header {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    background: #e5e7eb;
    border-bottom: 1px solid #d1d5db;
  }

  .screen-header--active {
    background: linear-gradient(90deg, #f0fdf4 0%, #dcfce7 100%);
    border-bottom-color: rgba(34, 197, 94, 0.2);
  }

  .screen-dots {
    display: flex;
    gap: 6px;
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .dot--red { background: #ef4444; }
  .dot--yellow { background: #f59e0b; }
  .dot--green { background: #22c55e; }

  .screen-title {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: #6b7280;
  }

  .screen-status {
    display: flex;
    align-items: center;
    gap: 6px;
    margin-left: auto;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
  }

  .screen-status--offline {
    color: #9ca3af;
  }

  .screen-status--offline .status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #9ca3af;
  }

  .screen-status--online {
    color: #22c55e;
  }

  .screen-status--online .status-dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #22c55e;
    animation: statusPulse 1.5s ease-in-out infinite;
  }

  @keyframes statusPulse {
    0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(34, 197, 94, 0.4); }
    50% { opacity: 0.8; box-shadow: 0 0 0 4px rgba(34, 197, 94, 0); }
  }

  /* Screen Body */
  .screen-body {
    flex: 1;
    padding: var(--space-4);
    min-height: 140px;
  }

  .screen-body--before {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .data-placeholder {
    text-align: center;
    color: #9ca3af;
  }

  .placeholder-icon {
    margin-bottom: var(--space-2);
    opacity: 0.5;
  }

  .placeholder-text {
    font-family: var(--font-mono);
    font-size: var(--text-xs);
  }

  /* Mini Dashboard */
  .mini-dashboard {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .dash-row {
    display: flex;
    gap: var(--space-3);
  }

  .dash-metric {
    flex: 1;
    padding: var(--space-2) var(--space-3);
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: var(--radius-md);
  }

  .dash-metric--wide {
    flex: none;
    width: 100%;
  }

  .metric-label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #6b7280;
    margin-bottom: 4px;
  }

  .metric-bar {
    height: 4px;
    background: #e5e7eb;
    border-radius: var(--radius-full);
    overflow: hidden;
    margin-bottom: 4px;
  }

  .metric-fill {
    height: 100%;
    background: #f59e0b;
    border-radius: var(--radius-full);
  }

  .metric-fill--danger {
    background: #ef4444;
  }

  .metric-value {
    font-family: var(--font-display);
    font-size: var(--text-xs);
    font-weight: var(--font-semibold);
  }

  .metric-value--warning {
    color: #f59e0b;
  }

  .metric-value--danger {
    color: #ef4444;
  }

  .metric-action {
    display: block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    color: #22c55e;
    font-weight: var(--font-medium);
  }

  .dash-devices {
    padding: var(--space-2) var(--space-3);
    background: #f9fafb;
    border: 1px solid #e5e7eb;
    border-radius: var(--radius-md);
  }

  .devices-label {
    display: block;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #6b7280;
    margin-bottom: 6px;
  }

  .devices-icons {
    display: flex;
    gap: 4px;
  }

  .device-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #22c55e;
  }

  .device-dot--warning {
    background: #f59e0b;
    animation: deviceWarning 1s ease-in-out infinite;
  }

  @keyframes deviceWarning {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  /* Chat Bubble */
  .chat-bubble {
    margin: var(--space-4);
    padding: var(--space-4);
    border-radius: var(--radius-lg);
    transition: all 0.3s ease;
  }

  .chat-bubble--before {
    background: #f3f4f6;
    border: 1px solid #e5e7eb;
  }

  .chat-bubble--after {
    background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);
    border: 1px solid rgba(34, 197, 94, 0.2);
  }

  .bubble-header {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-bottom: var(--space-2);
  }

  .agent-avatar {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 28px;
    height: 28px;
    border-radius: 50%;
  }

  .agent-avatar--before {
    background: #d1d5db;
    color: #6b7280;
  }

  .agent-avatar--after {
    background: rgba(34, 197, 94, 0.15);
    color: #22c55e;
  }

  .agent-name {
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: #374151;
  }

  .dart-badge {
    display: inline-flex;
    align-items: center;
    gap: 4px;
    padding: 2px 8px;
    background: rgba(34, 197, 94, 0.1);
    border-radius: var(--radius-full);
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: #22c55e;
    font-weight: var(--font-medium);
  }

  .bubble-text {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: #374151;
    margin-bottom: var(--space-2);
  }

  .chat-bubble--before .bubble-text {
    color: #6b7280;
    font-style: italic;
  }

  .chat-bubble--after .bubble-text {
    color: #111827;
    font-weight: var(--font-medium);
  }

  .bubble-mood {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: var(--text-xs);
    padding: 2px 8px;
    border-radius: var(--radius-sm);
  }

  .chat-bubble--before .bubble-mood {
    background: rgba(156, 163, 175, 0.2);
    color: #9ca3af;
  }

  .chat-bubble--after .bubble-mood {
    background: rgba(34, 197, 94, 0.1);
    color: #22c55e;
  }

  /* Transformation Arrow */
  .transformation-arrow {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: var(--space-8) var(--space-2);
    flex-shrink: 0;
  }

  .arrow-line {
    flex: 1;
    width: 2px;
    background: linear-gradient(180deg,
      transparent 0%,
      rgba(34, 197, 94, 0.3) 30%,
      rgba(34, 197, 94, 0.3) 70%,
      transparent 100%
    );
  }

  .arrow-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    margin: var(--space-2) 0;
    background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
    border-radius: 50%;
    color: #ffffff;
    box-shadow:
      0 4px 12px rgba(34, 197, 94, 0.3),
      0 0 24px rgba(34, 197, 94, 0.2);
    animation: arrowPulse 2s ease-in-out infinite;
  }

  @keyframes arrowPulse {
    0%, 100% {
      transform: scale(1);
      box-shadow:
        0 4px 12px rgba(34, 197, 94, 0.3),
        0 0 24px rgba(34, 197, 94, 0.2);
    }
    50% {
      transform: scale(1.05);
      box-shadow:
        0 6px 16px rgba(34, 197, 94, 0.4),
        0 0 32px rgba(34, 197, 94, 0.3);
    }
  }


  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 1024px) {
    .comparison-block {
      flex-direction: column;
      gap: var(--space-6);
    }

    .transformation-arrow {
      flex-direction: row;
      padding: var(--space-2) var(--space-8);
    }

    .arrow-line {
      flex: 1;
      height: 2px;
      width: auto;
      background: linear-gradient(90deg,
        transparent 0%,
        rgba(34, 197, 94, 0.3) 30%,
        rgba(34, 197, 94, 0.3) 70%,
        transparent 100%
      );
    }

    .arrow-icon {
      transform: rotate(0deg);
      margin: 0 var(--space-2);
    }

    @keyframes arrowPulse {
      0%, 100% {
        transform: rotate(0deg) scale(1);
      }
      50% {
        transform: rotate(0deg) scale(1.05);
      }
    }
  }

  @media (max-width: 768px) {
    .solution-section {
      padding: var(--space-12) 0 var(--space-16);
    }

    .screen-header {
      padding: var(--space-2) var(--space-3);
    }

    .screen-title {
      display: none;
    }

    .screen-body {
      padding: var(--space-3);
      min-height: 120px;
    }

    .dash-row {
      flex-direction: column;
      gap: var(--space-2);
    }

    .chat-bubble {
      margin: var(--space-3);
      padding: var(--space-3);
    }

    .arrow-icon {
      width: 40px;
      height: 40px;
    }
  }
</style>
