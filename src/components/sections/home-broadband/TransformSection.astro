---
/**
 * TransformSection - "How DART-AI Transforms Your Broadband Operations"
 *
 * Bento grid layout with 3 benefit pillars, each containing sub-features.
 * Editorial aesthetic with oversized numbers and asymmetric card arrangement.
 */
import Container from "../../ui/Container.astro";
import PillarCard from "../../ui/PillarCard.astro";

interface Feature {
  title: string;
  description: string;
}

interface Pillar {
  number: string;
  title: string;
  lead: string;
  icon: string;
  features: Feature[];
  accent: string;
}

interface Props {
  sectionTitle?: string;
  pillars?: Pillar[];
}

const {
  sectionTitle = "How DART-AI Transforms Your Broadband Operations",
  pillars = [
    {
      number: "01",
      title: "Slash Operational Costs & End Needless Truck Rolls",
      lead: "Automated diagnostics pinpoint the root cause of poor performance in minutesâ€”not hours.",
