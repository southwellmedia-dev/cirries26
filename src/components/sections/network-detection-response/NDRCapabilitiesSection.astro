---
/**
 * NDRCapabilitiesSection - Capabilities Overview for Network Detection & Response
 *
 * Bento-style grid showcasing unified security capabilities:
 * - Core value propositions across detection and response
 * - How different security components integrate
 * - Key differentiators and outcomes
 */
import Container from "../../ui/Container.astro";
import CapabilityCard from "../../ui/CapabilityCard.astro";

interface Capability {
  icon: string;
  title: string;
  description: string;
  accent: string;
}

interface Props {
  eyebrow?: string;
  title?: string;
  highlightText?: string;
  description?: string;
  capabilities?: Capability[];
}

const {
  eyebrow = "Unified Security Platform",
  title = "Detect. Respond.",
  highlightText = "Defend.",
  description = "From packet capture to threat response, Cirries NDR delivers complete security intelligence. Our AI-powered platform sees what others miss, responds faster than humanly possible, and learns continuously to stay ahead of evolving threats.",
  capabilities = [
    {
      icon: "fa-solid fa-satellite-dish",
      title: "100 Gbps Capture",
      description: "Purpose-built DART sensors capture raw packets and metadata at line rates up to 100 Gbps—no sampling, no blind spots.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-brain",
      title: "AI-Powered Detection",
      description: "Machine learning models analyze 100% of packet data in real-time, detecting sophisticated threats that signature-based systems miss.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-bolt",
      title: "Millisecond Response",
      description: "Automated threat response kicks in before attackers can pivot. Our agents execute remediation playbooks autonomously.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-eye",
      title: "Complete Visibility",
      description: "Four layers of AI working together provide 360° observability. See every flow, every anomaly, every potential threat.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-shield-halved",
      title: "Zero Trust Ready",
      description: "Built for zero trust architectures. Continuous verification, least privilege enforcement, and micro-segmentation support.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-chart-line",
      title: "Predictive Security",
      description: "Don't just react—anticipate. Our models learn your network's patterns and predict threats before they materialize.",
      accent: "#EA242B",
    },
  ],
} = Astro.props;
---

<section class="ndr-capabilities" id="capabilities">
  <Container size="xl">
    <!-- Section Header -->
    <div class="capabilities-header">
      <span class="capabilities-eyebrow">{eyebrow}</span>
      <h2 class="capabilities-title">
        {title}
        <span>{highlightText}</span>
      </h2>
      <p class="capabilities-description">{description}</p>
    </div>

    <!-- Capabilities Grid -->
    <div class="capabilities-grid">
      {capabilities.map((cap) => (
        <CapabilityCard
          icon={cap.icon}
          iconType="fa"
          title={cap.title}
          description={cap.description}
          accent={cap.accent}
          theme="dark"
          size="md"
        />
      ))}
    </div>

    <!-- Bottom Stats/Proof Points -->
    <div class="capabilities-stats">
      <div class="stat-item">
        <div class="stat-value">100%</div>
        <div class="stat-label">Packet Analysis</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">&lt;50ms</div>
        <div class="stat-label">Detection Time</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">100 Gbps</div>
        <div class="stat-label">Line Rate</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">24/7</div>
        <div class="stat-label">Autonomous Defense</div>
      </div>
    </div>
  </Container>
</section>

<style>
  .ndr-capabilities {
    position: relative;
    padding: var(--space-20) 0;
    background: var(--color-bg-primary);
    overflow: hidden;
  }

  /* Subtle grid background */
  .ndr-capabilities::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--color-white-2) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-white-2) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 80% 60% at 50% 30%, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 80% 60% at 50% 30%, black 20%, transparent 70%);
  }

  /* Header */
  .capabilities-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-12);
    position: relative;
    z-index: 1;
  }

  .capabilities-eyebrow {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary, #EA242B);
    padding: var(--space-1-5) var(--space-3-5);
    background: var(--color-primary-10);
    border: 1px solid var(--color-primary-20);
    border-radius: var(--radius-md);
  }

  .capabilities-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: var(--font-bold);
    line-height: 1.15;
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-5);
  }

  .capabilities-title span {
    display: block;
    color: var(--color-primary, #EA242B);
  }

  .capabilities-description {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
  }

  /* Capabilities Grid */
  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-5);
    position: relative;
    z-index: 1;
  }

  /* Stats Section */
  .capabilities-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-8);
    margin-top: var(--space-16);
    padding: var(--space-8) var(--space-10);
    background: var(--color-white-2);
    border: 1px solid var(--color-white-6);
    border-radius: 16px;
    position: relative;
    z-index: 1;
  }

  .stat-item {
    text-align: center;
    padding: 0 var(--space-4);
  }

  .stat-value {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: var(--font-bold);
    color: var(--color-success, #22c55e);
    line-height: 1;
    margin-bottom: var(--space-2);
  }

  .stat-label {
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }

  .stat-divider {
    width: 1px;
    height: 50px;
    background: linear-gradient(180deg, transparent, var(--color-white-10), transparent);
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .capabilities-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .ndr-capabilities {
      padding: var(--space-12) 0;
    }

    .capabilities-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .capabilities-title {
      font-size: var(--text-2xl);
    }

    .capabilities-stats {
      flex-direction: column;
      gap: var(--space-6);
      padding: var(--space-6);
    }

    .stat-divider {
      width: 60px;
      height: 1px;
    }

    .stat-value {
      font-size: 1.75rem;
    }
  }
</style>
