---
/**
 * NDRNavBar - Navigation for Network Detection & Response child pages
 *
 * Uses CapabilityCard component for consistent card styling.
 * Three solution cards for DART Sensors, Anomaly Detection, and Intelligent Observability
 */
import Container from "../../ui/Container.astro";
import CapabilityCard from "../../ui/CapabilityCard.astro";

interface NavItem {
  title: string;
  description: string;
  badges: string[];
  href: string;
  accent: string;
  faIcon: string;
}

interface Props {
  label?: string;
  currentPage?: string;
  items?: NavItem[];
}

const {
  label = "Explore Network Detection & Response Solutions",
  currentPage = "",
  items = [
    {
      title: "DART Sensors",
      description: "Purpose-built sensors for 5G network observability at line rates up to 100 Gbps",
      badges: ["100 Gbps", "5G Ready"],
      href: "/solutions/network-detection-response/sensors",
      accent: "#EA242B",
      faIcon: "fa-solid fa-satellite-dish",
    },
    {
      title: "Anomaly Detection",
      description: "AI-powered network defense analyzing 100% of packet data in real-time",
      badges: ["AI-Powered", "Real-Time"],
      href: "/solutions/network-detection-response/anomaly-detection",
      accent: "#EA242B",
      faIcon: "fa-solid fa-shield-halved",
    },
    {
      title: "Intelligent Observability",
      description: "Multi-layered intelligence engine with four interconnected forms of AI",
      badges: ["4 AI Layers", "Full Visibility"],
      href: "/solutions/network-detection-response/observability",
      accent: "#EA242B",
      faIcon: "fa-solid fa-eye",
    },
  ],
} = Astro.props;

// Filter out current page from navigation
const navItems = items.filter(item => item.href !== currentPage);
---

<section class="ndr-nav-bar" id="solutions">
  <Container size="xl">
    <div class="nav-wrapper">
      <!-- Section Label -->
      <div class="nav-label">
        <span class="label-line"></span>
        <span class="label-text">{label}</span>
        <span class="label-line"></span>
      </div>

      <!-- Navigation Cards Grid -->
      <div class="nav-cards">
        {navItems.map((item) => (
          <CapabilityCard
            icon={item.faIcon}
            iconType="fa"
            title={item.title}
            description={item.description}
            badges={item.badges}
            accent={item.accent}
            theme="light"
            size="sm"
            href={item.href}
            accentPosition="bottom"
          />
        ))}
      </div>
    </div>
  </Container>
</section>

<style>
  .ndr-nav-bar {
    position: relative;
    padding: var(--space-10) 0 var(--space-12);
    background: linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-card) 100%);
    border-top: 1px solid var(--color-black-5);
    border-bottom: 1px solid var(--color-black-5);
  }

  .nav-wrapper {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  /* Label */
  .nav-label {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
  }

  .label-line {
    flex: 1;
    max-width: 120px;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--color-black-10), transparent);
  }

  .label-text {
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.14em;
    color: var(--color-text-muted);
  }

  /* Navigation Cards Grid */
  .nav-cards {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-4);
    max-width: 1000px;
    margin: 0 auto;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .nav-cards {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .ndr-nav-bar {
      padding: var(--space-8) 0 var(--space-10);
    }

    .nav-cards {
      grid-template-columns: 1fr;
      gap: var(--space-3);
    }

    .label-line {
      max-width: 60px;
    }
  }
</style>
