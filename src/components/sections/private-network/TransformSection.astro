---
/**
 * Private Network TransformSection - "Transform Your Private Network"
 *
 * Bento grid layout with 3 benefit pillars:
 * 1. Service Level Assurance (proactive SLA monitoring)
 * 2. AI-Powered Insights (predictive analysis, anomaly detection)
 * 3. Automated Forensics (accelerated resolution, MTTR reduction)
 */
import Container from "../../ui/Container.astro";
import PillarCard from "../../ui/PillarCard.astro";

interface Feature {
  title: string;
  description: string;
}

interface Pillar {
  number: string;
  title: string;
  lead: string;
  icon: string;
  features: Feature[];
  accent: string;
}

interface Props {
  sectionTitle?: string;
  pillars?: Pillar[];
}

const {
  sectionTitle = "Transform Your Private Network",
  pillars = [
    {
      number: "01",
      title: "Guarantee SLAs: Service Level Assurance",
      lead: "Don't hope your network meets expectations—know it. DART-AI provides continuous, real-time tracking against your defined thresholds.",
      icon: "M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z",
      accent: "#EA242B",
      features: [
        {
          title: "Real-Time SLA Tracking",
          description: "Continuously monitor latency, throughput, and QoS against your defined SLA thresholds with instant deviation alerts.",
        },
        {
          title: "Holistic Network Visibility",
          description: "Complete visibility across RAN, core, and edge—correlating data across all domains with no blind spots.",
        },
        {
          title: "North-South & East-West Coverage",
          description: "Monitor both external traffic and internal east-west flows to ensure comprehensive performance assurance.",
        },
      ],
    },
    {
      number: "02",
      title: "Reactive to Proactive: AI-Powered Insights",
      lead: "Stop waiting for alerts. DART-AI's intelligent engine detects subtle deviations and predicts issues before they impact users.",
      icon: "M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z",
      accent: "#22c55e",
      features: [
        {
          title: "Anomaly Detection",
          description: "AI analyzes 100% of network packets to detect subtle deviations from baseline behavior before they escalate.",
        },
        {
          title: "Predictive Analysis",
          description: "Shift from reactive firefighting to proactive optimization—address performance degradation before it happens.",
        },
        {
          title: "Intelligent Pattern Recognition",
          description: "Machine learning identifies recurring issues and optimizes network performance based on historical patterns.",
        },
      ],
    },
    {
      number: "03",
      title: "Alerts to Action: Automated Forensics",
      lead: "When anomalies strike, DART-AI doesn't just alert—it investigates. Automatic forensic collection delivers clear resolution paths.",
      icon: "M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7",
      accent: "#3b82f6",
      features: [
        {
          title: "Automatic Investigation",
          description: "When issues are detected, the system automatically collects relevant forensic data and traces root causes.",
        },
        {
          title: "Drastically Reduced MTTR",
          description: "Clear resolution paths and pre-collected evidence cut Mean Time to Repair dramatically.",
        },
        {
          title: "End-User Experience Preservation",
          description: "Rapid resolution ensures service disruptions are minimized, maintaining seamless user experiences.",
        },
      ],
    },
  ],
} = Astro.props;
---

<section class="transform-section" data-theme="light">
  <div class="transform-bg">
    <div class="transform-gradient"></div>
    <div class="transform-grid"></div>
    <div class="transform-pattern"></div>
  </div>

  <Container size="xl">
    <div class="transform-content">
      <!-- Section Header -->
      <header class="transform-header">
        <span class="transform-eyebrow">The Transformation</span>
        <h2 class="transform-title">{sectionTitle}</h2>
      </header>

      <!-- Bento Grid -->
      <div class="bento-grid">
        {pillars.map((pillar) => (
          <PillarCard
            number={pillar.number}
            title={pillar.title}
            lead={pillar.lead}
            icon={pillar.icon}
            features={pillar.features}
            accent={pillar.accent}
            theme="light"
          />
        ))}
      </div>
    </div>
  </Container>
</section>

<style>
  .transform-section {
    position: relative;
    padding: var(--space-20) 0 var(--space-24);
    background: var(--color-bg-secondary);
    overflow: hidden;
  }

  .transform-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .transform-gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 20% 20%, var(--color-primary-3) 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 80% 80%, var(--color-black-3) 0%, transparent 50%),
      linear-gradient(180deg, var(--color-bg-secondary) 0%, var(--color-bg-tertiary) 50%, var(--color-bg-secondary) 100%);
  }

  .transform-grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--color-black-4) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-black-4) 1px, transparent 1px);
    background-size: 48px 48px;
    mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 0%, transparent 65%);
    -webkit-mask-image: radial-gradient(ellipse 70% 50% at 50% 50%, black 0%, transparent 65%);
  }

  .transform-pattern {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 1px 1px, var(--color-black-3) 1px, transparent 0);
    background-size: 32px 32px;
    mask-image: linear-gradient(180deg, transparent 0%, black 20%, black 80%, transparent 100%);
  }

  .transform-content {
    position: relative;
    z-index: 1;
  }

  /* Header */
  .transform-header {
    text-align: center;
    margin-bottom: var(--space-14);
  }

  .transform-eyebrow {
    display: inline-block;
    padding: var(--space-1-5) var(--space-3-5);
    margin-bottom: var(--space-4);
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-primary);
    background: var(--color-primary-8);
    border: 1px solid var(--color-primary-15);
    border-radius: var(--radius-full);
  }

  .transform-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 4vw, 2.5rem);
    font-weight: var(--font-bold);
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: var(--color-text-primary);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Bento Grid */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
    align-items: stretch;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .bento-grid {
      grid-template-columns: 1fr;
      gap: var(--space-5);
    }
  }

  @media (max-width: 640px) {
    .transform-section {
      padding: var(--space-14) 0 var(--space-16);
    }

    .transform-header {
      margin-bottom: var(--space-10);
    }
  }
</style>
