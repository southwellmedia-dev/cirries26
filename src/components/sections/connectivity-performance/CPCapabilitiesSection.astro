---
/**
 * CPCapabilitiesSection - Capabilities Overview for Connectivity & Performance
 *
 * Bento-style grid showcasing unified connectivity capabilities
 * using CapabilityCard components for consistent styling.
 */
import Container from "../../ui/Container.astro";
import CapabilityCard from "../../ui/CapabilityCard.astro";

interface Capability {
  icon: string;
  title: string;
  description: string;
  accent: string;
}

interface Props {
  eyebrow?: string;
  title?: string;
  highlightText?: string;
  description?: string;
  capabilities?: Capability[];
}

const {
  eyebrow = "Unified Connectivity Platform",
  title = "Every Network.",
  highlightText = "One Truth.",
  description = "From cellular towers to cloud data centers, from IoT sensors to home routersâ€”Cirries delivers consistent visibility and intelligence across every connectivity domain. No silos. No blind spots. Just clarity.",
  capabilities = [
    {
      icon: "fa-solid fa-layer-group",
      title: "Cross-Domain Visibility",
      description:
        "See the complete picture across mobile, cloud, IoT, and enterprise networks. Correlate events that span multiple domains instantly.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-gauge-high",
      title: "Real-Time Performance",
      description:
        "Monitor latency, throughput, and quality metrics in real-time. Identify degradation before it impacts users or SLAs.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-magnifying-glass-chart",
      title: "Root Cause Analysis",
      description:
        "Stop guessing. Our AI pinpoints the exact cause of issues across complex, multi-vendor environments in seconds.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-chart-line",
      title: "Predictive Intelligence",
      description:
        "Machine learning models learn your network's patterns, predicting capacity issues and failures before they occur.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-shield-halved",
      title: "Security Integration",
      description:
        "Threat detection built into every layer. Identify anomalous behavior, potential breaches, and compliance violations.",
      accent: "#EA242B",
    },
    {
      icon: "fa-solid fa-gears",
      title: "Automated Response",
      description:
        "Configure intelligent playbooks that trigger automatically. Remediate issues without human intervention 24/7.",
      accent: "#EA242B",
    },
  ],
} = Astro.props;
---

<section class="cp-capabilities" id="capabilities" data-theme="dark">
  <Container size="xl">
    <!-- Section Header -->
    <div class="capabilities-header">
      <span class="capabilities-eyebrow">{eyebrow}</span>
      <h2 class="capabilities-title">
        {title}
        <span>{highlightText}</span>
      </h2>
      <p class="capabilities-description">{description}</p>
    </div>

    <!-- Capabilities Grid -->
    <div class="capabilities-grid">
      {
        capabilities.map((cap) => (
          <CapabilityCard
            icon={cap.icon}
            iconType="fa"
            title={cap.title}
            description={cap.description}
            accent={cap.accent}
            theme="dark"
            size="md"
          />
        ))
      }
    </div>

    <!-- Bottom Stats/Proof Points -->
    <div class="capabilities-stats">
      <div class="stat-item">
        <div class="stat-value">6</div>
        <div class="stat-label">Network Domains</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">100%</div>
        <div class="stat-label">Packet Visibility</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">&lt;1min</div>
        <div class="stat-label">Root Cause ID</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-value">99.9%</div>
        <div class="stat-label">Uptime SLA</div>
      </div>
    </div>
  </Container>
</section>

<style>
  .cp-capabilities {
    position: relative;
    padding: var(--space-20) 0;
    background: var(--color-bg-primary);
    overflow: hidden;
  }

  /* Subtle grid background */
  .cp-capabilities::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--color-white-2) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-white-2) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(
      ellipse 80% 60% at 50% 30%,
      black 20%,
      transparent 70%
    );
    -webkit-mask-image: radial-gradient(
      ellipse 80% 60% at 50% 30%,
      black 20%,
      transparent 70%
    );
  }

  /* Header */
  .capabilities-header {
    text-align: center;
    max-width: 700px;
    margin: 0 auto var(--space-12);
    position: relative;
    z-index: 1;
  }

  .capabilities-eyebrow {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-semibold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary, #ea242b);
    padding: var(--space-1-5) var(--space-3-5);
    background: var(--color-primary-10);
    border: 1px solid var(--color-primary-20);
    border-radius: var(--radius-md);
  }

  .capabilities-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: var(--font-bold);
    line-height: 1.15;
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-5);
  }

  .capabilities-title span {
    display: block;
    color: var(--color-primary, #ea242b);
  }

  .capabilities-description {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-muted);
  }

  /* Capabilities Grid */
  .capabilities-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-5);
    position: relative;
    z-index: 1;
  }

  /* Stats Section */
  .capabilities-stats {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-8);
    margin-top: var(--space-16);
    padding: var(--space-8) var(--space-10);
    background: var(--color-white-2);
    border: 1px solid var(--color-white-6);
    border-radius: 16px;
    position: relative;
    z-index: 1;
  }

  .stat-item {
    text-align: center;
    padding: 0 var(--space-4);
  }

  .stat-value {
    font-family: var(--font-display);
    font-size: 2rem;
    font-weight: var(--font-bold);
    color: var(--color-success, #22c55e);
    line-height: 1;
    margin-bottom: var(--space-2);
  }

  .stat-label {
    font-family: var(--font-mono);
    font-size: var(--text-2xs);
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-text-muted);
  }

  .stat-divider {
    width: 1px;
    height: 50px;
    background: linear-gradient(
      180deg,
      transparent,
      var(--color-white-10),
      transparent
    );
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .capabilities-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .cp-capabilities {
      padding: var(--space-12) 0;
    }

    .capabilities-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .capabilities-title {
      font-size: var(--text-2xl);
    }

    .capabilities-stats {
      flex-direction: column;
      gap: var(--space-6);
      padding: var(--space-6);
    }

    .stat-divider {
      width: 60px;
      height: 1px;
    }

    .stat-value {
      font-size: 1.75rem;
    }
  }
</style>
