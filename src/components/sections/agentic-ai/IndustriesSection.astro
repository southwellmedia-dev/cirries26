---
/**
 * IndustriesSection - "Real-World Impact" feature cards
 *
 * Light mode section showing industry applications of Agentic AI.
 * Content from: docs/content/autonomous-network-agentic-ai.md
 */
import { Image } from "astro:assets";
import Container from "../../ui/Container.astro";

import dartLogo from "../../../assets/logos/dart-lightmode.svg";

interface IndustryCard {
  icon: string;
  title: string;
  text: string;
}

interface Props {
  badge?: string;
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  cards?: IndustryCard[];
}

const {
  badge = "Industry Applications",
  title = "Real-World Impact",
  titleHighlight = "Across Critical Industries",
  subtitle = "Agentic AI isn't a theoretical concept; it's a practical necessity for modern network-dependent operations.",
  cards = [
    {
      icon: "M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z",
      title: "Private 5G & Edge Computing",
      text: "For applications in manufacturing or logistics that depend on uninterrupted mobility and real-time data, our platform provides autonomous assurance, guaranteeing the ultra-low latency these environments demand."
    },
    {
      icon: "M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z",
      title: "Healthcare Networks",
      text: "In a world of telehealth and real-time patient monitoring, network performance is life-critical. DART ensures that vital connections for medical imaging and remote consultations are always prioritized and flawlessly reliable through autonomous network tuning."
    },
    {
      icon: "M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9",
      title: "Enterprise SD-WAN",
      text: "Stop managing WAN paths with static policies. DART dynamically optimizes connectivity based on real-time application demand, ensuring critical business applications always have the most efficient and reliable path."
    }
  ]
} = Astro.props;
---

<section class="industries-section" data-theme="light">
  <Container size="xl">
    <!-- Header with Logo -->
    <div class="industries-header">
      <div class="industries-header__content">
        <span class="industries-badge">{badge}</span>
        <h2 class="industries-title">
          {title}<br />
          <em>{titleHighlight}</em>
        </h2>
        <p class="industries-subtitle">{subtitle}</p>
      </div>
      <div class="industries-header__logo">
        <Image src={dartLogo} alt="DART AI" width={550} height={105} />
      </div>
    </div>

    <!-- Feature Cards Grid -->
    <div class="industry-grid">
      {cards.map((card) => (
        <div class="industry-card">
          <div class="industry-card__icon">
            <svg
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
            >
              <path d={card.icon} />
            </svg>
          </div>
          <h3 class="industry-card__title">{card.title}</h3>
          <p class="industry-card__text">{card.text}</p>
        </div>
      ))}
    </div>
  </Container>
</section>

<style>
  /* ========================================
     INDUSTRIES SECTION - Light Mode
     ======================================== */
  .industries-section {
    padding: var(--space-20) 0;
    background-color: var(--color-bg-secondary);
  }

  .industries-header {
    position: relative;
    margin-bottom: var(--space-12);
  }

  .industries-header__content {
    position: relative;
    z-index: 2;
    max-width: 600px;
  }

  .industries-header__logo {
    position: absolute;
    right: -18%;
    top: 50%;
    transform: translateY(-50%);
    z-index: 1;
    pointer-events: none;
  }

  .industries-header__logo img {
    width: 1400px;
    max-width: none;
    height: auto;
    filter: grayscale(100%);
    opacity: 0.025;
  }

  .industries-badge {
    display: inline-block;
    padding: var(--space-2) var(--space-4);
    font-family: var(--font-display);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
    background: var(--color-primary-muted);
    border: 1px solid var(--color-primary-subtle);
    border-radius: 100px;
    margin-bottom: var(--space-4);
  }

  .industries-title {
    font-family: var(--font-display);
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: var(--font-bold);
    line-height: 1.2;
    letter-spacing: var(--tracking-tight);
    color: var(--color-text-primary);
    margin-bottom: var(--space-4);
  }

  .industries-title em {
    color: var(--color-primary);
    font-style: italic;
  }

  .industries-subtitle {
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    max-width: 600px;
  }

  /* Industry Cards Grid - 3 columns */
  .industry-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-6);
  }

  .industry-card {
    display: flex;
    flex-direction: column;
    padding: var(--space-8);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border-subtle);
    border-radius: var(--radius-xl);
    transition: all 0.3s ease;
  }

  .industry-card:hover {
    border-color: var(--color-border-hover);
    box-shadow: var(--shadow-card-hover);
    transform: translateY(-4px);
  }

  .industry-card__icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56px;
    height: 56px;
    background: var(--color-primary-muted);
    border-radius: var(--radius-lg);
    color: var(--color-primary);
    margin-bottom: var(--space-5);
  }

  .industry-card__icon svg {
    width: 28px;
    height: 28px;
  }

  .industry-card__title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
    margin-bottom: var(--space-3);
    line-height: 1.3;
  }

  .industry-card__text {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .industries-header__logo img {
      width: 700px;
    }

    .industry-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .industry-card:last-child {
      grid-column: span 2;
    }
  }

  @media (max-width: 768px) {
    .industries-section {
      padding: var(--space-12) 0;
    }

    .industries-header {
      margin-bottom: var(--space-8);
    }

    .industries-header__logo {
      display: none;
    }

    .industries-title {
      font-size: var(--text-2xl);
    }

    .industry-grid {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .industry-card:last-child {
      grid-column: span 1;
    }

    .industry-card {
      padding: var(--space-6);
    }

    .industry-card__icon {
      width: 48px;
      height: 48px;
    }

    .industry-card__icon svg {
      width: 24px;
      height: 24px;
    }
  }
</style>
