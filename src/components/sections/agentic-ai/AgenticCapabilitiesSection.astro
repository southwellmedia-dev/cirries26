---
/**
 * AgenticCapabilitiesSection - Core Agentic AI capabilities
 *
 * Shows the three core capabilities of Agentic AI in a dramatic,
 * typography-driven dark layout.
 * Content from: docs/content/autonomous-network-agentic-ai.md
 */
import Container from "../../ui/Container.astro";

interface Capability {
  number: string;
  title: string;
  description: string;
  highlight: string;
}

interface Props {
  badge?: string;
  title?: string;
  titleHighlight?: string;
  subtitle?: string;
  closingStatement?: string;
  capabilities?: Capability[];
}

const {
  badge = "Cirries DART",
  title = "Where Agentic AI",
  titleHighlight = "Comes to Life",
  subtitle = "The Cirries DART platform is built on the principles of Agentic AI, creating a truly intelligent observability solution that delivers a new level of performance and reliability.",
  closingStatement = "For any organization building on cloud, edge, or 5G, an autonomous, self-optimizing network is no longer a future vision\u2014it's a strategic imperative.",
  capabilities = [
    {
      number: "01",
      title: "Goal-Oriented Performance, Not Static Rules",
      highlight: "Intent-Based Intelligence",
      description: "DART doesn't just monitor metrics; it understands intent. Whether your goal is maintaining stringent SLA compliance, ensuring ultra-low latency for a critical application, or guaranteeing bandwidth for a priority service, our Agentic AI works continuously to meet those objectives. It dynamically adjusts routing, prioritizes traffic, and reallocates resources in real time, moving beyond the limitations of rigid, pre-defined rules."
    },
    {
      number: "02",
      title: "From Diagnosis to Resolution, Autonomously",
      highlight: "Self-Healing Networks",
      description: "When a performance issue arises, legacy systems send an alert. DART initiates a solution. Our AI agents go beyond surface-level symptoms to perform an immediate and autonomous root cause analysis, digging into packet-level data to find the *why* behind the problem. It then takes independent, self-healing actions\u2014rerouting traffic, isolating a compromised node, or restarting a service\u2014to resolve the issue, often before human operators are even aware of it."
    },
    {
      number: "03",
      title: "Predictive Assurance to Prevent Outages",
      highlight: "Proactive Prevention",
      description: "The ultimate goal is to solve problems before they impact your business. Using advanced predictive models, DART's Agentic AI forecasts future network states to identify potential outages and bottlenecks. This allows the network to take preemptive action, ensuring seamless service continuity and transforming your operations from reactive to predictive."
    }
  ]
} = Astro.props;
---

<section class="capabilities-section" data-theme="dark">
  <!-- Atmospheric background -->
  <div class="section-bg">
    <div class="grid-pattern"></div>
    <div class="glow-orb glow-orb--top"></div>
    <div class="glow-orb glow-orb--bottom"></div>
  </div>

  <Container size="xl">
    <!-- Header -->
    <header class="section-header">
      <span class="section-badge">{badge}</span>
      <h2 class="section-title">
        {title} <em class="title-highlight">{titleHighlight}</em>
      </h2>
      <p class="section-subtitle">{subtitle}</p>
    </header>

    <!-- Capabilities - Stacked Editorial Cards -->
    <div class="capabilities-stack">
      {capabilities.map((cap, index) => (
        <article class="capability-card" style={`--card-index: ${index}`}>
          <div class="card-inner">
            <!-- Large number watermark -->
            <span class="card-number">{cap.number}</span>

            <div class="card-content">
              <div class="card-highlight">
                <span class="highlight-line"></span>
                <span class="highlight-text">{cap.highlight}</span>
              </div>
              <h3 class="card-title">{cap.title}</h3>
              <p class="card-description">{cap.description}</p>
            </div>
          </div>
        </article>
      ))}
    </div>

    <!-- Closing Statement -->
    <div class="section-statement">
      <p class="statement-text">{closingStatement}</p>
    </div>
  </Container>
</section>

<style>
  /* ========================================
     CAPABILITIES SECTION - Dark Editorial
     ======================================== */
  .capabilities-section {
    position: relative;
    padding: var(--space-24) 0;
    background: var(--color-bg-primary);
    color: var(--color-text-primary);
    overflow: hidden;
  }

  /* Atmospheric Background */
  .section-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .grid-pattern {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(var(--color-white-2) 1px, transparent 1px),
      linear-gradient(90deg, var(--color-white-2) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 70% 50% at 50% 30%, black 0%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 70% 50% at 50% 30%, black 0%, transparent 70%);
  }

  .glow-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(100px);
  }

  .glow-orb--top {
    top: -200px;
    right: -100px;
    width: 500px;
    height: 500px;
    background: var(--color-primary);
    opacity: 0.08;
  }

  .glow-orb--bottom {
    bottom: -150px;
    left: -100px;
    width: 400px;
    height: 400px;
    background: var(--color-primary);
    opacity: 0.05;
  }

  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-16);
    position: relative;
    z-index: 1;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  .section-badge {
    display: inline-block;
    padding: var(--space-2) var(--space-5);
    font-family: var(--font-display);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
    background: var(--color-primary-muted);
    border: 1px solid var(--color-primary-subtle);
    border-radius: 100px;
    margin-bottom: var(--space-5);
  }

  .section-title {
    font-family: var(--font-display);
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    font-weight: var(--font-bold);
    line-height: 1.1;
    letter-spacing: var(--tracking-tight);
    margin-bottom: var(--space-4);
  }

  .title-highlight {
    color: var(--color-primary);
    font-style: normal;
  }

  .section-subtitle {
    font-family: var(--font-body);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Capabilities Stack */
  .capabilities-stack {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
    position: relative;
    z-index: 1;
  }

  /* Capability Card */
  .capability-card {
    position: relative;
    animation: cardReveal 0.6s ease forwards;
    animation-delay: calc(var(--card-index) * 0.15s);
    opacity: 0;
  }

  @keyframes cardReveal {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .card-inner {
    position: relative;
    display: grid;
    grid-template-columns: auto 1fr;
    gap: var(--space-8);
    padding: var(--space-10);
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .capability-card:hover .card-inner {
    border-color: var(--color-primary-subtle);
    transform: translateX(8px);
    box-shadow:
      -8px 0 0 var(--color-primary),
      var(--shadow-lg);
  }

  .card-number {
    font-family: var(--font-display);
    font-size: clamp(4rem, 8vw, 6rem);
    font-weight: 800;
    line-height: 1;
    color: var(--color-text-primary);
    opacity: 0.08;
    transition: all 0.4s ease;
    user-select: none;
  }

  .capability-card:hover .card-number {
    opacity: 0.15;
  }

  .card-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .card-highlight {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .highlight-line {
    width: 32px;
    height: 2px;
    background: var(--color-primary);
  }

  .highlight-text {
    font-family: var(--font-display);
    font-size: var(--text-xs);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-primary);
  }

  .card-title {
    font-family: var(--font-display);
    font-size: clamp(1.25rem, 2.5vw, 1.5rem);
    font-weight: var(--font-bold);
    color: var(--color-text-primary);
    line-height: 1.3;
    max-width: 600px;
  }

  .card-description {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    line-height: 1.7;
    color: var(--color-text-secondary);
    margin: 0;
    max-width: 700px;
  }

  /* Section Statement */
  .section-statement {
    text-align: center;
    max-width: 800px;
    margin: var(--space-12) auto 0;
    padding: var(--space-8) 0;
    position: relative;
    z-index: 1;
  }

  .statement-text {
    font-family: var(--font-display);
    font-size: clamp(1.125rem, 2vw, 1.375rem);
    font-weight: var(--font-medium);
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* ========================================
     RESPONSIVE
     ======================================== */
  @media (max-width: 1024px) {
    .card-inner {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }

    .card-number {
      position: absolute;
      top: var(--space-4);
      right: var(--space-4);
      font-size: 3rem;
    }
  }

  @media (max-width: 768px) {
    .capabilities-section {
      padding: var(--space-16) 0;
    }

    .section-title {
      font-size: var(--text-3xl);
    }

    .section-subtitle {
      font-size: var(--text-base);
    }

    .card-inner {
      padding: var(--space-6);
    }

    .card-title {
      font-size: var(--text-lg);
      padding-right: 3rem;
    }
  }
</style>
