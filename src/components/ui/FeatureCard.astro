---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description?: string;
  icon?: ImageMetadata;
  iconBg?: 'primary' | 'dark' | 'light';
  theme?: 'light' | 'dark';
  variant?: 'default' | 'bordered' | 'elevated';
  class?: string;
}

const {
  title,
  description,
  icon,
  iconBg = 'primary',
  theme = 'light',
  variant = 'default',
  class: className = ''
} = Astro.props;
---

<div class:list={[
  "feature-card",
  `feature-card--${theme}`,
  `feature-card--${variant}`,
  className
]}>
  {icon && (
    <div class:list={["feature-card__icon", `feature-card__icon--${iconBg}`]}>
      <Image src={icon} alt="" width={24} height={24} />
    </div>
  )}

  <div class="feature-card__content">
    <h3 class="feature-card__title">{title}</h3>
    {description && (
      <p class="feature-card__description">{description}</p>
    )}
    <slot />
  </div>
</div>

<style>
  .feature-card {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    transition: all var(--duration-normal) var(--ease-out);
  }

  /* Light theme */
  .feature-card--light {
    background: transparent;
  }

  .feature-card--light.feature-card--bordered {
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.08);
  }

  .feature-card--light.feature-card--elevated {
    background: #ffffff;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.06);
  }

  .feature-card--light.feature-card--bordered:hover,
  .feature-card--light.feature-card--elevated:hover {
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
    transform: translateY(-2px);
  }

  /* Dark theme */
  .feature-card--dark {
    background: transparent;
  }

  .feature-card--dark.feature-card--bordered {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid rgba(255, 255, 255, 0.06);
  }

  .feature-card--dark.feature-card--elevated {
    background: rgba(255, 255, 255, 0.03);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  /* Icon */
  .feature-card__icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    border-radius: var(--radius-md);
  }

  .feature-card__icon--primary {
    background: var(--color-primary);
  }

  .feature-card__icon--dark {
    background: #1a1a1a;
  }

  .feature-card__icon--light {
    background: #f5f5f5;
  }

  .feature-card__icon img {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  /* Content */
  .feature-card__content {
    flex: 1;
  }

  .feature-card__title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
  }

  .feature-card--light .feature-card__title {
    color: #111111;
  }

  .feature-card--dark .feature-card__title {
    color: #ffffff;
  }

  .feature-card__description {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
  }

  .feature-card--light .feature-card__description {
    color: #555555;
  }

  .feature-card--dark .feature-card__description {
    color: #a0a0a0;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .feature-card {
      padding: var(--space-4);
    }

    .feature-card__icon {
      width: 40px;
      height: 40px;
    }

    .feature-card__icon img {
      width: 20px;
      height: 20px;
    }
  }
</style>
