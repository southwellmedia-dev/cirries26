---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  description?: string;
  icon?: ImageMetadata;
  iconBg?: 'primary' | 'dark' | 'light';
  theme?: 'light' | 'dark';
  variant?: 'default' | 'bordered' | 'elevated';
  class?: string;
}

const {
  title,
  description,
  icon,
  iconBg = 'primary',
  theme = 'light',
  variant = 'default',
  class: className = ''
} = Astro.props;
---

<div class:list={[
  "feature-card",
  `feature-card--${theme}`,
  `feature-card--${variant}`,
  className
]}>
  {icon && (
    <div class:list={["feature-card__icon", `feature-card__icon--${iconBg}`]}>
      <Image src={icon} alt="" width={24} height={24} />
    </div>
  )}

  <div class="feature-card__content">
    <h3 class="feature-card__title">{title}</h3>
    {description && (
      <p class="feature-card__description">{description}</p>
    )}
    <slot />
  </div>
</div>

<style>
  .feature-card {
    display: flex;
    gap: var(--space-4);
    padding: var(--space-6);
    border-radius: var(--radius-lg);
    transition: all var(--duration-normal) var(--ease-out);
  }

  /* Light theme */
  .feature-card--light {
    background: transparent;
  }

  .feature-card--light.feature-card--bordered {
    background: var(--color-text-primary);
    border: 1px solid var(--color-black-10);
  }

  .feature-card--light.feature-card--elevated {
    background: var(--color-text-primary);
    box-shadow: 0 4px 20px var(--color-black-5);
  }

  .feature-card--light.feature-card--bordered:hover,
  .feature-card--light.feature-card--elevated:hover {
    box-shadow: 0 8px 32px var(--color-black-10);
    transform: translateY(-2px);
  }

  /* Dark theme */
  .feature-card--dark {
    background: transparent;
  }

  .feature-card--dark.feature-card--bordered {
    background: var(--color-white-5);
    border: 1px solid var(--color-white-5);
  }

  .feature-card--dark.feature-card--elevated {
    background: var(--color-white-5);
    box-shadow: 0 4px 20px var(--color-black-30);
  }

  /* Icon */
  .feature-card__icon {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--space-12);
    height: var(--space-12);
    border-radius: var(--radius-md);
  }

  .feature-card__icon--primary {
    background: var(--color-primary);
  }

  .feature-card__icon--dark {
    background: var(--color-bg-card-hover);
  }

  .feature-card__icon--light {
    background: var(--color-bg-tertiary);
  }

  .feature-card__icon img {
    width: var(--space-6);
    height: var(--space-6);
    object-fit: contain;
  }

  /* Content */
  .feature-card__content {
    flex: 1;
  }

  .feature-card__title {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    margin-bottom: var(--space-2);
  }

  .feature-card--light .feature-card__title {
    color: var(--color-bg-primary);
  }

  .feature-card--dark .feature-card__title {
    color: var(--color-text-primary);
  }

  .feature-card__description {
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
  }

  .feature-card--light .feature-card__description {
    color: var(--color-text-secondary);
  }

  .feature-card--dark .feature-card__description {
    color: var(--color-text-secondary);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .feature-card {
      padding: var(--space-4);
    }

    .feature-card__icon {
      width: var(--space-10);
      height: var(--space-10);
    }

    .feature-card__icon img {
      width: var(--space-5);
      height: var(--space-5);
    }
  }
</style>
