---
/**
 * PillarCard - Numbered editorial card with nested features
 *
 * Used in TransformSection layouts to showcase benefit pillars.
 * Features:
 * - Large numbered badge (01, 02, 03)
 * - Icon + title header
 * - Lead paragraph
 * - Nested features list with checkmarks
 * - Accent color theming
 * - Hover animations
 */

interface Feature {
  title: string;
  description: string;
}

interface Props {
  number: string;
  title: string;
  lead: string;
  icon?: string;
  faIcon?: string;
  features: Feature[];
  accent?: string;
  theme?: "light" | "dark";
}

const {
  number,
  title,
  lead,
  icon,
  faIcon,
  features,
  accent = "#EA242B",
  theme = "light",
} = Astro.props;
---

<article
  class={`pillar-card pillar-card--${theme}`}
  style={`--pillar-accent: ${accent}`}
>
  <!-- Number Badge -->
  <div class="pillar-number">
    <span>{number}</span>
  </div>

  <!-- Pillar Header -->
  <div class="pillar-header">
    <div class="pillar-icon">
      {faIcon ? (
        <i class={faIcon}></i>
      ) : (
        <svg
          width="28"
          height="28"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="1.5"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d={icon}></path>
        </svg>
      )}
    </div>
    <h3 class="pillar-title">{title}</h3>
  </div>

  <p class="pillar-lead">{lead}</p>

  <!-- Features List -->
  <div class="pillar-features">
    {features.map((feature, featureIndex) => (
      <div class="feature-item" style={`--feature-delay: ${featureIndex * 0.1}s`}>
        <div class="feature-marker">
          <svg
            width="14"
            height="14"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
          >
            <polyline points="20 6 9 17 4 12"></polyline>
          </svg>
        </div>
        <div class="feature-content">
          <h4 class="feature-title">{feature.title}</h4>
          <p class="feature-desc">{feature.description}</p>
        </div>
      </div>
    ))}
  </div>

  <!-- Decorative Elements -->
  <div class="pillar-accent-line"></div>
  <div class="pillar-corner"></div>
</article>

<style>
  /* Pillar Card Base */
  .pillar-card {
    position: relative;
    padding: var(--space-8);
    border-radius: var(--radius-xl);
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    display: flex;
    flex-direction: column;
  }

  /* Light Theme (default) */
  .pillar-card--light {
    background: var(--color-bg-card);
    border: 1px solid var(--color-black-6);
    box-shadow:
      0 1px 3px var(--color-black-4),
      0 4px 12px var(--color-black-2);
  }

  .pillar-card--light:hover {
    transform: translateY(-4px);
    box-shadow:
      0 8px 24px var(--color-black-8),
      0 16px 48px var(--color-black-4);
    border-color: var(--color-black-8);
  }

  /* Dark Theme */
  .pillar-card--dark {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    box-shadow: var(--shadow-md);
  }

  .pillar-card--dark:hover {
    transform: translateY(-4px);
    border-color: var(--color-primary-subtle);
    box-shadow: var(--shadow-lg);
  }

  /* Number Badge */
  .pillar-number {
    position: absolute;
    top: var(--space-6);
    right: var(--space-6);
    width: 52px;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-black-2) 0%, var(--color-black-4) 100%);
    border-radius: 12px;
    border: 1px solid var(--color-black-4);
  }

  .pillar-card--dark .pillar-number {
    background: linear-gradient(135deg, var(--color-white-2) 0%, var(--color-white-4) 100%);
    border-color: var(--color-white-6);
  }

  .pillar-number span {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: var(--font-bold);
    color: var(--pillar-accent);
    letter-spacing: -0.02em;
  }

  /* Pillar Header */
  .pillar-header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
    padding-right: 70px;
  }

  .pillar-icon {
    width: 48px;
    height: 48px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--pillar-accent) 8%, transparent) 0%,
      color-mix(in srgb, var(--pillar-accent) 12%, transparent) 100%
    );
    border: 1px solid color-mix(in srgb, var(--pillar-accent) 15%, transparent);
    border-radius: 12px;
    color: var(--pillar-accent);
  }

  .pillar-title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: var(--font-bold);
    line-height: 1.3;
    color: var(--color-text-primary);
    margin: 0;
  }

  .pillar-lead {
    font-family: var(--font-body);
    font-size: 0.95rem;
    line-height: 1.6;
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-6);
    border-bottom: 1px solid var(--color-black-6);
  }

  .pillar-card--dark .pillar-lead {
    border-bottom-color: var(--color-white-6);
  }

  /* Features */
  .pillar-features {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .feature-item {
    display: flex;
    gap: var(--space-3);
    opacity: 0;
    transform: translateY(8px);
    animation: featureFadeIn 0.4s ease forwards;
    animation-delay: var(--feature-delay);
  }

  @keyframes featureFadeIn {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .feature-marker {
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    background: color-mix(in srgb, var(--pillar-accent) 10%, transparent);
    border-radius: var(--radius-md);
    color: var(--pillar-accent);
    margin-top: 2px;
  }

  .feature-content {
    flex: 1;
    min-width: 0;
  }

  .feature-title {
    font-family: var(--font-display);
    font-size: 0.875rem;
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    margin: 0 0 4px 0;
    line-height: 1.3;
  }

  .pillar-card--light .feature-title {
    color: #222222;
  }

  .feature-desc {
    font-family: var(--font-body);
    font-size: 0.8rem;
    line-height: 1.5;
    color: var(--color-text-muted);
    margin: 0;
  }

  /* Decorative Elements */
  .pillar-accent-line {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg,
      var(--pillar-accent) 0%,
      color-mix(in srgb, var(--pillar-accent) 30%, transparent) 100%
    );
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .pillar-card:hover .pillar-accent-line {
    opacity: 1;
  }

  .pillar-corner {
    position: absolute;
    bottom: 0;
    right: 0;
    width: 100px;
    height: 100px;
    background: radial-gradient(
      circle at 100% 100%,
      color-mix(in srgb, var(--pillar-accent) 3%, transparent) 0%,
      transparent 70%
    );
    pointer-events: none;
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .pillar-card {
      padding: var(--space-6);
    }

    .pillar-header {
      padding-right: 60px;
    }

    .pillar-number {
      width: 44px;
      height: 44px;
      top: var(--space-5);
      right: var(--space-5);
    }

    .pillar-number span {
      font-size: 1.1rem;
    }
  }

  @media (max-width: 640px) {
    .pillar-icon {
      width: 40px;
      height: 40px;
    }

    .pillar-title {
      font-size: 1.1rem;
    }

    .pillar-lead {
      font-size: 0.9rem;
    }

    .feature-marker {
      width: 20px;
      height: 20px;
    }

    .feature-title {
      font-size: 0.8rem;
    }

    .feature-desc {
      font-size: 0.75rem;
    }
  }
</style>
