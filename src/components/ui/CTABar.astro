---
/**
 * CTABar - Persistent CTA bar above the footer
 *
 * A site-wide call-to-action bar that triggers the demo request overlay.
 * Can be included in layouts to appear on all pages.
 *
 * Props:
 * - hideBar: If true, only renders the overlay (for pages with custom CTAs)
 */
import DemoRequestOverlay from './DemoRequestOverlay.astro';

interface Props {
  headline?: string;
  subtext?: string;
  buttonLabel?: string;
  hideBar?: boolean;
}

const {
  headline = "Ready to See the Future of Network Intelligence?",
  subtext = "Join industry leaders already transforming their operations with DART AI",
  buttonLabel = "Get Your Free Demo",
  hideBar = false
} = Astro.props;
---

<!-- Demo Request Overlay -->
<DemoRequestOverlay />

{!hideBar && (
<div class="cta-bar">
  <div class="cta-bar__content">
    <div class="cta-bar__text">
      <span class="cta-bar__headline">{headline}</span>
      <span class="cta-bar__subtext">{subtext}</span>
    </div>
    <button type="button" class="cta-bar__button" id="cta-demo-trigger">
      {buttonLabel}
      <svg
        class="cta-bar__icon"
        width="14"
        height="14"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        aria-hidden="true"
      >
        <path d="M5 12h14M12 5l7 7-7 7"></path>
      </svg>
    </button>
  </div>
</div>
)}

<style>
  .cta-bar {
    position: relative;
    background: var(--color-bg-secondary);
    z-index: 100;
    padding: var(--space-5) 0;
  }

  .cta-bar__content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-max);
    margin: 0 auto;
    gap: var(--space-6);
    padding-left: var(--container-padding);
    padding-right: var(--container-padding);
  }

  @media (min-width: 1024px) {
    .cta-bar__content {
      padding-left: var(--container-padding-lg);
      padding-right: var(--container-padding-lg);
    }
  }

  .cta-bar__text {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .cta-bar__headline {
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: #ffffff;
    line-height: 1.2;
  }

  .cta-bar__subtext {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: rgba(255, 255, 255, 0.85);
    line-height: 1.4;
  }

  .cta-bar__button {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: 0.875rem 1.75rem;
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: #ffffff;
    background: var(--color-primary);
    border: none;
    border-radius: var(--radius-full);
    cursor: pointer;
    transition: all 0.3s ease;
    white-space: nowrap;
    box-shadow: 0 4px 16px rgba(234, 36, 43, 0.3);
  }

  .cta-bar__button:hover {
    background: var(--color-primary-hover);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(234, 36, 43, 0.4);
  }

  .cta-bar__icon {
    transition: transform 0.3s ease;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .cta-bar {
      padding: var(--space-4) 0;
    }

    .cta-bar__content {
      flex-direction: column;
      text-align: center;
      gap: var(--space-4);
    }

    .cta-bar__headline {
      font-size: var(--text-base);
    }

    .cta-bar__subtext {
      font-size: var(--text-xs);
    }

    .cta-bar__button {
      width: 100%;
      max-width: 280px;
    }
  }
</style>

<script>
  // Trigger demo overlay from CTA button and any data-demo-trigger elements
  function initCTATrigger() {
    // Handle the main CTA bar button
    const triggerBtn = document.getElementById('cta-demo-trigger');
    if (triggerBtn) {
      triggerBtn.addEventListener('click', () => {
        document.dispatchEvent(new CustomEvent('open-demo-overlay'));
      });
    }

    // Handle any element with data-demo-trigger attribute (for custom CTAs)
    const customTriggers = document.querySelectorAll('[data-demo-trigger]');
    customTriggers.forEach((trigger) => {
      trigger.addEventListener('click', (e) => {
        e.preventDefault();
        document.dispatchEvent(new CustomEvent('open-demo-overlay'));
      });
    });
  }

  // Initialize on DOM ready and Astro page transitions
  document.addEventListener('DOMContentLoaded', initCTATrigger);
  document.addEventListener('astro:page-load', initCTATrigger);
</script>
