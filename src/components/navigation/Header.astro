---
import { Image } from 'astro:assets';
import Container from '../ui/Container.astro';
import Button from '../ui/Button.astro';
import { mainNavigation } from '../../data/navigation';
import cirriesLogoDark from '../../assets/logos/cirries-logo-darkmode.svg';
import cirriesLogoLight from '../../assets/logos/cirries-logo-lightmode.svg';

interface Props {
  variant?: 'dark' | 'light';
}

const { variant = 'dark' } = Astro.props;
const logo = variant === 'light' ? cirriesLogoLight : cirriesLogoDark;

// Get current path for active state detection
const currentPath = Astro.url.pathname;

// Helper function to check if a nav item is active
function isActive(href: string | undefined): boolean {
  if (!href) return false;
  // Exact match for home
  if (href === '/') return currentPath === '/';
  // For other pages, check if current path starts with the href
  return currentPath === href || currentPath.startsWith(href + '/');
}

// Helper to check if any child link is active (for dropdowns/megamenus)
function hasActiveChild(item: typeof mainNavigation[0]): boolean {
  if (item.links) {
    return item.links.some(link => isActive(link.href));
  }
  if (item.columns) {
    return item.columns.some(col =>
      isActive(col.href) || col.links?.some(link => isActive(link.href))
    );
  }
  return false;
}
---

<header class:list={["header", { "header--light": variant === "light" }]} id="header" data-variant={variant}>
  <Container size="xl" class="header__container">
    <!-- Logo -->
    <a href="/" class="header__logo" aria-label="Cirries Home">
      <Image
        src={logo}
        alt="Cirries"
        width={120}
        height={32}
      />
    </a>

    <!-- Desktop Navigation -->
    <nav class="header__nav" aria-label="Main navigation">
      <ul class="header__nav-list">
        {mainNavigation.map((item) => {
          const itemIsActive = isActive(item.href) || hasActiveChild(item);
          return (
          <li class:list={["header__nav-item", { "is-active": itemIsActive }]} data-type={item.type}>
            {item.type === 'link' ? (
              <a
                href={item.href}
                class:list={["header__nav-link", { "is-active": itemIsActive }]}
                aria-current={itemIsActive ? "page" : undefined}
              >
                {item.label}
              </a>
            ) : (
              <button
                class:list={["header__nav-trigger", { "is-active": itemIsActive }]}
                aria-expanded="false"
                aria-haspopup="true"
              >
                {item.label}
                <svg
                  class="header__nav-chevron"
                  width="10"
                  height="10"
                  viewBox="0 0 10 10"
                  fill="none"
                  aria-hidden="true"
                >
                  <path
                    d="M2.5 4L5 6.5L7.5 4"
                    stroke="currentColor"
                    stroke-width="1.5"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </button>
            )}

            {/* Dropdown Menu */}
            {item.type === 'dropdown' && item.links && (
              <div class="header__dropdown">
                <div class="header__dropdown-inner">
                  {item.links.map((link) => (
                    <a
                      href={link.href}
                      class:list={["header__dropdown-link", { "is-active": isActive(link.href) }]}
                      aria-current={isActive(link.href) ? "page" : undefined}
                    >
                      <span class="header__dropdown-label">{link.label}</span>
                      {link.description && (
                        <span class="header__dropdown-desc">{link.description}</span>
                      )}
                    </a>
                  ))}
                </div>
              </div>
            )}

            {/* Mega Menu - Clean grid with subsections */}
            {item.type === 'megamenu' && item.columns && (
              <div class="header__megamenu">
                <div class="header__megamenu-inner">
                  <div class="header__megamenu-grid">
                    {item.columns.map((column) => {
                      const columnIsActive = isActive(column.href) || column.links?.some(link => isActive(link.href));
                      return (
                      <div class:list={["header__megamenu-column", { "is-active": columnIsActive }]}>
                        <div class="header__megamenu-header">
                          {column.href ? (
                            <a
                              href={column.href}
                              class:list={["header__megamenu-title", { "is-active": isActive(column.href) }]}
                            >
                              {column.title}
                              <svg width="12" height="12" viewBox="0 0 12 12" fill="none" aria-hidden="true">
                                <path d="M4.5 3L7.5 6L4.5 9" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                              </svg>
                            </a>
                          ) : (
                            <span class="header__megamenu-title">{column.title}</span>
                          )}
                        </div>

                        {/* Links */}
                        {column.links && (
                          <ul class="header__megamenu-links">
                            {column.links.map((link) => (
                              <li>
                                <a
                                  href={link.href}
                                  class:list={[
                                    'header__megamenu-link',
                                    { 'header__megamenu-link--featured': link.highlighted },
                                    { 'is-active': isActive(link.href) }
                                  ]}
                                  aria-current={isActive(link.href) ? "page" : undefined}
                                >
                                  {link.label}
                                  {link.highlighted && (
                                    <span class="header__megamenu-badge">New</span>
                                  )}
                                </a>
                              </li>
                            ))}
                          </ul>
                        )}
                      </div>
                    )})}
                  </div>
                </div>
              </div>
            )}
          </li>
        )})}
      </ul>
    </nav>

    <!-- Actions -->
    <div class="header__actions">
      <Button href="/contact" variant="primary" size="sm">
        Request A Demo
      </Button>
    </div>

    <!-- Mobile Menu Toggle -->
    <button
      class="header__mobile-toggle"
      aria-label="Toggle menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <span class="header__hamburger">
        <span></span>
        <span></span>
        <span></span>
      </span>
    </button>
  </Container>

  <!-- Mobile Menu -->
  <div class="header__mobile-menu" id="mobile-menu" aria-hidden="true">
    <nav class="header__mobile-nav">
      {mainNavigation.map((item) => {
        const itemIsActive = isActive(item.href) || hasActiveChild(item);
        return (
        <div class:list={["header__mobile-section", { "is-active": itemIsActive }]}>
          {item.type === 'link' ? (
            <a
              href={item.href}
              class:list={["header__mobile-link", { "is-active": itemIsActive }]}
              aria-current={itemIsActive ? "page" : undefined}
            >
              {item.label}
            </a>
          ) : (
            <>
              <button
                class:list={["header__mobile-accordion", { "is-active": itemIsActive }]}
                aria-expanded="false"
              >
                {item.label}
                <svg width="12" height="12" viewBox="0 0 12 12" fill="none" aria-hidden="true">
                  <path d="M3 4.5L6 7.5L9 4.5" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
              </button>
              <div class="header__mobile-dropdown">
                {item.type === 'dropdown' && item.links?.map((link) => (
                  <a
                    href={link.href}
                    class:list={["header__mobile-sublink", { "is-active": isActive(link.href) }]}
                    aria-current={isActive(link.href) ? "page" : undefined}
                  >
                    {link.label}
                  </a>
                ))}
                {item.type === 'megamenu' && item.columns?.map((column) => (
                  <div class="header__mobile-group">
                    {column.href ? (
                      <a
                        href={column.href}
                        class:list={["header__mobile-group-title", { "is-active": isActive(column.href) }]}
                      >
                        {column.title}
                      </a>
                    ) : (
                      <span class="header__mobile-group-title">{column.title}</span>
                    )}
                    {column.links?.map((link) => (
                      <a
                        href={link.href}
                        class:list={[
                          'header__mobile-sublink',
                          { 'header__mobile-sublink--featured': link.highlighted },
                          { 'is-active': isActive(link.href) }
                        ]}
                        aria-current={isActive(link.href) ? "page" : undefined}
                      >
                        {link.label}
                        {link.highlighted && <span class="header__mobile-badge">New</span>}
                      </a>
                    ))}
                  </div>
                ))}
              </div>
            </>
          )}
        </div>
      )})}
      <div class="header__mobile-cta">
        <Button href="/contact" variant="primary" fullWidth>
          Request A Demo
        </Button>
      </div>
    </nav>
  </div>
</header>

<script>
  // Header scroll behavior
  const header = document.getElementById('header');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 100) {
      header?.classList.add('header--scrolled');
    } else {
      header?.classList.remove('header--scrolled');
    }
  });

  // Desktop dropdown/megamenu hover
  const navItems = document.querySelectorAll('.header__nav-item[data-type="dropdown"], .header__nav-item[data-type="megamenu"]');

  // Calculate megamenu top position to align with dropdowns
  const updateMegamenuPosition = () => {
    const firstTrigger = document.querySelector('.header__nav-trigger');
    if (firstTrigger) {
      const rect = firstTrigger.getBoundingClientRect();
      const topPosition = rect.bottom;
      document.documentElement.style.setProperty('--megamenu-top', `${topPosition}px`);
    }
  };

  updateMegamenuPosition();
  window.addEventListener('resize', updateMegamenuPosition);

  navItems.forEach((item) => {
    const trigger = item.querySelector('.header__nav-trigger');
    const dropdown = item.querySelector('.header__dropdown, .header__megamenu');

    if (trigger && dropdown) {
      item.addEventListener('mouseenter', () => {
        updateMegamenuPosition(); // Update position on hover
        trigger.setAttribute('aria-expanded', 'true');
        dropdown.classList.add('is-open');
      });

      item.addEventListener('mouseleave', () => {
        trigger.setAttribute('aria-expanded', 'false');
        dropdown.classList.remove('is-open');
      });

      trigger.addEventListener('keydown', (e: KeyboardEvent) => {
        if (e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          const isExpanded = trigger.getAttribute('aria-expanded') === 'true';
          trigger.setAttribute('aria-expanded', String(!isExpanded));
          dropdown.classList.toggle('is-open');
        }
      });
    }
  });

  // Mobile menu toggle
  const mobileToggle = document.querySelector('.header__mobile-toggle');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileToggle?.addEventListener('click', () => {
    const isOpen = mobileToggle.getAttribute('aria-expanded') === 'true';
    mobileToggle.setAttribute('aria-expanded', String(!isOpen));
    mobileMenu?.setAttribute('aria-hidden', String(isOpen));
    mobileToggle.classList.toggle('is-open');
    mobileMenu?.classList.toggle('is-open');
    document.body.classList.toggle('menu-open');
  });

  // Mobile accordion
  const mobileAccordions = document.querySelectorAll('.header__mobile-accordion');

  mobileAccordions.forEach((accordion) => {
    accordion.addEventListener('click', () => {
      const isExpanded = accordion.getAttribute('aria-expanded') === 'true';
      accordion.setAttribute('aria-expanded', String(!isExpanded));
      accordion.classList.toggle('is-open');
      accordion.nextElementSibling?.classList.toggle('is-open');
    });
  });

</script>

<style>
  /* ==========================================================================
     HEADER - Refined Enterprise Navigation
     ========================================================================== */

  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: var(--z-header);
    height: 80px;
    background: transparent;
    transition:
