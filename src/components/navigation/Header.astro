    background: rgba(10, 10, 10, 0.95);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .header :global(.header__container) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    gap: var(--space-8);
  }

  /* --------------------------------
     Logo
     -------------------------------- */
  .header__logo {
    flex-shrink: 0;
    display: flex;
    align-items: center;
  }

  .header__logo img {
    height: 28px;
    width: auto;
  }

  /* --------------------------------
     Desktop Navigation
     -------------------------------- */
  .header__nav {
    display: none;
    flex: 1;
    justify-content: center;
  }

  @media (min-width: 1024px) {
    .header__nav {
      display: flex;
    }
  }

  .header__nav-list {
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }

  .header__nav-item {
    position: relative;
  }

  .header__nav-link,
  .header__nav-trigger {
    display: flex;
    align-items: center;
    gap: var(--space-1-5);
    padding: var(--space-2) var(--space-4);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-text-secondary);
    background: none;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition:
      color var(--duration-fast) var(--ease-out),
      background-color var(--duration-fast) var(--ease-out);
  }

  .header__nav-link:hover,
  .header__nav-trigger:hover,
  .header__nav-trigger[aria-expanded="true"],
  .header__nav-link.is-active,
  .header__nav-trigger.is-active {
    color: var(--color-text-primary);
    background-color: rgba(255, 255, 255, 0.05);
  }

  .header__nav-chevron {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .header__nav-trigger[aria-expanded="true"] .header__nav-chevron {
    transform: rotate(180deg);
  }

  /* --------------------------------
     Dropdown Menu
     -------------------------------- */
  .header__dropdown {
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    padding-top: var(--space-2);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      visibility var(--duration-fast);
  }

  .header__dropdown.is-open {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .header__dropdown-inner {
    min-width: 240px;
    padding: var(--space-2);
    background: #141414;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-lg);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.03) inset;
  }

  .header__dropdown-link {
    display: block;
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-md);
    transition: background-color var(--duration-fast) var(--ease-out);
  }

  .header__dropdown-link:hover,
  .header__dropdown-link.is-active {
    background-color: rgba(255, 255, 255, 0.05);
  }

  .header__dropdown-label {
    display: block;
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-text-primary);
  }

  .header__dropdown-desc {
    display: block;
    margin-top: var(--space-0-5);
    font-size: var(--text-xs);
    color: var(--color-text-muted);
  }

  /* --------------------------------
     Mega Menu - Clean Grid Layout
     Same vertical position as dropdown, centered on viewport
     -------------------------------- */
  .header__megamenu {
    position: fixed;
    top: var(--megamenu-top, 60px);
    left: 50%;
    transform: translateX(-50%) translateY(8px);
    width: calc(100vw - 2rem);
    max-width: 1200px;
    padding-top: var(--space-2);
    opacity: 0;
    visibility: hidden;
    transition:
      opacity var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out),
      visibility var(--duration-fast);
  }

  .header__megamenu.is-open {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
  }

  .header__megamenu-inner {
    width: 100%;
    padding: var(--space-8) var(--space-10);
    background: #141414;
    border: 1px solid rgba(255, 255, 255, 0.08);
    border-radius: var(--radius-lg);
    box-shadow:
      0 20px 40px rgba(0, 0, 0, 0.5),
      0 0 0 1px rgba(255, 255, 255, 0.03) inset;
  }

  .header__megamenu-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--space-8);
    align-items: start;
  }

  .header__megamenu-column {
    min-width: 0;
  }

  .header__megamenu-header {
    margin-bottom: var(--space-4);
    padding-bottom: var(--space-3);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

