    display: flex;
    align-items: center;
    gap: var(--space-1);
    font-family: var(--font-display);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-text-primary);
    transition: color var(--duration-fast) var(--ease-out);
  }

  a.header__megamenu-title:hover {
    opacity: 0.8;
  }

  a.header__megamenu-title svg {
    opacity: 0;
    transform: translateX(-4px);
    transition:
      opacity var(--duration-fast) var(--ease-out),
      transform var(--duration-fast) var(--ease-out);
  }

  a.header__megamenu-title:hover svg {
    opacity: 1;
    transform: translateX(0);
  }

  .header__megamenu-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-0-5);
  }

  .header__megamenu-link {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) 0;
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .header__megamenu-link:hover,
  .header__megamenu-link.is-active {
    color: var(--color-text-primary);
  }

  /* Featured/Highlighted link */
  .header__megamenu-link--featured {
    color: var(--color-text-primary);
    font-weight: var(--font-medium);
  }

  .header__megamenu-badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-0-5) var(--space-2);
    font-size: 9px;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: white;
    background: var(--color-primary);
    border-radius: var(--radius-sm);
  }

  /* --------------------------------
     Actions
     -------------------------------- */
  .header__actions {
    display: none;
    flex-shrink: 0;
  }

  @media (min-width: 1024px) {
    .header__actions {
      display: flex;
    }
  }

  /* --------------------------------
     Mobile Toggle
     -------------------------------- */
  .header__mobile-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: none;
    border: none;
    cursor: pointer;
  }

  @media (min-width: 1024px) {
    .header__mobile-toggle {
      display: none;
    }
  }

  .header__hamburger {
    position: relative;
    width: 24px;
    height: 16px;
  }

  .header__hamburger span {
    position: absolute;
    left: 0;
    width: 100%;
    height: 2px;
    background: var(--color-text-primary);
    border-radius: var(--radius-full);
    transition:
      transform var(--duration-normal) var(--ease-out),
      opacity var(--duration-fast) var(--ease-out);
  }

  .header__hamburger span:nth-child(1) { top: 0; }
  .header__hamburger span:nth-child(2) { top: 50%; transform: translateY(-50%); }
  .header__hamburger span:nth-child(3) { bottom: 0; }

  .header__mobile-toggle.is-open .header__hamburger span:nth-child(1) {
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
  }

  .header__mobile-toggle.is-open .header__hamburger span:nth-child(2) {
    opacity: 0;
  }

  .header__mobile-toggle.is-open .header__hamburger span:nth-child(3) {
    bottom: 50%;
    transform: translateY(50%) rotate(-45deg);
  }

  /* --------------------------------
     Mobile Menu
     -------------------------------- */
  .header__mobile-menu {
    position: fixed;
    top: 80px;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--color-bg-primary);
    overflow-y: auto;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition:
      opacity var(--duration-normal) var(--ease-out),
      transform var(--duration-normal) var(--ease-out),
      visibility var(--duration-normal);
  }

  .header__mobile-menu.is-open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .header__mobile-nav {
    padding: var(--space-6);
  }

  .header__mobile-section {
    border-bottom: 1px solid var(--color-border-subtle);
  }

  .header__mobile-link,
  .header__mobile-accordion {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: var(--space-4) 0;
    font-family: var(--font-display);
    font-size: var(--text-lg);
    font-weight: var(--font-medium);
    color: var(--color-text-primary);
    background: none;
    border: none;
    cursor: pointer;
    text-align: left;
  }

  .header__mobile-accordion svg {
    transition: transform var(--duration-fast) var(--ease-out);
  }

  .header__mobile-accordion.is-open svg {
    transform: rotate(180deg);
  }

  .header__mobile-dropdown {
    display: none;
    padding-bottom: var(--space-4);
  }

  .header__mobile-dropdown.is-open {
    display: block;
  }

  .header__mobile-group {
    margin-bottom: var(--space-4);
  }

  .header__mobile-group-title {
    display: block;
    padding: var(--space-2) 0;
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--color-text-primary);
  }

  a.header__mobile-group-title:hover {
    opacity: 0.8;
  }

  .header__mobile-sublink {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    transition: color var(--duration-fast) var(--ease-out);
  }

  .header__mobile-sublink:hover,
  .header__mobile-sublink.is-active {
    color: var(--color-text-primary);
  }

  .header__mobile-sublink--featured {
    color: var(--color-text-primary);
    font-weight: var(--font-medium);
  }

  .header__mobile-badge {
    display: inline-flex;
    align-items: center;
    padding: var(--space-0-5) var(--space-1-5);
    font-size: 9px;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    color: white;
    background: var(--color-primary);
    border-radius: var(--radius-sm);
  }

  .header__mobile-cta {
    margin-top: var(--space-6);
    padding-top: var(--space-6);
    border-top: 1px solid var(--color-border-subtle);
  }

  /* Body lock when menu is open */
