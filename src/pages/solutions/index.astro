---
/**
 * Solutions - Main Index/Hub Page
 *
 * Central solutions landing page featuring:
 * - Hero with DART platform positioning
 * - Overview of the complete solution ecosystem
 * - Navigation cards to 4 solution categories
 * - Unified platform messaging
 *
 * Solution Categories:
 * - Intelligent Network Observability (AI-powered)
 * - Connectivity & Performance (Cross-domain)
 * - Network Detection & Response (Security)
 * - SLA Assurance & Reporting (Compliance)
 */
import SubpageLayout from "../../layouts/SubpageLayout.astro";
import SubpageHero from "../../components/sections/SubpageHero.astro";
import Container from "../../components/ui/Container.astro";

// Solution categories data
const solutionCategories = [
  {
    id: "intelligent-network-observability",
    title: "Intelligent Network Observability",
    subtitle: "AI-Powered Intelligence",
    description: "Transform network operations with unified AI intelligence. DART AI, Machine Learning, Gen AI, and Agentic AI work together to deliver unprecedented visibility and automated remediation.",
    href: "/solutions/intelligent-network-observability",
    faIcon: "fa-solid fa-brain",
    features: ["DART AI Engine", "Gen AI", "ML Analytics", "Agentic AI"],
    color: "#EA242B",
  },
  {
    id: "connectivity-performance",
    title: "Connectivity & Performance",
    subtitle: "Universal Visibility",
    description: "End-to-end observability across mobile, cloud, IoT, and enterprise networks. Monitor every connection point from core to edge with unified performance intelligence.",
    href: "/solutions/connectivity-performance",
    faIcon: "fa-solid fa-network-wired",
    features: ["Mobile & 5G", "Cloud Monitoring", "IoT", "Private Networks"],
    color: "#EA242B",
  },
  {
    id: "network-detection-response",
    title: "Network Detection & Response",
    subtitle: "Proactive Security",
    description: "Detect anomalies before they become incidents. Advanced sensors, behavioral analytics, and automated response keep your network secure and compliant.",
    href: "/solutions/network-detection-response",
    faIcon: "fa-solid fa-shield-halved",
    features: ["Sensors", "Anomaly Detection", "Observability"],
    color: "#EA242B",
  },
  {
    id: "sla-assurance-reporting",
    title: "SLA Assurance & Reporting",
    subtitle: "Performance Guaranteed",
    description: "Ensure service level commitments with continuous monitoring and automated reporting. Real-time dashboards and historical analytics for complete accountability.",
    href: "/solutions/sla-assurance-reporting",
    faIcon: "fa-solid fa-chart-line",
    features: ["SLA Monitoring", "Automated Reports", "Compliance"],
    color: "#EA242B",
  },
];

// Platform capabilities
const capabilities = [
  { icon: "fa-solid fa-eye", label: "360° Visibility", desc: "Every network layer" },
  { icon: "fa-solid fa-bolt", label: "Real-Time", desc: "Sub-second insights" },
  { icon: "fa-solid fa-wand-magic-sparkles", label: "AI-Powered", desc: "Predictive intelligence" },
  { icon: "fa-solid fa-arrows-rotate", label: "Automated", desc: "Self-healing networks" },
];
---

<SubpageLayout
  title="Solutions - DART Network Intelligence Platform"
  description="Discover Cirries' complete network observability platform. AI-powered intelligence, universal connectivity monitoring, security detection, and SLA assurance in one unified solution."
>
  <Fragment slot="hero">
    <SubpageHero
      title="The Complete Network <span>Intelligence Platform</span>"
      subtitle="One unified platform for network observability, performance optimization, security detection, and service assurance—powered by AI."
      align="left"
    />
  </Fragment>

  <!-- Meet Solutions Section -->
  <section class="meet-solutions" data-theme="light">
    <div class="meet-solutions__bg">
      <div class="meet-solutions__gradient"></div>
      <div class="meet-solutions__grid"></div>
      <div class="meet-solutions__radial"></div>
    </div>

    <Container size="xl">
      <div class="meet-layout">
        <!-- Left: Content -->
        <div class="meet-content">
          <span class="meet-eyebrow">DART Platform</span>
          <h2 class="meet-title">
            Network Intelligence,
            <span>Unified.</span>
          </h2>
          <p class="meet-text">
            Traditional tools create silos. Cirries creates <strong>clarity</strong>. Our DART platform unifies network observability, AI-powered analytics, security detection, and service assurance into a single intelligence layer.
          </p>
          <p class="meet-text">
            Whether you're optimizing 5G performance, securing IoT deployments, or ensuring SLA compliance, DART delivers the <strong>insights that matter—before problems impact your business</strong>.
          </p>

          <!-- Capability Pills -->
          <div class="capabilities">
            {capabilities.map((cap) => (
              <div class="capability">
                <div class="capability__icon">
                  <i class={cap.icon}></i>
                </div>
                <div class="capability__text">
                  <span class="capability__label">{cap.label}</span>
                  <span class="capability__desc">{cap.desc}</span>
                </div>
              </div>
            ))}
          </div>

        </div>

        <!-- Right: Platform Visualization -->
        <div class="platform-visual">
          <div class="platform-hub">
            <!-- Orbital rings -->
            <div class="orbit orbit--1"></div>
            <div class="orbit orbit--2"></div>
            <div class="orbit orbit--3"></div>

            <!-- Central DART hub -->
            <div class="hub-core">
              <div class="hub-glow"></div>
              <div class="hub-inner">
                <span class="hub-label">DART</span>
                <span class="hub-sublabel">Platform</span>
              </div>
              <div class="hub-pulse"></div>
            </div>

            <!-- Solution nodes -->
            {solutionCategories.map((sol, i) => (
              <a
                href={sol.href}
                class={`solution-node solution-node--${i + 1}`}
                style={`--node-delay: ${i * 0.15}s; --node-color: ${sol.color}`}
                data-title={sol.title}
              >
                <div class="node-icon">
                  <i class={sol.faIcon}></i>
                </div>
                <span class="node-title">{sol.subtitle}</span>
              </a>
            ))}

            <!-- Connection lines SVG -->
            <svg class="connections-svg" viewBox="0 0 400 400">
              <defs>
                <linearGradient id="line-gradient" x1="0%" y1="0%" x2="100%" y2="0%">
                  <stop offset="0%" style="stop-color: rgba(234, 36, 43, 0.1)" />
                  <stop offset="50%" style="stop-color: rgba(234, 36, 43, 0.3)" />
                  <stop offset="100%" style="stop-color: rgba(234, 36, 43, 0.1)" />
                </linearGradient>
              </defs>
              <g class="connection-lines">
                <line x1="200" y1="200" x2="200" y2="60" class="conn-line" style="--line-delay: 0s" />
                <line x1="200" y1="200" x2="340" y2="200" class="conn-line" style="--line-delay: 0.15s" />
                <line x1="200" y1="200" x2="200" y2="340" class="conn-line" style="--line-delay: 0.3s" />
                <line x1="200" y1="200" x2="60" y2="200" class="conn-line" style="--line-delay: 0.45s" />
              </g>
            </svg>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Solutions Navigation Grid -->
  <section class="solutions-nav" id="solutions">
    <Container size="xl">
      <div class="nav-header">
        <span class="nav-label-line"></span>
        <span class="nav-label">Explore Our Solutions</span>
        <span class="nav-label-line"></span>
      </div>

      <div class="solutions-grid">
        {solutionCategories.map((solution, index) => (
          <a
            href={solution.href}
            class="solution-card"
            style={`--card-accent: ${solution.color}; --card-index: ${index}`}
          >
            <!-- Top accent -->
            <div class="card-accent"></div>

            <!-- Icon -->
            <div class="card-icon">
              <i class={`${solution.faIcon} card-fa-icon`}></i>
              <div class="icon-ring"></div>
            </div>

            <!-- Content -->
            <div class="card-body">
              <span class="card-subtitle">{solution.subtitle}</span>
              <h3 class="card-title">{solution.title}</h3>
              <p class="card-description">{solution.description}</p>

              <!-- Features -->
              <div class="card-features">
                {solution.features.map((feature) => (
                  <span class="feature-tag">{feature}</span>
                ))}
              </div>
            </div>

            <!-- Arrow -->
            <div class="card-arrow">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
            </div>

            <!-- Hover gradient -->
            <div class="card-hover-gradient"></div>
          </a>
        ))}
      </div>
    </Container>
  </section>

  <!-- Why DART Section -->
  <section class="why-dart" data-theme="dark">
    <Container size="xl">
      <div class="why-dart__content">
        <span class="why-dart__eyebrow">Why Choose DART</span>
        <h2 class="why-dart__title">One Platform. Complete Visibility.</h2>
        <p class="why-dart__text">
          Stop juggling disconnected tools. DART consolidates network observability, AI analytics, security monitoring, and SLA reporting into a unified intelligence layer that grows with your network.
        </p>

        <div class="why-dart__stats">
          <div class="stat">
            <span class="stat__value">10x</span>
            <span class="stat__label">Faster Detection</span>
          </div>
          <div class="stat">
            <span class="stat__value">85%</span>
            <span class="stat__label">Less Manual Work</span>
          </div>
          <div class="stat">
            <span class="stat__value">99.9%</span>
            <span class="stat__label">Network Visibility</span>
          </div>
          <div class="stat">
            <span class="stat__value">24/7</span>
            <span class="stat__label">AI Monitoring</span>
          </div>
        </div>

      </div>
    </Container>
  </section>
</SubpageLayout>

<style>
  /* ============================================
     MEET SOLUTIONS SECTION
     ============================================ */
  .meet-solutions {
    position: relative;
    padding: var(--space-20) 0;
    background: #ffffff;
    overflow: hidden;
  }

  .meet-solutions__bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .meet-solutions__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 90% 70% at 70% 35%, rgba(234, 36, 43, 0.04) 0%, transparent 50%),
      linear-gradient(180deg, #ffffff 0%, #fafafa 50%, #f5f5f7 100%);
  }

  .meet-solutions__grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.015) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 0, 0, 0.015) 1px, transparent 1px);
    background-size: 50px 50px;
    mask-image: radial-gradient(ellipse 80% 70% at 60% 50%, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 80% 70% at 60% 50%, black 20%, transparent 70%);
  }

  .meet-solutions__radial {
    position: absolute;
    top: 50%;
    right: 10%;
    transform: translate(0, -50%);
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, rgba(234, 36, 43, 0.03) 0%, transparent 60%);
    pointer-events: none;
  }

  /* Layout */
  .meet-layout {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-12);
    align-items: center;
  }

  .meet-content {
    max-width: 540px;
  }

  .meet-eyebrow {
    display: inline-block;
    margin-bottom: var(--space-4);
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-primary);
  }

  .meet-title {
    font-family: var(--font-display);
    font-size: clamp(1.75rem, 3.5vw, 2.75rem);
    font-weight: var(--font-bold);
    line-height: 1.15;
    letter-spacing: -0.02em;
    color: #111111;
    margin-bottom: var(--space-6);
  }

  .meet-title span {
    display: block;
    color: var(--color-primary);
  }

  .meet-text {
    font-family: var(--font-body);
    font-size: var(--text-base);
    line-height: 1.7;
    color: #555555;
    margin-bottom: var(--space-4);
  }

  .meet-text strong {
    color: #111111;
    font-weight: var(--font-semibold);
  }

  /* Capabilities */
  .capabilities {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-4);
    margin: var(--space-8) 0;
  }

  .capability {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    padding: var(--space-3) var(--space-4);
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 10px;
    transition: all 0.2s ease;
  }

  .capability:hover {
    border-color: rgba(234, 36, 43, 0.2);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.04);
  }

  .capability__icon {
    width: 36px;
    height: 36px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(234, 36, 43, 0.08);
    border-radius: 8px;
    color: var(--color-primary);
    font-size: 0.9rem;
  }

  .capability__text {
    display: flex;
    flex-direction: column;
  }

  .capability__label {
    font-family: var(--font-display);
    font-size: 0.85rem;
    font-weight: var(--font-semibold);
    color: #111111;
  }

  .capability__desc {
    font-family: var(--font-body);
    font-size: 0.7rem;
    color: #888888;
  }

  .meet-actions {
    display: flex;
    gap: var(--space-4);
    margin-top: var(--space-8);
  }

  /* Platform Visualization */
  .platform-visual {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .platform-hub {
    position: relative;
    width: 100%;
    max-width: 400px;
    aspect-ratio: 1;
  }

  /* Orbits */
  .orbit {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border: 1px dashed rgba(234, 36, 43, 0.1);
    border-radius: 50%;
    pointer-events: none;
  }

  .orbit--1 { width: 50%; height: 50%; animation: orbitSpin 30s linear infinite; }
  .orbit--2 { width: 70%; height: 70%; animation: orbitSpin 45s linear infinite reverse; }
  .orbit--3 { width: 90%; height: 90%; animation: orbitSpin 60s linear infinite; border-style: dotted; }

  @keyframes orbitSpin {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to { transform: translate(-50%, -50%) rotate(360deg); }
  }

  /* Central Hub */
  .hub-core {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    z-index: 10;
  }

  .hub-glow {
    position: absolute;
    inset: -30px;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(234, 36, 43, 0.15) 0%, transparent 70%);
    animation: hubGlow 3s ease-in-out infinite;
  }

  @keyframes hubGlow {
    0%, 100% { transform: scale(1); opacity: 0.6; }
    50% { transform: scale(1.1); opacity: 1; }
  }

  .hub-inner {
    position: absolute;
    inset: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
    border: 2px solid rgba(234, 36, 43, 0.2);
    border-radius: 50%;
    box-shadow:
      0 16px 48px rgba(0, 0, 0, 0.1),
      0 0 0 1px rgba(255, 255, 255, 0.9) inset;
  }

  .hub-label {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: var(--font-bold);
    color: var(--color-primary);
    letter-spacing: -0.02em;
  }

  .hub-sublabel {
    font-family: var(--font-mono);
    font-size: 0.55rem;
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #888888;
  }

  .hub-pulse {
    position: absolute;
    inset: -10px;
    border: 2px solid rgba(234, 36, 43, 0.3);
    border-radius: 50%;
    animation: hubPulse 2s ease-out infinite;
  }

  @keyframes hubPulse {
    0% { transform: scale(0.9); opacity: 0.8; }
    100% { transform: scale(1.3); opacity: 0; }
  }

  /* Solution Nodes */
  .solution-node {
    position: absolute;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    transform: translate(-50%, -50%);
    opacity: 0;
    animation: nodeAppear 0.5s ease forwards;
    animation-delay: var(--node-delay);
    z-index: 5;
    transition: transform 0.3s ease;
  }

  .solution-node:hover {
    transform: translate(-50%, -50%) scale(1.1);
  }

  .solution-node--1 { top: 15%; left: 50%; }
  .solution-node--2 { top: 50%; left: 85%; }
  .solution-node--3 { top: 85%; left: 50%; }
  .solution-node--4 { top: 50%; left: 15%; }

  @keyframes nodeAppear {
    from { opacity: 0; transform: translate(-50%, -50%) scale(0.5); }
    to { opacity: 1; transform: translate(-50%, -50%) scale(1); }
  }

  .node-icon {
    width: 56px;
    height: 56px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #ffffff;
    border: 2px solid rgba(0, 0, 0, 0.06);
    border-radius: 16px;
    font-size: 1.3rem;
    color: var(--color-primary);
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .solution-node:hover .node-icon {
    border-color: var(--color-primary);
    box-shadow: 0 8px 24px rgba(234, 36, 43, 0.2);
  }

  .node-title {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: #555555;
    white-space: nowrap;
    transition: color 0.3s ease;
  }

  .solution-node:hover .node-title {
    color: var(--color-primary);
  }

  /* Connection Lines SVG */
  .connections-svg {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .conn-line {
    stroke: url(#line-gradient);
    stroke-width: 2;
    stroke-dasharray: 8 4;
    animation: lineFlow 3s linear infinite;
    animation-delay: var(--line-delay);
  }

  @keyframes lineFlow {
    to { stroke-dashoffset: -48; }
  }

  /* ============================================
     SOLUTIONS NAVIGATION GRID
     ============================================ */
  .solutions-nav {
    position: relative;
    padding: var(--space-16) 0 var(--space-20);
    background: linear-gradient(180deg, #f8f9fa 0%, #ffffff 100%);
    border-top: 1px solid rgba(0, 0, 0, 0.04);
  }

  .nav-header {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-4);
    margin-bottom: var(--space-10);
  }

  .nav-label-line {
    flex: 1;
    max-width: 150px;
    height: 1px;
    background: linear-gradient(90deg, transparent, rgba(0, 0, 0, 0.1), transparent);
  }

  .nav-label {
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: #888888;
  }

  .solutions-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--space-6);
  }

  /* Solution Card */
  .solution-card {
    position: relative;
    display: flex;
    flex-direction: column;
    padding: var(--space-8);
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 20px;
    text-decoration: none;
    overflow: hidden;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.03);
  }

  .solution-card:hover {
    transform: translateY(-8px);
    border-color: rgba(234, 36, 43, 0.2);
    box-shadow:
      0 20px 50px rgba(0, 0, 0, 0.1),
      0 30px 80px rgba(234, 36, 43, 0.08);
  }

  .card-accent {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--card-accent);
    transform: scaleX(0);
    transform-origin: left;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .solution-card:hover .card-accent {
    transform: scaleX(1);
  }

  .card-icon {
    position: relative;
    width: 64px;
    height: 64px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(234, 36, 43, 0.06);
    border: 1px solid rgba(234, 36, 43, 0.1);
    border-radius: 18px;
    margin-bottom: var(--space-5);
    transition: all 0.35s ease;
  }

  .solution-card:hover .card-icon {
    background: var(--color-primary);
    border-color: var(--color-primary);
    transform: scale(1.05);
    box-shadow: 0 8px 24px rgba(234, 36, 43, 0.3);
  }

  .card-fa-icon {
    font-size: 1.6rem;
    color: var(--color-primary);
    transition: color 0.3s ease;
  }

  .solution-card:hover .card-fa-icon {
    color: #ffffff;
  }

  .icon-ring {
    position: absolute;
    inset: -8px;
    border: 2px solid var(--color-primary);
    border-radius: 22px;
    opacity: 0;
    animation: ringPulse 2.5s ease-out infinite;
  }

  @keyframes ringPulse {
    0% { transform: scale(0.9); opacity: 0.4; }
    100% { transform: scale(1.2); opacity: 0; }
  }

  .card-body {
    flex: 1;
  }

  .card-subtitle {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }

  .card-title {
    font-family: var(--font-display);
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: #111111;
    margin-bottom: var(--space-3);
    line-height: 1.3;
    transition: color 0.3s ease;
  }

  .solution-card:hover .card-title {
    color: var(--color-primary);
  }

  .card-description {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    line-height: 1.6;
    color: #666666;
    margin-bottom: var(--space-5);
  }

  .card-features {
    display: flex;
    flex-wrap: wrap;
    gap: 6px;
  }

  .feature-tag {
    display: inline-block;
    padding: 4px 10px;
    font-family: var(--font-mono);
    font-size: 0.6rem;
    font-weight: var(--font-medium);
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: #777777;
    background: rgba(0, 0, 0, 0.03);
    border: 1px solid rgba(0, 0, 0, 0.06);
    border-radius: 6px;
    transition: all 0.3s ease;
  }

