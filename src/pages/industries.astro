<BaseLayout title={pageTitle} description={pageDescription}>
  <Header variant="dark" />

  <main id="main-content">
    <!-- Hero Section -->
    <IndustriesHero />

    <!-- Industry Sections -->
    <div class="industries-content" data-theme="light">
      {industries.map((industry, index) => (
        <IndustrySection
          id={industry.id}
          industry={industry.industry}
          tagline={industry.tagline}
          intro={industry.intro}
          content={industry.content}
          benefits={industry.benefits}
          layout={industry.layout as "left" | "right"}
          imageId={industry.imageId}
          imageAlt={industry.imageAlt}
          isLast={index === industries.length - 1}
        />
      ))}
    </div>

    <!-- CTA Section -->
    <IndustriesCTA />
  </main>

  <CTABar hideBar />
  <Footer />
</BaseLayout>

<style>
  .industries-content {
    position: relative;
    background: #ffffff;
  }

  /* Smooth scroll behavior */
  :global(html) {
    scroll-behavior: smooth;
  }
</style>

<script>
  // Intersection Observer for scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const sections = document.querySelectorAll('[data-industry]');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      {
        threshold: 0.15,
        rootMargin: '-50px 0px'
      }
    );

    sections.forEach((section) => observer.observe(section));
  });

  // Update active pill on scroll
  document.addEventListener('DOMContentLoaded', () => {
    const pills = document.querySelectorAll('.industry-pill');
    const sections = document.querySelectorAll('[data-industry]');

    const updateActivePill = () => {
      let currentSection = '';

      sections.forEach((section) => {
        const rect = section.getBoundingClientRect();
        if (rect.top <= window.innerHeight / 2 && rect.bottom >= window.innerHeight / 2) {
          currentSection = section.getAttribute('data-industry') || '';
        }
      });

      pills.forEach((pill) => {
        const href = pill.getAttribute('href');
        if (href === `#${currentSection}`) {
          pill.classList.add('is-active');
        } else {
          pill.classList.remove('is-active');
        }
      });
    };

    window.addEventListener('scroll', updateActivePill, { passive: true });
    updateActivePill();
  });
</script>

<style is:global>
  /* Active pill state */
  .industry-pill.is-active {
    background: rgba(234, 36, 43, 0.15);
    border-color: rgba(234, 36, 43, 0.4);
    color: #ffffff;
  }

  /* Section visibility animation */
  [data-industry] {
    opacity: 0;
    transform: translateY(30px);
    transition: opacity 0.7s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.7s cubic-bezier(0.4, 0, 0.2, 1);
  }

  [data-industry].is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>
