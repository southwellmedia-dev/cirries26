              <p class="category-description">{resources.branding.description}</p>
            </div>
          </div>
          <div class="resources-grid resources-grid--assets">
            {resources.branding.items.map((item, i) => (
              <a
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
