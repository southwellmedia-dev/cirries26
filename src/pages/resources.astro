---

<SubpageLayout title={pageTitle} description={pageDescription}>
  <Fragment slot="hero">
    <SubpageHero
      title="Resources & <span>Downloads</span>"
      subtitle="Access technical documentation, solution briefs, and branding assets for DART AI and Cirries network intelligence solutions."
      align="left"
    />
  </Fragment>

  <!-- Resources Content Section -->
  <section class="resources-section">
    <!-- Subtle grid background -->
    <div class="resources-bg">
      <div class="resources-bg__gradient"></div>
      <div class="resources-bg__grid"></div>
    </div>

    <Container size="xl">
      <div class="resources-layout">
        <!-- Data Sheets & Use Cases -->
        <div class="resource-category" id="data-sheets">
          <div class="category-header">
            <div class="category-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={resources.dataSheets.icon} />
              </svg>
            </div>
            <div class="category-info">
              <h2 class="category-title">{resources.dataSheets.title}</h2>
              <p class="category-description">{resources.dataSheets.description}</p>
            </div>
          </div>
          <div class="resources-grid">
            {resources.dataSheets.items.map((item, i) => (
              <a
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
                class="resource-card"
                style={`--card-delay: ${i * 0.05}s`}
              >
                <div class="resource-card__inner">
                  <div class="resource-card-header">
                    <span class="resource-badge">{item.type}</span>
                    <div class="download-indicator">
                      <svg class="download-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                      </svg>
                      <span class="download-text">PDF</span>
                    </div>
                  </div>
                  <h3 class="resource-title">{item.title}</h3>
                  <p class="resource-description">{item.description}</p>
                  <div class="resource-card__shine"></div>
                </div>
              </a>
            ))}
          </div>
        </div>

        <!-- Solution Briefs -->
        <div class="resource-category" id="solution-briefs">
          <div class="category-header">
            <div class="category-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={resources.solutionBriefs.icon} />
              </svg>
            </div>
            <div class="category-info">
              <h2 class="category-title">{resources.solutionBriefs.title}</h2>
              <p class="category-description">{resources.solutionBriefs.description}</p>
            </div>
          </div>
          <div class="resources-grid">
            {resources.solutionBriefs.items.map((item, i) => (
              <a
                href={item.url}
                target="_blank"
                rel="noopener noreferrer"
                class="resource-card"
                style={`--card-delay: ${i * 0.05}s`}
              >
                <div class="resource-card__inner">
                  <div class="resource-card-header">
                    <span class="resource-badge">{item.type}</span>
                    <div class="download-indicator">
                      <svg class="download-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
