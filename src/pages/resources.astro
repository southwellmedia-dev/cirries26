<style>
  /* ============================================
     RESOURCES SECTION
     ============================================ */
  .resources-section {
    position: relative;
    padding: var(--space-20) 0 var(--space-24);
    background: #ffffff;
    overflow: hidden;
  }

  /* Subtle grid background from bottom-right */
  .resources-bg {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .resources-bg__gradient {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(
        ellipse 80% 60% at 80% 80%,
        rgba(245, 245, 245, 0.8) 0%,
        transparent 50%
      );
  }

  .resources-bg__grid {
    position: absolute;
    inset: 0;
    background-image:
      linear-gradient(rgba(0, 0, 0, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(0, 0, 0, 0.03) 1px, transparent 1px);
    background-size: 60px 60px;
    mask-image: radial-gradient(ellipse 90% 80% at 70% 50%, black 20%, transparent 70%);
    -webkit-mask-image: radial-gradient(ellipse 90% 80% at 70% 50%, black 20%, transparent 70%);
  }

  .resources-layout {
    position: relative;
    z-index: 1;
  }

  /* ============================================
     CATEGORY SECTIONS
     ============================================ */
  .resource-category {
    margin-bottom: var(--space-16);
  }

  .resource-category:last-child {
    margin-bottom: 0;
  }

  .category-header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-5);
    margin-bottom: var(--space-8);
    padding-bottom: var(--space-6);
    border-bottom: 1px solid rgba(0, 0, 0, 0.06);
  }

  .category-icon {
    flex-shrink: 0;
    width: 52px;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(234, 36, 43, 0.08);
    border: 1px solid rgba(234, 36, 43, 0.12);
    border-radius: 12px;
    color: var(--color-primary, #EA242B);
    transition: all 0.3s ease;
  }

  .resource-category:hover .category-icon {
    background: rgba(234, 36, 43, 0.12);
    transform: scale(1.02);
  }

  .category-icon svg {
    width: 24px;
    height: 24px;
  }

  .category-info {
    flex: 1;
  }

  .category-title {
    font-family: var(--font-display);
    font-size: clamp(1.5rem, 3vw, 1.75rem);
    font-weight: var(--font-bold);
    color: #0a0a0a;
    letter-spacing: -0.01em;
    margin-bottom: var(--space-2);
  }

  .category-description {
    font-family: var(--font-body);
    font-size: var(--text-base);
    color: #666666;
    line-height: 1.5;
  }

  /* ============================================
     RESOURCES GRID
     ============================================ */
  .resources-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-5);
  }

  .resources-grid--assets {
    grid-template-columns: repeat(4, 1fr);
  }

  /* ============================================
     RESOURCE CARDS
     ============================================ */
  .resource-card {
    position: relative;
    display: block;
    text-decoration: none;
    border-radius: 12px;
    animation: cardFadeIn 0.5s ease both;
    animation-delay: var(--card-delay, 0s);
  }

  @keyframes cardFadeIn {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .resource-card__inner {
    position: relative;
    height: 100%;
    padding: var(--space-5);
    background: #ffffff;
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .resource-card:hover .resource-card__inner {
    border-color: rgba(234, 36, 43, 0.25);
    box-shadow:
      0 8px 24px rgba(0, 0, 0, 0.06),
      0 0 0 1px rgba(234, 36, 43, 0.1);
    transform: translateY(-3px);
  }

  .resource-card__shine {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 100%;
    background: linear-gradient(
      135deg,
      rgba(255, 255, 255, 0) 0%,
      rgba(255, 255, 255, 0.4) 50%,
      rgba(255, 255, 255, 0) 100%
    );
    transform: translateX(-100%);
    transition: transform 0.6s ease;
    pointer-events: none;
  }

  .resource-card:hover .resource-card__shine {
    transform: translateX(100%);
  }

  /* Card Header */
  .resource-card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--space-4);
  }

  .resource-badge {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.65rem;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    padding: 5px 10px;
    background: rgba(234, 36, 43, 0.08);
    color: var(--color-primary, #EA242B);
    border: 1px solid rgba(234, 36, 43, 0.15);
    border-radius: 4px;
    transition: all 0.2s ease;
  }

  .resource-card:hover .resource-badge {
    background: rgba(234, 36, 43, 0.12);
    border-color: rgba(234, 36, 43, 0.25);
  }

  .resource-badge--asset {
    background: rgba(0, 0, 0, 0.04);
    color: #555555;
    border-color: rgba(0, 0, 0, 0.08);
  }

  .resource-card:hover .resource-badge--asset {
    background: rgba(234, 36, 43, 0.08);
    color: var(--color-primary, #EA242B);
    border-color: rgba(234, 36, 43, 0.15);
  }

  /* Download Indicator */
  .download-indicator {
    display: flex;
    align-items: center;
    gap: 4px;
    opacity: 0;
    transform: translateY(-4px);
    transition: all 0.3s ease;
  }

  .resource-card:hover .download-indicator {
    opacity: 1;
    transform: translateY(0);
  }

  .download-icon {
    width: 18px;
    height: 18px;
    color: var(--color-primary, #EA242B);
  }

  .download-text {
    font-family: var(--font-mono);
    font-size: 0.6rem;
    font-weight: var(--font-bold);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #888888;
  }

  /* Card Content */
  .resource-title {
    font-family: var(--font-display);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: #0a0a0a;
    margin-bottom: var(--space-2);
    line-height: 1.35;
    transition: color 0.2s ease;
  }

  .resource-card:hover .resource-title {
    color: var(--color-primary, #EA242B);
  }

  .resource-description {
    font-family: var(--font-body);
    font-size: var(--text-sm);
    color: #666666;
    line-height: 1.6;
    margin: 0;
  }

  /* Asset Cards (smaller) */
  .resource-card--asset .resource-card__inner {
    padding: var(--space-4);
  }

  .resource-card--asset .resource-title {
    font-size: var(--text-sm);
  }

  .resource-card--asset .resource-description {
    font-size: 0.8rem;
  }

  /* ============================================
     RESPONSIVE
     ============================================ */
  @media (max-width: 1200px) {
    .resources-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .resources-grid--assets {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .resources-section {
      padding: var(--space-16) 0 var(--space-20);
    }

    .category-header {
      flex-direction: column;
      gap: var(--space-4);
    }

    .category-icon {
      width: 44px;
      height: 44px;
    }

    .category-icon svg {
      width: 20px;
      height: 20px;
    }

    .resources-grid,
    .resources-grid--assets {
      grid-template-columns: 1fr;
    }

    .resource-card__inner {
      padding: var(--space-5);
    }

    .resource-card--asset .resource-card__inner {
      padding: var(--space-5);
    }

    .download-indicator {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 480px) {
    .resource-category {
      margin-bottom: var(--space-12);
    }

    .category-title {
      font-size: 1.25rem;
    }
  }
</style>

<script>
  // Intersection Observer for scroll animations
  document.addEventListener('DOMContentLoaded', () => {
    const categories = document.querySelectorAll('.resource-category');

    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add('is-visible');
          }
        });
      },
      {
        threshold: 0.1,
        rootMargin: '-50px 0px'
      }
    );

    categories.forEach((category) => observer.observe(category));
  });
</script>

<style is:global>
  /* Category visibility animation */
  .resource-category {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.6s cubic-bezier(0.4, 0, 0.2, 1),
                transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .resource-category.is-visible {
    opacity: 1;
    transform: translateY(0);
  }

  .resource-category:nth-child(2) {
    transition-delay: 0.1s;
  }

  .resource-category:nth-child(3) {
    transition-delay: 0.2s;
  }
</style>
